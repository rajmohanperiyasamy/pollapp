{% include "captcha/options.html" %}
<style>
	input#recaptcha_response_field{float:left;}
	div#recaptcha_image{margin-bottom:10px;}
	a.captcha_reload{text-indent: 999em; margin-top:2px; opacity:0.55; overflow: hidden; width: 21px; height: 21px; display: block; background: url("/static/themes/green/images/global/recaptcha-sprite.png") no-repeat scroll -63px 50% transparent; margin-left: 5px; -moz-transition: opacity 0.3s ;}
	a.captcha_reload:hover{opacity:1;}
</style>
<div id="recaptcha_widget" class="group">

   <div id="recaptcha_image"></div>
   <div class="recaptcha_only_if_incorrect_sol" style="color:red">Incorrect please try again</div>

   <!--span class="recaptcha_only_if_image">Enter the words above:</span-->
   <!--span class="recaptcha_only_if_audio">Enter the numbers you hear:</span-->

   <input type="text" id="recaptcha_response_field" name="recaptcha_response_field" />

   <div style="float:left;"><a class="captcha_reload" href="javascript:Recaptcha.reload()">RELOAD</a></div>
   <!--div class="recaptcha_only_if_image"><a href="javascript:Recaptcha.switch_type('audio')">Get an audio CAPTCHA</a></div-->
   <!--div class="recaptcha_only_if_audio"><a href="javascript:Recaptcha.switch_type('image')">Get an image CAPTCHA</a></div-->

   <!--div><a href="javascript:Recaptcha.showhelp()">Help</a></div-->

 </div>

<script type="text/javascript" src="{{api_server}}/challenge?k={{public_key}}{{error_param}}"></script>
<noscript>
  <iframe src="{{api_server}}/noscript?k={{public_key}}{{error_param}}" height="300" width="500" frameborder="0"></iframe><br />
  <textarea name="recaptcha_challenge_field" rows="3" cols="40"></textarea>
  <input type='hidden' name='recaptcha_response_field' value='manual_challenge' />
</noscript>
