{% extends "user_base.html" %}
{% load ds_utils %}
{% load tabs %}
{% load i18n %}
{% load thumbnail %}
{% block pagetitle %}{% if category %}{% seo_format_tag module='Videos' title=category.seo_title code='LT' category=category.name as seo_meta_title %}{% else %}{% seo_format_tag module='Videos' title=seo.seo_title code='MT' as seo_meta_title %}{% endif %}{{seo_meta_title}}{% endblock %}
{% block meta %}
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="description" content="{{seo.seo_description}}" />
{% endblock %}

{% block navigation %}
{% endblock %}

{% block alertbar %}
	<div class="alert alert-info pD0 mRt-30">
		<div class="container-fluid">
			<div class="pD100 cLrFx">
				<p class="ib fS14 fW-bLd mRb0 mRt4">This is how listing looks like.</p>
				<div class="pLrT">
					<a href="{% url 'user_video_ajax_edit_video' %}?video_id={{video.id}}" class="btn btn-light fS12 fW-bLd mRl5" title="Edit" data-target="#update_video_description"><i class="bUi-iCn-rVeW-12 mRr5" aria-hidden="true"></i> Edit</a>
					<a href="{% url 'user_video_home_listingboard' %}" class="btn btn-light fS12 fW-bLd mRl5"><i class="bUi-iCn-dSbB-16 fS12 mRr5" aria-hidden="true"></i> Content Manager</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block content %}
			<input id="ajax_update" type="hidden" name="ajax_update" value="{% url 'user_video_ajax_edit_video' %}">
			<div class="main span8">
                <section class="sCn pD300 aRtCL-pSt pSt-vW-mDe">
                    <header class="pSt-hDr">
                        <div class="pSt-tLbR">
                            <div class="pSt-mTa pLlT"><a href="{{video.category.get_absolute_url}}" title="{% trans 'Go to' %} {{video.category}}" class="pSt-cTgRy lBl dFt mNi uC">{{video.category}}</a></div>
                            {% with video as object %}
                            <div class="pLrT mRt-4">
                                {% include 'default/social-share-links.html' %}
                            </div>
                            {% endwith %}
                        </div>
                        <h1 class="pSt-tTl">{{video.title}}</h1>
                        <ul class="pSt-mTa unstyled">
                            <li class="pSt-mTa-iTm ib">
                                <span class="pSt-mTa-aThR">{% trans 'By ' %}<a href="{% url 'user_profile' video.created_by.profile_slug %}" title="Go to the profile of {{video.created_by.display_name}}" class="pSt-aThR">{{video.created_by.get_full_name}}</a></span>
                            </li>
                            <li class="pSt-mTa-iTm ib sPrTr">
                                <span class="pSt-pBlSd-dT"><time class="pSt-dT">{{video.published_on|ds_site_dateformat}}</time></span>
                            </li>
                        </ul>
                    </header>
                    <div class="row-fluid">
                        <div class="mR030">
                            <div class="fLxVdO mRt20 clearfix mRb20">
                                <iframe width="100%" height="450" src="{{video.get_video_url}}?theme=light&rel=0&autoplay=1" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                            </div>
                            <div class="pSt-cNt">
                                <div class="pSt-cNt-iN">
                                    <div class="pSt-fLd body">
                                        {% autoescape off %}{{video.description|urlize|url_target_blank}}{% endautoescape %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>		
			<div id="update_video_description" class="modal hide fade mW50" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		        <div class="modal-header">
		            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		            <h4 id="myModalLabel" class="mR50">Edit Video Details</h4>
		        </div>
		        <div class="modal-body">
					<div style="text-align: center; width: 100%;">
						<img src="{{STATIC_URL}}ui/images/global/loading.gif" align="...">
					</div>
		        </div>
		        <div class="modal-footer">
		            <button class="btn btn-light" type="submit" data-dismiss="modal">Cancel</button>
		            <button class="btn btn-primary" type="submit" onclick="edit_video_prop($('#videoid').val(), $('#videostatus').val());">Done</button>
		        </div>
		    </div>
{% endblock %}
{% block footerarea %}
	<script type="text/javascript" src="{{ STATIC_URL }}js/videos/user_video.js"></script>
	<script type="text/javascript">
		$(document).ready(function(){
			
			$('[data-target="#update_video_description"]').click(function(ev) {
			   ev.preventDefault();
			   target = $(this).attr("href");
			
			   // load the url and show modal on success
			   $("#update_video_description .modal-body").load(target, function() {
			        $("#update_video_description").modal("show");
			   });
			});
	
	});
	</script>
{% endblock %}

