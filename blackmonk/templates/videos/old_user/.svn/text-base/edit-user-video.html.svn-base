{% load i18n %}
<div id="ajax_content_loading_seo" style="display:none;padding-top:150px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Updating Video.' %}</p>
</div>
<script type="text/javascript" src="{{ STATIC_URL }}js/jquery/jquery.validate.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	$("#mform").validate({
		highlight: function(element, errorClass){$(element).parent().parent().addClass('field-error');$(element).addClass('error');},
		unhighlight: function(element, errorClass){$(element).parent().parent().removeClass('field-error');$(element).removeClass('error');},
		errorPlacement: function(error, element){},
	   	rules:{
	    	title: "required",
			category: "required",
			description: "required",	
			yt_videos_id:"required"	
	   	}
	});
});
</script>
<div class="main_col" id="ajax_content_seo">
	{% if msg %}<div class="message">{{msg}}</div>{% endif %}
	{% if form.errors %}
		<div class="messageerror" >
			<strong>{% trans 'There is a problem with your submission' %}</strong>
            <ul style="list-style:square;margin-left:20px;">
           		{% for field in form %}
           			{% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
          	 	{% endfor %}
			</ul>
	 	</div>
	{% endif %}
	<div id="add-new-category" class="modal-form">
    <form name="mform" id="mform" method="post" class="add_category">{% csrf_token %}
    	<div class="fields hform">
    		<div id="" class="field-group">
    			<div class="type-text">
                    <div class="value">
						<input type="hidden" id="id_id" name="id" value="{{seo.id}}">
                    </div>
                </div>  
					<div class="field text-field">	
		           	    <div class="label"><label>{% trans 'Video Source' %}<span class="required-field">*</span></label></div>	
						<!--http://www.youtube.com/watch?v=OLKdUlS-ArY&feature=g-vrec&context=G248e499RVAAAAAAAAAA
			            --><div class="value"><input type="text" class="fm" value="{% trans 'http://www.youtube.com/watch'%}?v={{video.video_id}}" name="yt_videos_id" id="yt_videos_id"></div>	
		            </div>
				
	        	     <div class="field text-field">	
		           	    <div class="label"><label>{% trans 'Title' %}<span class="required-field">*</span></label></div>	
			            <div class="value">{{form.title}}</div>	
		            </div>
		           	<div class="field text-field">	
		                <div class="label"><label{% trans '>Description' %}<span class="required-field">*</span></label></div>	
		                <div class="value">{{form.description}}</div>	
		            </div>
		           	<div class="field text-field">	
		                <div class="label"><label>{% trans 'Category' %}<span class="required-field">*</span></label></div>
		                <div class="value">{{form.category}}</div>
					</div>    
				</div>    
			</div>    
        <div class="form-submit right group">
		  	<button role="button" class="cform-button prime"  type="button" onclick="edit_video_prop({{video.id}},{% if video.status = 'P' %}'P'{% else%}'N'{% endif %});"><span class="cform-button-text">{% trans 'Submit' %}</span></button>
		 {% if not video.status = 'P' %}<button role="button" class="cform-button prime"  type="button" onclick="edit_video_prop({{video.id}},'D');"><span class="cform-button-text">{% trans 'Save in Draft' %}</span></button>{% endif %}

		</div>           
    </form>
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/inline.js"></script>
	
</div>

