{% block pagetitle %}{% seo_format_tag module='Events' title=event.seo_title code='DT' category=category.name as seo_meta_title %}{{seo_meta_title}} {% endblock %}
{% block meta %}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="{{ globalsettings.city }} Events | {{ event.seo_description|truncatewords:50 }}" />
	
	<!-- Facebook-->
	<meta property="og:type" content="website"/>
	<meta property="og:url" content="{{globalsettings.website_url}}{{event.get_absolute_url}}"/>
	<meta property="og:title" content="{{ event.title }}"/>
	{% if event.album.album_photos.all.0.photo %}<meta property="og:image" content="{{globalsettings.website_url}}{{ event.album.album_photos.all.0.photo.url }}"/>{% endif %}
	<meta property="og:site_name" content="{{globalsettings.domain}}"/>
	<meta property="og:description" content="{{ event.event_description|striptags|truncatechars:200 }}"/>
<!-- Twitter-->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:url" content="{{globalsettings.website_url}}{{event.get_absolute_url}}">
	<meta name="twitter:title" content="{{ event.title }}">
	<meta name="twitter:description" content="{{ event.event_description|striptags|truncatechars:200 }}">
	{% if event.album.album_photos.all.0.photo %}<meta name="twitter:image" content="{{globalsettings.website_url}}{{ event.album.album_photos.all.0.photo.url }}">{% endif %}
	<meta name="twitter:domain" content="{{globalsettings.domain}}">
{% endblock %}
