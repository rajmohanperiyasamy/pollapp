{% load i18n %}

{% if is_paginated %}
    <div class="pGn pGn-cTr">
        <ul>
            {% if has_previous %}
                    <li><a href="{{url}}?page={{ prev }}{% if search %}&src=true&kw={{kw}}{% endif %}{% if type %}&type={{type}}{% endif %}" class="bm_pgntn_anchr" id="{{ prev }}"><i class="bUi-iCn-aRw-l-16 fS12"></i></a></li>
            {% endif %}
            {% if not in_leading_range %}
                {% for num in pages_outside_trailing_range %}
                    {% ifequal num current_page %}
                         <li class="aCtV"><span title="{% trans 'Page' %} {{ num }} ">{{ num }}</span></li>
                    {% else %}
                         <li><a title="{% trans 'Page' %} {{ num }} " href="{{url}}?page={{ num }}{% if search %}&src=true&kw={{kw}}{% endif %}{% if type %}&type={{type}}{% endif %}" class="bm_pgntn_anchr">{{ num }} </a></li>
                    {% endifequal %}
                {% endfor %}
                <li><span>...</span></li>
            {% endif %} 
            {% for num in page_numbers %}
                {% ifequal num current_page %}
                     <li class="aCtV"><span title="{% trans 'Page' %} {{ num }} ">{{ num }}</span></li>
                {% else %}
                    <li><a title="{% trans 'Page' %} {{ num }} " href="{{url}}?page={{ num }}{% if search %}&src=true&kw={{kw}}{% endif %}{% if type %}&type={{type}}{% endif %}" class="bm_pgntn_anchr">{{ num }}</a></li>
                {% endifequal %}
            {% endfor %}
            {% if not in_trailing_range %}
                <li><span>...</span></li>
                {% for num in pages_outside_leading_range reversed %}
                    {% ifequal num current_page %}
                         <li class="aCtV"><span title="{% trans 'Page' %} {{ num }} ">{{ num }}</span></li>
                    {% else %}
                        <li><a title="{% trans 'Page' %} {{ num }} " href="{{url}}?page={{ num }}{% if search %}&src=true&kw={{kw}}{% endif %}{% if type %}&type={{type}}{% endif %}" class="bm_pgntn_anchr">{{ num }}</a></li>
                    {% endifequal %}
                {% endfor %}
            {% endif %}
            {% if has_next %}
                <li><a  href="{{url}}?page={{ next }}{% if search %}&src=true&kw={{kw}}{% endif %}{% if type %}&type={{type}}{% endif %}" id="{{next}}" class="bm_pgntn_anchr"><i class="bUi-iCn-aRw-r-16"></i></a></li>
            {% endif %}
        </ul>
    </div>
{% endif %}