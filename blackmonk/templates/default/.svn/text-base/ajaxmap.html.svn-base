<script type="text/javascript">
    $.fn.emulateTransitionEnd = function(duration) {
      return true;
    };
    var loaded_enlarge_map = false;
    $(document).ready(function(){
        $('#enlargemap').on('shown.bs.modal', function (e) {
            if (loaded_enlarge_map == false){
                var lat=$("a[href=#enlargemap]").attr('lat');
                var lon=$("a[href=#enlargemap]").attr('lon');
                if (typeof lat != 'undefined' && typeof lon != 'undefined')
                {
                    var zoom=parseInt($("a[href=#enlargemap]").attr('zoom'));
                    var pointername=$("a[href=#enlargemap]").attr('pointername');
                    load("map-canvas",lat,lon,zoom,pointername,"")
                }
                loaded_enlarge_map = true;
            }
        });
    });
</script>