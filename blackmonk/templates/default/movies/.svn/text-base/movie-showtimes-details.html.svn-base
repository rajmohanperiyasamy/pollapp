    <script src="{{STATIC_URL}}themes/js/jquery.calendarPicker.js"></script> 
    <script src="{{STATIC_URL}}themes/js/bm-date-format.js"></script>   
    <script src="{{STATIC_URL}}themes/js/jquery.raty.js"></script>
    <script>
        $(document).ready(function(e) {
            // Calendar 
            var calendarPicker1 = $("#dTpKr").calendarPicker({
                monthNames:["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
                dayNames: ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"],
                years:0,
                reYe:true,
                months:0,
                days:4,
                showDayArrows:false,
                disablePrvDate:true,
                //useWheel:true,
                colWidth: 37,
                
                callback:function(cal){
                   retreive_showtimes_by_date(cal.currentDate.format("yyyy-mm-dd"));         
                }                                              
                
            });    
                   
            try{$(".fxslider").fxslider();}
            catch(e){}    
            
            {% if movie.ratings != 0 %}
                $('#id_rating_{{movie.id}}').raty({number: 5, readOnly: true, score: {{movie.ratings}}, size: 12});
            {% endif %}                       

        });
        
        function retreive_showtimes_by_date(sdate){
            $('#id_showtimes_append_div').addClass('oP50');
            $.ajax({
                type: "get",
                url: '{% url 'movies_get_showtimes_by_date' %}?mid={{movie.id}}',
                data: 'sdate='+sdate,
                dataType:'json',
                success: function(data){
                        if(data.status){
                            if(!data.show_screens){$('#id_map_canvas_div').hide();}
                            else{$('#id_map_canvas_div').show();}   
                            $('#id_showtimes_append_div').empty().html(data.html);
                            $('#id_showtimes_append_div').removeClass('oP50');
                            $('html, body').animate({
                                 scrollTop: $('#dTpKr').offset().top-20
                             }, 500);
                        }
                    }
            });
        }
    </script>
