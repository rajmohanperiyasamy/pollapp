{% load i18n %}
{% load bm_flower_tags %}
<!-- Module Search -->
     <div class="pD2015 bM-bX sRcHbR">
         <div class="row-fluid">
             <div class="span9 fRm">
                 <form class="form-search mRb0" action="{% url 'flowers_flowers_search' %}" method="get">
                     <div class="mDl">
                         <h3 class="mDl-nM">
                             <i aria-hidden="true" class="bUi-iCn-sRh-16"></i>
                             <span class="ib">{% trans 'Search FLowers' %}
                                 <i aria-hidden="true" class="bUi-iCn-aNg-rT-12 cLr-lTgRy hT hP"></i>
                             </span>
                         </h3>
                     </div>
                     <div class="span5">
                         <input type="text" class="" id="id_find" name="q" value="{{q}}" placeholder="{% trans 'Roses, FLoor Plants etc..' %}">
                     </div>
                     <div class="span3">
                         {% get_flower_categories type='child' as categories %}
                         <select id="category" name="category" class="bUiSlCt-wHt">
                             <option value="all">{% trans 'In all Categories' %}</option>
                             {% for cat in categories %}
                                <option title="{{ cat.name|title }}" {% if category.id == cat.id %} selected="selected" {% endif %} value="{{cat.id}}">{{ cat.name|title }}</option>
                             {% endfor %}
                         </select>
                     </div>
                     <div class="ib sUb-bTn mRl12 mRl0mP">
                         <button type="submit" class="btn btn-primary">
                         <i aria-hidden="true" class="bUi-iCn-sRh-16"></i>
                         </button>
                     </div>
                 </form>
             </div>
         </div>
     </div>
 <!-- Module Search Ended-->
 
<script>
$(function () {
    $('#id_find').typeahead({
        ajax: { url: '{% url 'flowers_flowers_auto_suggest' %}',type: "GET",
                triggerLength: 1 }
    });
});
</script>