{% extends base %}
{% load get_settings %}
{% load i18n %}
{% block pagetitle %}{% trans 'Advertise With Us' %} | {{globalsettings.domain}} {% endblock %}
{% block meta %}
    <meta name="description" content="{% trans 'Advertise With Us' %}, {{ globalsettings.city }}" />
    <meta name="keywords" content="{% trans 'Advertise With Us' %}, {% trans 'Advertise' %}, {{ globalsettings.domain }}, {{ globalsettings.city }}" />
{% endblock %}
{% block head %}
	<link rel="stylesheet" href="{{STATIC_URL}}css/f.v0.2.css" type="text/css" media="all"/>
	<link rel="stylesheet" type="text/css" href="{{STATIC_URL}}themes/green/css/as_static.css">
    <script type="text/javascript" src="{{ STATIC_URL }}js/jquery/jquery.validate.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $("#mform").validate({
            highlight: function(element, errorClass){$(element).parent().parent().addClass('field-error');$(element).addClass('error');},
            unhighlight: function(element, errorClass){$(element).parent().parent().removeClass('field-error');$(element).removeClass('error');},
            errorPlacement: function(error, element){},
               rules:{
                name:"required",
                company:"required",
                phone:{required:true},
                email: {required:true,email:true},
               }

        });
    });
    </script>
{% endblock %}
{% block content %}
{% for message in messages %}
	<div id="alert_bar" class="alert {% if message.tags %}alert-{{ message.tags }}{% endif %} pD0 mRt-20mX979" style="{% if not message %}display:none;{% endif %}">
       <div class="container-fluid">
           <div class="pD100 cLrFx">
               <p id="message" class="ib fS14 fW-bLd mRb0 mR50">{% if message %}{{ message }}{% endif %}</p>
           </div>
       </div>
    </div>
{% endfor %}
<div class="container-fluid"> 
	<div class="row-fluid">
	    <div class="span8 main">
	        <section class="sCn">
	        	<div class="sCn-tTl sCn-tTl-bR">
	                <h3 class="clearfix oFl">
	                    <span class="ib pLlT">{% trans 'Advertise With Us' %}</span>
	                </h3>  
					{% if form.errors %}
				        <div class="messageerror">
				            <strong>{% trans 'There is a problem with your submission' %}</strong>
				            <ul style="list-style:square;margin-left:20px;">
				               {% for field in form %}
				                   {% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
				               {% endfor %}
				            </ul>
				        </div>
				    {% endif %}
					<p class="mR0 mRt4 cLr-gRy">{% blocktrans with globalsettings.city as city %}Grow Your Business By Reaching Local {{ city }} Customers ONLINE! We can help you to connect with your target audience through a highly customized advertising campaign. Please contact us for more details.{% endblocktrans %}</p>      
                </div>
				<form class="form-horizontal" action="{% url 'common_advertise' %}" method="post"  name="mform" id="mform" onsubmit="return validate();">
                    <div class="control-group mRb10">
                        <label class="control-label">Your Name <em class="cLr-rEd">*</em></label>
                        <div class="controls">
                            {{form.name}}
                        </div>
                    </div>
                    <div class="control-group mRb10">
                        <label class="control-label">Company <em class="cLr-rEd">*</em></label>
                        <div class="controls">
                            {{form.company}}
                        </div>
                    </div>
                    <div class="control-group mRb10">
                        <label class="control-label">Mobile Phone <em class="cLr-rEd">*</em></label>
                        <div class="controls">
                            {{form.phone}}
                        </div>
                    </div>
                    <div class="control-group mRb10">
                        <label class="control-label">Your Email <em class="cLr-rEd">*</em></label>
                        <div class="controls">
                            {{form.email}}
                        </div>
                    </div>
                    <div class="control-group mRb10">
                        <label class="control-label">Additional notes for us</label>
                        <div class="controls">
                            {{form.notes}}
                        </div>
                    </div>
                    <div class="control-group mR0 mRt30">
                        <div class="controls">
                        	<button class="btn btn-primary fS12 fW-bLd " type="submit">Submit</button>
                        </div>
                    </div>
                </form>
 			</section>
        </div>
	</div>
</div>
<script type="text/javascript">
		function close_msg(){
			$('#alert_bar').removeClass('active');
			setTimeout(function(){
				$('.alert').css('display','none');
				$('.alert').removeClass();
				$('.alert').addClass('alert-bar');
			},200);
		}
		{% if messages %}
			setTimeout(function(){close_msg()},10000);
		{% endif %}
</script>
{% endblock %}