{% load i18n %}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>{% trans 'Reset Password' %} | </title>
<meta name="description" content="">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="{{ STATIC_URL }}themes/css/base.css">
<link rel="shortcut icon" href="static/img/favicon.ico">
</head>
<body>
<div id="site-wrapper" class="oFl">
    
    <header id="mast-head" class="mRb30">
	    <div class="titlebar container-fluid vD">
	    </div>
	</header>

    <!-- /.masthead -->
    <div id="site">
    	<div class="titlebar container-fluid sub_headder rLvE hD">
        </div>
        <div id="content-container" class="tBl-bLk">
        	<div class="tBl-cEl">
	            <div class="container-fluid">
	            	<div class="row-fluid">
	            		<div class="span5 sP6mN980 sP8mN768 sP10p sP12mX640 cTr-bLk pL0">
	            			<section class="sCn tXt-lT pD30">
		            			<h2 class="mRt0">{% trans 'Reset your password?' %}</h2>
		            			<div class="row-fluid">
									
									<form class="signup-email" action="{% url 'retrive_password' code email id %}" id="signin_form" name="signup_form" method="post">{% csrf_token %}
            						{% if form.errors %}
										{% for field in form %}
						           			{% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
						          	 	{% endfor %}
									{% endif %}
            	 					<input type="hidden" name="next" value="{{ next }}" />
									<h3 class="fS14 cLr-gRy mRb20">{% trans "Please enter your new password for recovery process." %}</h3>
									<fieldset>
	                    				<div class="control-group">
		                                    <label class="control-label">{% trans 'Password:' %}*</label>
		                                    <div class="controls">
		                                        {{ form.password1 }}
		                                    </div>
		                                </div>
										<div class="control-group">
		                                    <label class="control-label">{% trans 'Confirm Password:' %}*</label>
		                                    <div class="controls">
		                                        {{ form.password2 }}
		                                    </div>
		                                </div>
									</fieldset>
									<div class="form-actions pD0">
									  <button type="submit" class="btn btn-primary fS12 fW-bLd ">{% trans 'Submit' %}</button>
									</div>
									</form>
		            			</div>
	            			</section>
	            		</div>
	                </div>
	            </div>
        	</div>
        </div>        
    </div>
    <!-- #site-wrapper --> 
</div>
<!-- #site --> 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="{{ STATIC_URL }}js/jquery/jquery.validate.min.js"></script>
<script type="text/javascript">
	$("#signin_form").validate({
		ignore: "",
		highlight: function(element, errorClass){$(element).addClass('error');$(element).parent().parent().addClass('error');},
		unhighlight: function(element, errorClass){$(element).removeClass('error');$(element).parent().parent().removeClass('error');},
		errorPlacement: function(error, element){},
	   	rules:{
			password1:"required",
			password2: {
		      equalTo: "#id_password1",
			  required: "True"
		    },
	   	}
	});
</script>
</body>
</html>