<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>{% trans 'Forgot Password' %} | </title>
<meta name="description" content="">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="{{ STATIC_URL }}themes/css/base.css">
<link rel="shortcut icon" href="static/img/favicon.ico">
</head>
<body>
<div id="site-wrapper" class="oFl">
    
    <header id="mast-head" class="mRb30">
	    <div class="titlebar container-fluid vD">
	    </div>
	</header>

    <!-- /.masthead -->
    <div id="site">
    	<div class="titlebar container-fluid sub_headder rLvE hD">
        </div>
        <div id="content-container" class="tBl-bLk">
        	<div class="tBl-cEl">
	            <div class="container-fluid">
	            	<div class="row-fluid">
	            		<div class="span5 sP6mN980 sP8mN768 sP10p sP12mX640 cTr-bLk pL0">
	            			<section class="sCn tXt-lT pD30">
		            			<h2 class="mRt0">{% trans 'Forgot your password?' %}</h2>
		            			<div class="row-fluid">
									{% if success %}
									<h3 class="fS14 cLr-gRy mRb20">Please check your mail to complete recovery process.</h3>
									{% else %}
									<form class="signup-email" action="{% url 'usermgmt_forgotpwd' %}" id="signin_form" name="signup_form" method="post">{% csrf_token %}
            	
            	 					<input type="hidden" name="next" value="{{ next }}" />
									<h3 class="fS14 cLr-gRy mRb20">{% trans "Please enter your email address for recovery process." %}</h3>
									<fieldset>
	                    				<div class="control-group">
		                                    <label class="control-label">{% trans 'E-mail address' %}*</label>
		                                    <div class="controls">
		                                        <input type="text" name="email">
												{% if error %}Oops!!! Your email-id doesn't match with our Database.{% endif %}
												{% if msg %}{{msg}}{% endif %}
		                                    </div>
		                                </div>
									</fieldset>
									<div class="form-actions pD0">
									  <button type="submit" class="btn btn-primary fS12 fW-bLd ">{% trans 'Submit' %}</button>
									</div>
									</form>
									{% endif %}
		            			</div>
	            			</section>
	            			<p class="tXt-cTr pDt10 mRb30 cLr-gRy fS13">{% trans 'Go back' %}<a href="/account/signin/" class="fW-bLd">{% trans 'Sign In' %}</a></p>
	            		</div>
	                </div>
	            </div>
        	</div>
        </div>        
    </div>
    <!-- #site-wrapper --> 
</div>
<!-- #site --> 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="{{ STATIC_URL }}js/jquery/jquery.validate.min.js"></script>
<script type="text/javascript">
	$("#signin_form").validate({
		ignore: "",
		highlight: function(element, errorClass){$(element).addClass('error');$(element).parent().parent().addClass('error');},
		unhighlight: function(element, errorClass){$(element).removeClass('error');$(element).parent().parent().removeClass('error');},
		errorPlacement: function(error, element){},
	   	rules:{
			email:{required:true,email:true},
	   	}
	});
</script>
</body>
</html>