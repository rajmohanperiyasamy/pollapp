    print_html+='<div class="dTs-cRd">';
    print_html+='<div class="oTsT-hRz mRb20"><div class="bUi-tMb-wPr"><img style="width:100%" src="'+$('#id_offr_dtl_img_'+oid).attr('src')+'" class="mDa-oT">';
    print_html+='</div>';                
    print_html+='</div>';                     
    print_html+='<div class="mRb20"><h5 class="cLr-bLk hide">Description</h5>';                
    print_html+='<div class="dSc sMl cLr-dRk">'+$('#id_offr_dtl_desc_'+oid).text()+'</div>';           
    print_html+='<ul class="iCnC-lSt iCn12"><li class="iCnC-lSt-iTm cLr-gRy fS13"><i class="bUi-iCn-cLdR-12 iCn-rEd"></i>'+$('#id_offr_dtl_dates_'+oid).text()+'</li>'                
    print_html+='</ul>'            
    print_html+='</div>';                  
    print_html+='</section>';                      
    var $PrintDiv = $(print_html);                    
    $PrintDiv.jqprint();
}

var disqus_identifier  = 'Business-{{business.id}}';
</script>    
{% endblock %}
