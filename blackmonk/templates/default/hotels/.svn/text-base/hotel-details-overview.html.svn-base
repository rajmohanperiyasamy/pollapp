{% load i18n %}
{% load truncate_filter %}
{% load comparison %}

<div class="col_11 bm_dev_hotel_content" id="hotel_overview_content">
<div class="group">
	<div class="col_6" id="hotel_details">
		<div id="as_desc" class="description">
		<h3 class="hotel_desc_heading">{% trans 'Description' %}</h3>
		<div id="as_bs_synopsis">
		{% autoescape off %}{{ hotel.details.property_description }}{% endautoescape %}  
		</div>
		<p class="more_des"><a class="as_bs_toggle click_pvnt" href="javascript:void()">({% trans 'see more' %})</a></p>
		</div>
		
		{% if hotel.details.area_information %}
		<div id="as_desc" class="description">
		<h3 class="hotel_desc_heading">{% trans 'Area Information' %}</h3>
		<div id="id_area_info_less">
		{% autoescape off %}{{hotel.details.area_information|truncate_chars:350}}{% endautoescape %}  
		<p><a href="javascript:void(0);" onclick="content_slide_more_less($(this).closest('div').attr('id'),$(this).closest('div').next('div').attr('id'));">({% trans 'see more' %})</a></p>
		</div>
		<div style="display:none;" id="id_area_info_full">
		{% autoescape off %}{{hotel.details.area_information}}{% endautoescape %}  
		<p><a href="javascript:void(0);" onclick="content_slide_more_less($(this).closest('div').prev('div').attr('id'),$(this).closest('div').attr('id'));">({% trans 'see less' %})</a></p>
		</div>
		</div>
		{% endif %}
		
		{% if hotel.details.driving_directions %}
		<div id="as_desc" class="description">
		<h3 class="hotel_desc_heading">{% trans 'Driving Directions' %}</h3>
		<div id="id_driving_info_less">
		{% autoescape off %}{{hotel.details.driving_directions|truncate_chars:350}}{% endautoescape %} 
		<p><a href="javascript:void(0)" onclick="content_slide_more_less($(this).closest('div').attr('id'),$(this).closest('div').next('div').attr('id'));">({% trans 'see more' %})</a></p> 
		</div>
		<div id="id_driving_info_full" style="display:none;">
		{% autoescape off %}{{hotel.details.driving_directions}}{% endautoescape %} 
		<p><a href="javascript:void(0)" onclick="content_slide_more_less($(this).closest('div').prev('div').attr('id'),$(this).closest('div').attr('id'));">({% trans 'see less' %})</a></p> 
		</div>
		</div>
		{% endif %}

		{% if hotel.details.hotel_policy %}
		<div id="as_desc" class="description">
		<h3 class="hotel_desc_heading">{% trans 'Hotel Policy' %}</h3>
		<div id="id_policy_less">
		{% autoescape off %}{{hotel.details.hotel_policy|truncate_chars:350}}{% endautoescape %} 
		<p><a href="javascript:void(0)" onclick="content_slide_more_less($(this).closest('div').attr('id'),$(this).closest('div').next('div').attr('id'));">({% trans 'see more' %})</a></p> 
		</div>
		<div style="display:none;" id="id_policy_full">
		{% autoescape off %}{{hotel.details.hotel_policy}}{% endautoescape %} 
		<p><a href="javascript:void(0)" onclick="content_slide_more_less($(this).closest('div').prev('div').attr('id'),$(this).closest('div').attr('id'));">({% trans 'see less' %})</a></p> 
		</div>
		</div>
		{% endif %}
		
		<span id="call_out_span" style=""></span>
	</div>
	<div class="col_5 mr_0">
        <ul class="accordian9 group">
            <li class="acdn_row first_accdn" id="hotel_photos"><a class="bar_title click_pvnt" href="javascript:void(0);">{% trans 'Photos' %}</a>
            <div style="display:block;" class="acdn_content">
                <div class="photos">
                         <div style="position:relative;" class="photo_s">
                            <div style="z-index:100" class="loader_16"></div>
                            <img width="284" id="full_imgs" src="{{ hotel.hotel_images.all.0.image_big}}">
                        </div>
                         <ul class="thumbs group">
							{% if_greater_or_equal hotel.hotel_images.all.count 4 %}
								<li><a href="javascript:void(0)"  class="selected click_pvnt" > <img src="{{ hotel.hotel_images.all.0.image_thumbnail}}" datasrc="{{hotel.hotel_images.all.0.image_big}}" alt="{{ hotel.hotel_images.all.0.caption}}" title="{{ hotel.hotel_images.all.0.caption}}" height="75" width="75" class="hotel_img_thumb" ></a></li>
								<li><a href="javascript:void(0)"  class="click_pvnt" > <img src="{{ hotel.hotel_images.all.1.image_thumbnail}}" datasrc="{{hotel.hotel_images.all.1.image_big}}" alt="{{ hotel.hotel_images.all.1.caption}}" title="{{ hotel.hotel_images.all.1.caption}}" height="75" width="75" class="hotel_img_thumb" ></a></li>
								<li><a href="javascript:void(0)"  class="click_pvnt" > <img src="{{ hotel.hotel_images.all.2.image_thumbnail}}" datasrc="{{hotel.hotel_images.all.2.image_big}}" alt="{{ hotel.hotel_images.all.2.caption}}" title="{{ hotel.hotel_images.all.2.caption}}" height="75" width="75" class="hotel_img_thumb" ></a></li>
								<li><a href="javascript:void(0)"  class="click_pvnt" > <img src="{{ hotel.hotel_images.all.3.image_thumbnail}}" datasrc="{{hotel.hotel_images.all.3.image_big}}" alt="{{ hotel.hotel_images.all.3.caption}}" title="{{ hotel.hotel_images.all.3.caption}}" height="75" width="75" class="hotel_img_thumb" ></a></li>
						   {% else %}
								{% for img in hotel.hotel_images.all %}
									{% if_greater hotel.hotel_images.all.count 1 %}
							 			<li><a href="javascript:void(0)"  class="selected click_pvnt" > <img src="{{img.image_thumbnail}}" datasrc="{{img.image_big}}" alt="{{img.caption}}" title="{{img.caption}}" height="75" width="75" class="hotel_img_thumb" ></a></li>
									{% endif_greater %}
								{% endfor %}
						   {% endif_greater_or_equal %}
                        </ul>
                        <div class="clear"></div>
                </div>
            </div>
            <p class="more_link99" id="id_more_photos"><a href="javascript:void(0);" class="bm_dev_more_photos" id="hotel_photos">{% trans 'More' %}</a></p> 
        </li>				
        </ul>                                                                            
   	</div>
</div>                
</div>

