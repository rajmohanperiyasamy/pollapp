{% extends "default/base.html" %}
{% load i18n %}
{% load ds_utils %}
{% load thumbnail %}
{% load available_apps %}
{% block pagetitle %}{{seo.seo_title}}{% endblock %}
{% block meta %}
	<meta name="description" content="{{seo.seo_description}}" />
{% endblock %}
{% block head %}
<style>
.error_sw{border: 2px solid #e33100 !important;padding:2px !important;color:#e33100;}
.error_msg{color:#C00000;}
div#formContainer form dl.horizontal {margin:0;padding:10px 0 0;}
div#formContainer form dl.base {margin:0;padding:0;text-align:right;}
div#formContainer form dl.horizontal dt {clear:both;float:left;line-height:1.25em;text-align:left;white-space:nowrap;width:120px;font-weight:bold;}
div#formContainer form dl.horizontal dd {line-height:1.35em;margin-left:130px;position:relative;}
#howItWorks{padding:30px 0}
#howItWorks h2{color:#090;font-size:26px; font-weight:bold;border-bottom:1px solid #e6e6e6;margin-bottom:14px;margin-top:10px;}
#howItWorks p{margin:10px 0;font-size:14px;line-height:16px;}
#howItWorks .col3{width:326px;float:left;}
#howItWorks .col3 .col_inner{padding-right:30px; padding-bottom:30px;}
#howItWorks #earn_bid .title_block{padding:6px 0 0px}
#howItWorks #earn_bid .title_block h3{color:#D05F28; font-size:22px; font-weight:normal;float:left;width:200px;line-height:22px;}
#howItWorks #earn_bid .title_block .earn_points{width:90px;float:right;font-size:18px;font-weight:bold;color:green;line-height:22px;text-align:right;} 
#howItWorks #earn_bid .detail{font-size:14px; line-height:16px;padding:10px 0;}
#howItWorks #earn_bid .do_list{padding-bottopm:10px;}
#howItWorks #earn_bid .do_list li{display:block;width:100%;}
#howItWorks #earn_bid .do_list li strong{font-size:14px; font-weight:bold;float:left;}
#howItWorks #earn_bid .do_list li input{float:right; margin-top:0px;}
.contest-col-left, .contest-col-right {float:left; position:relative; }
.contest-col-left { width:470px;background-color:#f4f4f4; padding:10px;-moz-border-radius:10px; margin-right:40px;position:relative  }
.contest-col-right { width:420px; }
.specOffers .item{width:140px; margin-right:10px; float:left; text-align:center}
.specOffers .last{margin-right:0;}
a.offer_btn{background:#0C0; color:#FFF; font-size:11px; text-transform:uppercase; padding:2px 3px; text-decoration:none; font-weight:bold; border-bottom:1px solid #090}
#earn_info{padding:10px 10px 20px 10px; margin-top:20px; background-color:#f9f9f9; border:1px solid #e5e5e5}
#earn_info h3{font:bold 16px/16px Georgia, serif; margin-bottom:20px;}
#earn_info li{display:inline;}
#earn_info li a{display:block;float:left; width:50%;padding:3px 0;}
#earn_info li h4{font-size:14px;line-height:18px;font-weight:bold;}
#earn_info li a span{color:#777; font-size:12px;line-height:12px;}
</style> 
{% endblock %}
{% block content %}
{% load_availableapps_obj %}
<div id="c-10x6x8" class="clearfix"> 
	{% for qanda in qandas %}
		{% if forloop.first %}
			<div class="title" style="font:11px/16px arial, sans-serif;color:#808080; margin-bottom:10px;">{{qanda.title}}</div>
 			<div class="subtext" style="font-size:14px; color:#454545;line-height:18px;; margin-bottom:30px;">{{qanda.description}}</div>
		{% endif %}
	{% endfor %}
	<div class="head" style="text-align:center;background-color:#C30; padding:5px 10px;margin-bottom:0;position:relative; z-index:1; top:-10px; left:-10px;-moz-border-radius:6px 6px 0  0;">
		<h2 style="font:12px Arial, Helvetica, sans-serif; color:#FFF; margin:0; padding:0; font-weight:bold">{% if sweepstakes %}ACTIVE CONTEST{% else %}NO ACTIVE CONTEST{% endif %}</h2>
	</div>
	{% if sweepstakes %}
	{% for cont in sweepstakes %}
		<div class="contest-col-left" style="margin-bottom:10px;width:95%">
			<div class="weeklyPrize">
				<div class="body">
					<a href="{% url 'sweepstakes_detail' cont.id cont.slug %}">
		   				<div  style="float:left;width:170px;margin-left:10px;">
							<img width="150" height="100" src="{% if cont.image.image %}{% thumbnail cont.image.image 150x100 %}{% endif %}" alt="{{contest.title}}">
						</div>
						<h3 style="font:18px/18px Georgia, 'Times New Roman', Times, serif; margin:10px 0">{{cont.title}}</h3>
					</a>
					<span>Contest Code : {{cont.contest_id}}</span> <span class="divider12">|</span> <span>No of Winners : {{cont.total_winners}}</span> 
					<p class="ltxt80">{% trans "Start Date" %} {{cont.start_date|ds_site_dateformat}} <span class="divider12">|</span> {% trans "End Date" %} {% if cont.duration != 'N' %}{{cont.current_end_date|ds_site_dateformat}}{% else %}{{cont.end_date|date:"M d, Y"}}{% endif %}</p>
					<p>{% autoescape off %}{{cont.description|truncatewords:20}}{% endautoescape %}</p>
					<p>
						<a href=""/>{% trans "Register" %}</a> 
						<span class="divider12">|</span> 
						<a href="{% url 'sweepstakes_detail' cont.id cont.slug %}"/>{% trans "See details" %}</a>
					</p>
					<div class="clear"></div>
				</div>
			</div>
		</div>
	{% endfor %}
	{% endif %}
	<br/><br/>
	</div>
	<div class="clear">
</div> 	
