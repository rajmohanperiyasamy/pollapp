{% load i18n %}
<div id="search_jobs" class="module_search rel_block">
    <form name="sform" method="get" action="{% url 'jobs_search_job' %}">{% csrf_token %}
        <p class="search_jobs">
            <label for="id_skw">{% trans "SEARCH" %}</label>
            <span class="field_wrap search_ex">
            	<input name="skw" class="job_key_input" id="id_skw" tabindex="1" type="text" value="{{skw}}">
				<em class="tips" id="job_key">{% trans "Keyword Here" %}</em>
			</span>
           	<span class="field_wrap search_ex">
           		<input name="lkw" class="job_loc_input" id="id_lkw" tabindex="1" type="text" value="{{lkw}}">
				<em class="tips" id="job_loc">{% trans "Job Location" %}</em>
			</span>
            <span class="btn_m_search"><button class="super large blue button" type="submit"><span class="search_ads">{% trans "Search" %}</span></button></span>
        </p>
        {% if post_button %}<div id="post_jobs"><a target="_blank" href="{{post_button}}">{% trans "Post a Job" %}<span>{% trans "Find Qualified professionals" %}</span></a></div>{% endif %}
	</form>
    <div class="clear"></div>
</div>