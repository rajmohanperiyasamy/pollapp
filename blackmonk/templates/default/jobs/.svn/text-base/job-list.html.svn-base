{% extends base %}
{% load i18n %}
{% load truncate_filter %}
{% load comparison %}
{% load modulotag %}
{% load tabs %}
{% load ds_utils %}
{% block pagetitle %}{% seo_format_tag module='Pages' title=seo.seo_title code='MT' as seo_meta_title %}{{seo_meta_title}}{% endblock %}
{% block meta %}
	<meta name="description" content="{{seo.seo_description}}" />
{% endblock %}
{% block head %}
	<link rel="stylesheet" type="text/css" href="{{ STATIC_URL }}themes/green/css/job.css">
{% endblock %}
{% block navigation %}
	{% activetab "topnav" "jobs" %}
	{{ block.super }}
{% endblock %}
{% block content %}
            {% include 'default/jobs/search.html' %}
			{% if att_type %} 
			<div id="breadcrumbs"><a href="/" title="Home">{% trans "Home" %}</a> &nbsp;»&nbsp; <a href="/jobs/" title="Jobs">{% trans "Jobs" %}</a> &nbsp;»&nbsp; <a href="{% url 'jobs_category_list' %}" title="Browse Jobs">{% trans "Browse Jobs" %} </a></div>
			{% endif %}
			
			{% if skw or lkw %} 
			<div id="breadcrumbs"><a href="/" title=" Home">{% trans "Home" %}</a> &nbsp;»&nbsp; <a href="/jobs/" title="Jobs">{% trans "Jobs" %}</a> &nbsp;»&nbsp; <a title="{{lkw|capfirst}} {{skw|capfirst}} Jobs">{{lkw|capfirst}} {{skw|capfirst}} {% trans "Jobs" %}</a></div>
			{% endif %}
			<div class="group">
            	<!--<div id="breadcrumbs"><a href="/" title="Classified Home">Home</a> &nbsp;»&nbsp; <span class="here">Cars &amp; Vehicles</span></div>-->
				<div id="job_main" class="col_13 group">
                    <div class="thick_box">
                        <div class="thick_box_core mod_classifieds group">
							<div class="clear"></div>                        
                            <div id="job_extras" class="col_3 mr_0">
                                <div id="refine_ad" class="refine">
                                	<h2 id="refine_header" class="extra_title">{% trans "Refine by" %}</h2>
									{% if titles %}
                                    <div class="refine_option">
                                        <h3><a href="#">{% trans "Title" %}</a></h3>
                                        <ul id="refine_title">
                                            <ul id="expanded_category">
                                                {% for title in titles %}
												<li><a rel="nofollow" href="/jobs/attsearch/ttl/?ttl={{title.id}}" title="{{ title.title }}">{{ title.title }}</a> <span class="count">({{ title.count }})</span></li>
                                                {% endfor %}                                        
												<!--li><h5><a href="#" class="more-choices-link"><strong>More</strong></a></h5></li-->

                                            </ul>
                                        </ul><!--/refine_category-->
                                    </div>         
                                    {% endif %}
									{% if companys %}
									<div class="refine_option">
                                        <h3><a href="#">{% trans "Company" %}</a></h3>
                                        <ul id="refine_company">
                                            <ul id="teaser-make">
												{% for company in companys %}
                                                <li><a href="/jobs/attsearch/cmp/?cmp={{company.id}}">{{ company.company }}</a><span class="count">({{ company.count }})</span></li>
												{% endfor %}
                                                <!--li><h5><a href="#" class="more-choices-link"><strong>More</strong></a></h5></li-->
                                            </ul>
                                        </ul><!--/refine_make-->
                                    </div>
									{% endif %}
								</div>                                                                                                                 
                            </div><!-- /classifieds_extras-->
                            <div id="ad_list" class="place_list">
								{% if not jsearch %}
								<div class="list_actions group">
                                    <div class="sort col_3">
                                    	<p>Results {{from_range}} - {{to_range}} of {{count}}</p>

                                    </div>
                                    <div class="filter col_5 mr_0">
										<form name="mform" method="get" action="{{url}}">{% csrf_token %}
                                            <label for="job_sort">{% trans "Sort By" %}</label>
                                            <select id="job_sort" name="order" onchange="document.mform.submit();">
                                            	<option label="Sort by posted date" {% ifequal order '-active_on' %} selected="selected"{% endifequal %} value="-active_on">{% trans "Relevance" %}</option>
                                                <option label="Sort by posted date" {% ifequal order '-created_on' %} selected="selected"{% endifequal %} value="-created_on">{% trans "Posted date" %}</option>
                                            </select>                                        
										</form>
                                    </div>
                                    <div class="clear"></div>
                                </div>
								{% endif %}
								{% if message %}                                
	                            <div class="flash_alert" style="margin:10px; -moz-border-radius:6px;">{{message}}</div>
	                            {% endif %}
								{% for job in jobs %}
                                <div class="item group {% cycle '' ' alt' %}">
                                    <div class="detail">
                                        <h4 class="title"><a style="" href="{{ job.source_url }}" target="_blank">{{ job.title.title }}</a>{% ifequal job.status 'N' %} <span class="new">{% trans "new" %}</span>{% endifequal %}</h4>
                                        <div class="sub_title">{% if job.company.company %}<a href="/jobs/attsearch/cmp/?cmp={{job.company.id}}" class="owner_title">{{job.company.company}}{% else %}<a href="/jobs/attsearch/src/?src={{job.source}}" class="owner_title">{{ job.source }}{% endif %}</a> {% if job.location %}- {{ job.location }} {% endif %} <span class="time">({{ job.created_on|timesince }} ago)</span></div>

                                        <div class="summary">{{ job.detail }}</div>
                                    </div>       
                                    <div class="footer"></div>    
                                </div>
								{% endfor %}
                                
                                <div class="clear"></div>
                                
								
								{% if is_paginated %}
								<div id="thick_pagination" class="group">
                                <ul class="pagination_nav">
									{% if has_previous %}
										{% ifequal num current_page %}
												<li class="selected_page"><a href="#">{{ num }}</a></li>
										{% else %}
											<li class="prev"><a href="{{ url }}&page={{ prev }}"  class="Prev" title="Previous Page"><strong>&laquo;</strong> {% trans "Prev" %}</a></li> 
										{% endifequal %}
									{% endif %}
								 
									{% if not in_leading_range %}
										{% for num in pages_outside_trailing_range %}
											{% ifequal num current_page %}
												<li class="selected_page"><a href="#">{{ num }}</a></li>
											{% else %}
												<li><a href="{{ url }}&page={{ num }}">{{ num }}</a></li>
											{% endifequal %}
										{% endfor %}
										<li class="break">&hellip;</li>
									{% endif %}
									 
									{% for num in page_numbers %}
										  {% ifequal num current_page %}
										    	<li class="selected_page"><a href="#">{{ num }}</a></li>
										  {% else %}
										  		<li><a href="{{ url }}&page={{ num }}">{{ num }}</a></li>
										  {% endifequal %}
									{% endfor %}
									 
									{% if not in_trailing_range %}
										<li class="break">&hellip;</li>
										{% for num in pages_outside_leading_range reversed %}
											{% ifequal num current_page %}
												<li class="selected_page"><a href="#">{{ num }}</a></li>
											{% else %}
												<li><a href="{{ url }}&page={{ num }}">{{ num }}</a></li>
											{% endifequal %}
										{% endfor %}
									{% endif %}
									 
									{% if has_next %}
										<li class="next br_0"><a href="{{ url }}&page={{ next }}"  class="Next" title="Next Page">{% trans "Next" %} <strong>&raquo;</strong></a></li>
									{% endif %}
								</ul>
								</div>
						{% endif %}         
						                                 
                            </div>
                            <div class="clear"></div>
						</div> 
                	</div>
				</div>                                	
				<div id"secondary" class="col_3 mr_0">
                	<div id="banner_placement_right"></div><!-- Banner Placement -->
                </div>
			</div>
{% endblock %}