{% extends base %}
{% load truncate_filter %}
{% load tabs %}
{% load thumbnail %}
{% load i18n %}
{% load modulotag %}
{% load comparison %}
{% block pagetitle %}{{classified.seo_title}} {% endblock %}
{% block meta %}
	<meta name="description" content="{{classified.description|striptags|truncatewords:'30'}}" />
	<meta name="keywords" content="{{ globalsettings.city }} Classifieds,Classifieds,{{ globalsettings.city }},{{classified.category.category_type.name}},{{classified.category.name}},{% for tag in classified.get_tag %}{{tag.tag}},{% endfor %}" /> 
{% endblock %}
{% block head %}
	<link rel="stylesheet" type="text/css" href="{{STATIC_URL}}themes/green/css/classified.css">
	<link rel="stylesheet" type="text/css" href="{{STATIC_URL}}themes/green/css/lightbox.css">
{% endblock %}
{% block navigation %}
	{% activetab "topnav" "classifieds" %}
	{{ block.super }}
{% endblock %}
{% block content %}
			<input type = "hidden" id = "call_from" value="classifieds" />

			<!-- Lightbox code begin -->   
     		<div class="lightbox_outer" >
			<div class="lightbox_content_holder">
     			<a href= "" class="call_lightbox lb_close fix_ie6png enlarge click_pvnt"></a>
				<div class="lightbox_content">
				<!-- Put all your contents only inside this "lightbox_content" div -->
				
				<!-- Tell a friend begin -->
				<div id="respond_to_div" class="allhide">
				<div class="tellfriend" style="padding:0px;">
				    <h3>{% trans 'Tell a friend' %}</h3>
					<form id="respond_form" method="get" action="/classifieds/a/ajaxtellafriend/">{% csrf_token %}
						<input type="hidden" name="hashkey" id="id_hashkey" value="{{ scaptcha.hash }}" />
						<input type="hidden" id="content_id" name="content_id" value="{{classified.id}}" />
						<input name="as_exec_respond" id="as_exec_respond" value="yes" type="hidden" />	
						<input name="respond_hashkey" id="respond_hashkey" value="" type="hidden" />
						<label for="from_name">{% trans 'Your Name' %}:</label>
						<p>
							<input type="text" maxlength="15" autocomplete="off" size="30" name="from_name" id="from_name" class="input_text">
				    	</p>
				
						<label for="to_name">{% trans "Your Freind's Name" %}:</label>
						<p>
							<input type="text" maxlength="50" size="30" name="to_name" id="to_name" class="input_text">
						</p>
						
						<label for="to_email">{% trans "Your Friend's Email" %}:</label>
						<p>
							<input type="text" maxlength="50" size="30" name="to_email" id="to_email" class="input_text">
				    	</p>
						
					
						<label>{% trans 'Subject' %}:</label>
						<p style="width:410px" class="field">{{ globalsettings.domain }} - <span id="keyup_name"><b>{% trans 'Your Name' %}</b></span> {% trans 'sent you the details of a Classified Ad' %} "{{classified.title}}" </p>
				    
						<label for="msg">{% trans 'Message' %}:</label>
				        <textarea rows="5"  name="msg" id="msg" cols="30" class="medium field"></textarea>
						
						<div class="form_footer">
							<button type="submit" class="button super green large respond_submit"><span>{% trans 'Submit' %}</span></button>
							<p id="respondstatus"></p>
						</div>
				    </form>
				</div>
				</div>
				<!-- Tell a friend end -->
				<div id="contact_to_div" class="allhide">
				<input type="hidden" id="clsf_id" name="clsf_id" value = "{{ classified.id }}" />
				<input name="contact_hashkey" id="contact_hashkey" value="" type="hidden" />	
				<div class="tellfriend" style="padding:0px;">
				    <h3>{% trans 'Contact Poster' %}</h3>
					<form id="contact_form" method="get" action="/">{% csrf_token %}
				        <label style="font-size:12px">{% trans 'From' %}:</label>
						<label for="respond_name">{% trans 'Name' %}:</label>
						<p>
							<input type="text" maxlength="50" size="30" name="respond_name" id="respond_name" class="input_text">
				    	</p>
						<label for="respond_email">{% trans 'Email' %}:</label>
						<p>
							<input type="text" maxlength="50" size="30" name="respond_email" id="respond_email" class="input_text">
				    	</p>
						<label for="respond_email">{% trans 'Phone No' %}:</label>
						<p>
							<input type="text" maxlength="50" size="15" name="respond_phone" id="respond_phone" class="input_text">
				    	</p>
					    <label style="font-size:12px">{% trans 'To' %}:</label>
						<p>{{classified.address.email}}</p>
					
						<label>{% trans 'Subject' %}:</label>
						<p>{{classified.title}}</p>
				    
						<label for="respond_msg">{% trans 'Message' %}:</label>
				        <textarea rows="7"  name="respond_msg" id="respond_msg" cols="30" class="medium"></textarea>
						
						<div class="form_footer">
							<button type="submit" class="button super green large respond_submit"><span>{% trans 'Submit' %}</span></button>
							<p id="contactstatus"></p>
						</div>
				    </form>
				</div>
				</div>
				<!-- put your contents only iside "lightbox_content" div -->		
				</div>			
			</div>
			</div>
			<div class="lightbox_background"></div>
			<!-- Lightbox code end -->
			{% include 'default/classifieds/part_search.html' %}
			<div class="flash_success_alert alert_flash" style="display:none;" id="flash_alert"><h2>{% trans 'Added to favorite successfully.' %} <a href="{% url 'user_favorites_home' %}"> {% trans 'Go' %}</a></h2></div> 
			<div class="flash_error_alert alert_flash" style="display:none;" id="flash_alert1"><h2>{% trans 'It is already added to favorite list.' %} <a href="{% url 'user_favorites_home' %}"> {% trans 'Go' %}</a></h2></div> 
			<script type="text/javascript">
				setTimeout("window.document.getElementById('flash_alert').style.display='none';",20000);
				setTimeout("window.document.getElementById('flash_alert1').style.display='none';",20000);
			</script>
			<div class="group">
            	<div id="breadcrumbs" class="mrl_0"><a href="/" title="{{ globalsettings.domain }} Home">{% trans 'Home' %}</a> &nbsp;»&nbsp;<a href="/classifieds/" title="Classified Home">Classifieds</a> &nbsp;»&nbsp; <a href="{{classified.category.parent.get_absolute_url }}" title="{{classified.category.parent.name}}">{{classified.category.parent.name}}</a> &nbsp;»&nbsp; <a href="{{ classified.category.get_absolute_url }}" title="{{classified.category.name}}">{{classified.category.name}}</a> &nbsp;»&nbsp; <span class="here">{{classified.title}}</span></div>
				<div class="col_11">
					<div id="classified_details" class="thick_box">
						<div class="thick_box_core group">                
                            <div id="classified_all" class="detail_content group">
                            	<div class="tool_bar br_0 p_0">
									{%include 'default/social.html'%}
                                    <div class="right_tools" >
										<a href="javascript:void(0)" style="{% if not user.is_authenticated %}display:none;{% endif %}" title="{% trans 'Add To Favourite' %}" class="tttxt-n fav_add save_btn click_pvnt" onclick="add_to_fav({{ classified.id }})"><span>{% trans 'Favorite' %}</span></a>
										<a href="{% url 'ajax_signin' %}" style="{% if user.is_authenticated %}display:none;{% endif %}"  class="tttxt-n fav_login bm-ajax-login email_btn respond_clr"><span>{% trans 'Favorite' %}</span></a>
                                        <a href="javascript:void(0)" title="Tell Your Friend" class="share_btn email_btn click_pvnt respond_clr" onclick="show_content('respond_to_div')"><span>{% trans 'Email' %}</span></a>
                                    </div>                                         
                                    <div class="clear"></div>    
                                </div> 
                            	<div id="content_header">
									<div class="title_bar">
                                        <h1 class="title">{{classified.title}}</h1>
                                    	<div class="sub_title">{% trans 'By' %} <a href="/profile/{{classified.created_by}}" class="owner_title">{{classified.created_by.display_name}}</a>&nbsp;<span class="pst_date">{% trans 'Over' %} {{classified.published_on|timesince}} {% trans 'ago' %}</span></div>
                                	</div>
								</div>
                                <div id="ad_bocy">
                                    <div class="group">
                                    {% if classified.get_tp_first_images %}
                                        <div class="col_5">
                                            <ul class="accordian9 group br_0">
                                                <li id="ad_photos" class="acdn_row"><a href="#" class="bar_title">Photos</a>
                                                    <div class="acdn_content" style="display:block">
                                                        <div class="photos">
                                                            <div class="photo_s"><img src="{{classified.get_tp_first_images.img_url}}" alt="" width="284"></div>
                                                           
                                                        </div>
                                                    </div>
                                                  
                                                </li>
                                            </ul>
                                        </div> 
                                    {% endif %}
                                        <div class="ad_main mr_0">
                                            <div class="description"  style="position:relative; cursor:auto;">
                                                <h3>Basic Details</h3>
                                                <ul class="info group">
                                                {% for attr in classified.get_tp_attributes %}
                                                    <li><strong>{{attr.get_attr_name|capfirst}}:</strong><span>{{attr.attr_val}}</span></li>
                                               {% endfor %}
                                               </ul>
                                               
                                                <div class="btn_contact" style="text-align:center"><a href="{{classified.source_url}}" class="button super medium blue" target="_blank"><span>Contact the poster</span></a></div>
                                            </div>
                                        </div>                                        
                                        <div class="clear"></div>
                                        <div class="desc">
                                            {% autoescape off%}                                         
                                                <p>{{classified.description}}</p>
                                                {%endautoescape%}
                                        </div>                                                              
                                    </div>
                                </div>                                    
                            </div>
                        </div>
                    </div>                                                    
                </div>

                <div class="secondary">
                    <div class="advt ad_300x250">
                    	<span class="declare">{% trans 'Advertisement' %}</span>
                    	<div class="display_ad">
						</div>
                    </div><!-- /ad_300x250 -->
                  	{% if relatedclass %}
                    <div id="newly_added" class="col_5 mr_0">
                        <ul class="accordian9 group">
                            <li id="bsns_photos" class="acdn_row"><a href="" class="bar_title click_pvnt">{% trans 'Related Items ' %} </a>
                                <div class="acdn_content" style="display:block">
                                	<div id="newly_ad_list" class="place_list">
                   					{% for rc in relatedclass %}
                                        <div class="item group{% cycle '' ''  ' alt' %}">
                                    		<div class="detail">
                                    			{% if rc.payment.images == 'Y' %}
                                    			{% if rc.get_first_classified_photo %}
														{% if forloop.first %}
                                    						<a href="{{rc.get_absolute_url}}" class="pic">
                                    							<img src="{% thumbnail rc.get_first_classified_photo 70x0 %}" alt="{{rc.title}}">
															</a>
														{% endif %}
												{% else %}
                                                	<a href="{{rc.get_absolute_url}}" class="pic"><img src="{{STATIC_URL}}themes/green/images/global/nophoto_90.jpg" alt="{{ rc.title }}" height="70" width="70" ></a>
												{% endif %}
												{% endif %}
												<h4 class="title"><a href="{{rc.get_absolute_url}}" title="{{rc.title}}">{{rc.title}}.</a></h4>
                           						 {% if rc.classified_price %}<span class="price">{{ globalsettings.currency }} {{rc.classified_price}}</span> {% endif %}
                                                <div class="sub_title">{% trans 'By' %} <a href="/profile/{{rc.created_by.display_name}}" class="owner_title">{{rc.created_by.display_name}}</a><span class="time">({{rc.published_on|timesince}} ago)</span></div>
                                            </div> 
                                            <div class="footer"></div>
											<div class="clear"></div>    
                                        </div> 
                  					 {% endfor %}                    
                                	</div>
								</div>                                    
                            </li>
						</ul>                    		
                    </div>  
					{% else %}
						<div style="margin-top:10px;background-color:#fcfcfc; border:1px solid #e6e6e6;">
							<iframe src="http://www.facebook.com/plugins/likebox.php?href={{ globalsettings.get_facebook_page_url }}&amp;connections=5&amp;width=300&amp;height=295&amp;colorscheme=light&amp;show_faces=true&amp;stream=false&amp;header=true&amp;" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:300px; height:295px;" allowTransparency="true"></iframe>                    
					    </div>
					{% endif %}                                       
                </div> <!-- /secondary -->
			</div>
			<script type="text/javascript" src="{{STATIC_URL}}js/general/lightbox.js"></script>
			<script src="{{STATIC_URL}}js/base.js" type="text/javascript"></script>
		    <script type="text/javascript" src="{{STATIC_URL}}js/classifieds/classifieds.js"></script>
			<script type="text/javascript">
				$(document).ready(function(){
					$.ajax({
						type: "GET",
						url: "{% url 'classified_count' classified.id %}",
						success:function(data){},
						error:function(data){}
					});
				});
			</script>
			<script>
			function add_to_fav(id){
				$('.alert_flash').hide();
				$.ajax({
					type:'get',
					url:'{% url 'classifieds_add_to_fav' %}',
					data:'id='+id,
					success:function(data){
						if(data=='1'){ $('#flash_alert').show();}
						else if(data=='2'){$('#flash_alert1').show();}
						else{alert(gettext('Oops!!! Not able to process your request.'));}
						
						}
					});
			}
			</script>
			<script>var disqus_identifier  = 'Classifieds-{{classified.id}}';</script>
            {% endblock %}