{% load i18n %}
<p>
<table>
	<tr>
		<td>{% trans 'Name' %}</td>
		<td><strong>{{ Name }}</strong></td>
	</tr>
	{% if Email %}
	<tr>
		<td>{% trans 'Email' %}</td>
		<td><strong>{{ Email }}</strong></td>
	</tr>
	{% endif %}
	{% if Phone %}
	<tr>
		<td>{% trans 'Phone' %}</td>
		<td><strong>{{ Phone }}</strong></td>
	</tr>
	{% endif %}
	{% if Subject %}
	<tr>
		<td>{% trans 'Message' %}</td>
		<td><strong>{{ Subject }}</strong></td>
	</tr>
	{% endif %}
</table>
</p><br/><br/>
<p><strong>{% trans 'This Informaition is mailed by' %} <a href="{{globalsettings.website_url}}">{{globalsettings.domain}}</a></strong></p>