{% load i18n ds_utils %}

{% for meetup in meetups %}
 <li class="mDa">
     <div class="mDa-iN">
         <div class="mDa-wPr">
             <a href="{{ meetup.url}}" target="_blank" class="bUi-tMb-wPr tMb-60 bUi-tMb-210 fLxiMgH">
