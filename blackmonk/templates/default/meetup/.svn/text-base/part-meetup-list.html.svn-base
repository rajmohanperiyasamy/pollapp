 </li>
{% empty %}
     <div class="hT600 rLvE sCn">
         <div class="tBl-bLk pDt0">
             <div class="tBl-cEl">
                 <span class="iCn-bRdR80 oP25"><i class="bUi-iCn-eVnT-24 fS42-1 cLr-gRy ib" aria-hidden="true"></i></span>
                 <p class="bLk mRt20 fS16 cLr-lTgRy oP75">{% trans ' Oops! No meetups found.' %}</p>
             </div>
         </div>
     </div>
{% endfor %}

<script type="text/javascript">
$(document).ready(function(){
   $('h5.title').toggle( 
       function(){$(this).closest('div').find(".desc").show("slow");},
       function(){$(this).closest('div').find(".desc").hide("slow");}
   );
});
</script>