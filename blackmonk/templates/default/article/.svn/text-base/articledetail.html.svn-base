{% extends base %}
{% load tabs %}
{% load i18n %}
{% load ds_utils %}
{% load thumbnail %}
{% load mptt_comments_tags %}
{% block pagetitle %}{% seo_format_tag module='Articles' title=article.seo_title code='DT' category=article.category.name as seo_meta_title %}{{seo_meta_title}} {% endblock %}
{% block meta %}
	<meta name="description" content="{{article.summary}}" />
<!-- Facebook-->
	<meta property="og:type" content="article"/>
	<meta property="og:url" content="{{globalsettings.website_url}}{{article.get_absolute_url}}"/>
	<meta property="og:title" content="{{ article.title }}"/>
	{% if article.articlephotos.all.0.photo %}<meta property="og:image" content="{{globalsettings.website_url}}{{ article.articlephotos.all.0.photo.url }}"/>{% endif %}
	<meta property="og:site_name" content="{{globalsettings.domain}}"/>
	<meta property="og:description" content="{{ article.content|striptags|truncatechars:200 }}"/>
<!-- Twitter-->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:url" content="{{globalsettings.website_url}}{{article.get_absolute_url}}">
	<meta name="twitter:title" content="{{ article.title }}">
	<meta name="twitter:description" content="{{ article.content|striptags|truncatechars:200 }}">
	{% if article.articlephotos.all.0.photo %}<meta name="twitter:image" content="{{globalsettings.website_url}}{{ article.articlephotos.all.0.photo.url }}">{% endif %}
	<meta name="twitter:domain" content="{{globalsettings.domain}}">

{% endblock %}
{% block head %}
	<script type="text/javascript" src="{{ STATIC_URL }}js/article/article.js"></script>
	<link rel="stylesheet" href="{{STATIC_URL}}themes/css/article.css" />
	<script src="{{STATIC_URL}}themes/js/jquery.bUislider.js"></script>
	<script src="{{STATIC_URL}}themes/js/ios-orientationchange-fix.js"></script>
	<script src="{{STATIC_URL}}themes/js/fxslider.js"></script>
<script type="text/javascript" src="{{STATIC_URL}}js/report_data.js"></script>
<script type="text/javascript" src="{{STATIC_URL}}js/get_report_data.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	bids.push({{article.id}});
	details_pages(bids);
	});
	
	</script>
	<script>	
		$(function(){
			$('.rLtD-cRsL').bUiSlider({
				pager:false,
				speed:600,
				//auto:true,
				slideWidth: 187,
				//infiniteLoop: false,
				//hideControlOnEnd: true,
				adaptiveHeight: true,
			    minSlides:1,
			    maxSlides: 4,
			    slideMargin: 12,
			    onSliderLoad:function(){
				  $('.fLxiMgW').setrSpVWidth(0);
			   }
			});
		    $(".fxslider").fxslider();
		});
	</script>
{% endblock %}
{% block navigation %}
	{% activetab "topnav" "articles" %}
	{{ block.super }}
{% endblock %}
