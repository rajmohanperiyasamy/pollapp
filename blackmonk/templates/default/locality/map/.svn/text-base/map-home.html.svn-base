                    contentString+='<a href="{% url "locality_map_map_get_direction" %}?aid={{addr.id}}&objid={{b.id}}&src=business" title="{% trans "Directions" %}" class="aBsLt bR10"><i aria-hidden="true" class="bUi-iCn-dRt-20 fS12 "></i></a></div> </div> </li></ul>';
                   
                    marker['content_info'] = contentString;
                    markers.push(marker);
