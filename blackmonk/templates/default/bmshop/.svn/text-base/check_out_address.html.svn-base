{% extends base %}
{% load modulotag %}
{% load truncate_filter %}
{% load comparison %}
{% load i18n %}
{% load currency %}
{% load tabs %}
{% load thumbnail %}
{% load ds_utils %}
{% block pagetitle %}{%if seo%}{% seo_format_tag module='Shop' title=seo.meta_title code='MT' as seo_meta_title %}{{seo_meta_title}}{%else%}{% trans 'Shop' %}{%endif%}{% endblock %}
{% block meta %}
	<meta name="description" content="{%if seo%}{{ seo.meta_description }}{%else%}{% trans 'Shop' %}{%endif%}" />
{% endblock %}

{% block head %}
	<link rel="stylesheet" type="text/css" href="{{STATIC_URL}}themes/green/css/store.css">
	<link rel="stylesheet" type="text/css" href="{{ STATIC_URL }}themes/green/css/deal.css">
	<link rel="stylesheet" type="text/css" href="{{ STATIC_URL }}themes/green/css/user_forms.css">
{% endblock %}
{% block navigation %}
	{% activetab "topnav" "shop" %}
	{{ block.super }}
{% endblock %}
{% block content %}
	{#% include 'default/bmshop/include_search.html' %#}
		<div class="group">
				<div class="col_11">
					
					<div id="item_details" style="background-color:#f0f3f7;padding:10px;-moz-border-radius:6px;border:1px solid #e4e9f1; margin-bottom:20px;">
                    	<h2 class="deal_title"><span style="color:#C60">{% trans 'Shipping Address' %}</span></h2>
                    </div>
					{% if form.errors %}   
			        <div class="error_expl" style="padding-top:20px;">
			        	<div class="error_list">
			                <h4>{% trans 'There is a problem with your shipping address Form' %}</h4>
			                <ul>
			                {% for field in form %}
			           			 {% if field.errors%}
			           	           	<li>{%for error in field.errors%}{{error}}{%endfor%}</li>
			       	             {% endif %}
							{% endfor %}
			                </ul>
			            </div> 
			        </div>
			        {% endif %}
					<div class="messageerror" id="validation_error" style="display:none;" >
						<span style="font-size:1.2em;font-weight:250;"><strong>{% trans 'There is a problem with your submission' %}</strong></span>
					</div>
					<div id="formContainer" class="group"> 
               	  		<form id="basicInformation" method="post" name="basic[Information]" action="{%url 'bmshop_product_check_out' %}">{% csrf_token %}
							
							<fieldset>
									<div class="title"><h2>{% trans 'Enter a new shipping address' %}</h2></div>
	                                <p class="intro_sub">
										{% trans 'Please fill out the below form' %}
									</p>
									<dl class="horizontal">
	                                    <dt><label for="name">{% trans 'Name *' %}</label></dt>
	                                    <dd>
	                                    	{{ form.firstname }}
	                                    </dd>
										<dt><label for="name">{% trans 'Address *' %}</label></dt>
	                                    <dd>
	                                    	{{ form.address }}
	                                    </dd>
										<dt><label for="name">{% trans 'Zip Code *' %}</label></dt>
	                                    <dd>
	                                    	{{ form.zip_code }}
	                                    </dd>
										<dt><label for="name">{% trans 'City *' %}</label></dt>
	                                    <dd>
	                                    	{{ form.city }}
	                                    </dd>
										<dt><label for="name">{% trans 'State *' %}</label></dt>
	                                    <dd>
	                                    	{{ form.state }}
	                                    </dd>
										
										<dt><label for="mobile">{% trans 'Phone *' %}</label></dt>   
										<dd>
											{{ form.phone }}
										</dd> 
									</dl>   
								</fieldset>
							
							<dl class="horizontal p_0 mr_0"><dt>&nbsp;</dt><dd><div class="pt_10"><a href="javascript:void(0)" onclick="$('#basicInformation').submit();" class="super button large green"><span class="btn_xl">{% trans 'Save & Continue' %}</span></a> {% trans 'Or' %} <a href="{%url 'bmshop_product_cart' %}" class="super button large green"><span class="btn_xl">{% trans 'Go Back' %}</span></a></dd></dl><br>
						</form>
					</div>                   
                </div>
                <div class="secondary">
                	{%if address_objs%}
                	<div class="address">
                    	<h3 style="font-size: 14px; font-weight: bold; margin-bottom: 10px;" class="title">Select from previous shipping addresses </h3>
						{%for addr in address_objs%}
						<a class="main_cont" onclick="location.replace('{%url 'bmshop_product_order_summery' addr.id %}');">
							<div class="cont">
						    	<p class="bold">{{addr.firstname}}</p>
								<p>{{addr.address}}</p>
								<p>{{addr.city}},{{addr.state}} - {{addr.zip_code}}</p>
								<p>Phone: {{addr.phone}}</p>
								<p>Email: {{addr.email}}</p>
								<span class="click">Click to select</span>
							</div>
						</a>
						{%endfor%}
                	</div>
					{%endif%}
                </div> <!-- /secondary -->
			</div>
            <div class="clear"></div>
		
{% endblock %}
