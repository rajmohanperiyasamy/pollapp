{% load i18n %}
<div class="signal-body">
	{% if cnt %}
        <ul>
        	{% if event_count %}
            <li>
                <a href="{% url 'staff_event_home' %}?pending_events=1" class="group">
                    <span class="icon events "></span>
                    <span class="content">{{event_count}} {% trans ' New event(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
        	{% if articles_count %}
            <li>
                <a href="{% url 'staff_article_home' %}?pending_articles=1" class="group">
                    <span class="icon stories"></span>
                    <span class="content">{{articles_count}} {% trans ' New article(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
			{% if photo_count %}
            <li>
                <a href="{% url 'staff_manage_gallery' %}?pending_photos=1" class="group">
                    <span class="icon photos"></span>
                    <span class="content">{{photo_count}} {% trans ' New gallery(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
			{% if videos_count %}
            <li>
                <a href="{% url 'staff_video_home' %}?pending_videos=1" class="group">
                    <span class="icon videos"></span>
                    <span class="content">{{videos_count}} {% trans ' New video(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
			{% if classifieds_count %}
            <li>
                <a href="{% url 'staff_classified_home' %}?pending_classifieds=1" class="group">
                    <span class="icon classifieds"></span>
                    <span class="content">{{classifieds_count}} {% trans ' New classified(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
			{% if business_count %}
            <li>
                <a href="{% url 'staff_manage_business' %}?pending_business=1" class="group">
                    <span class="icon business"></span>
                    <span class="content">{{business_count}} {% trans ' New business(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
			{% if advice_count %}
            <li>
                <a href="{% url 'staff_manage_advice' %}?pending_advice=1" class="group">
                    <span class="icon business"></span>
                    <span class="content">{{advice_count}} {% trans ' New advice(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
			{% if bookmark_count %}
			<li>
                <a href="{% url 'staff_bookmark_home' %}?pending_bookmark=1" class="group">
                    <span class="icon stories"></span>
                    <span class="content">{{bookmark_count}} {% trans ' New bookmarks(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
			{% if banner_count %}
			<li>
                <a href="{% url 'staff_banners_manage_banners' %}?pending_banners=1" class="group">
                    <span class="icon stories"></span>
                    <span class="content">{{banner_count}} {% trans ' New Banners(s) awaiting for approval' %}</span>
                </a>
            </li>
			{% endif %}
        </ul> 
		{% else %}<span id="no_todo_found" class="no-item"><p>{% trans 'No todo items found' %}</p></span>{% endif %}             
    </div>	
