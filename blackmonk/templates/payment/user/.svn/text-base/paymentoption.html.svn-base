{% extends "base_user.html" %}
{% block pagetitle %}Select payment option{% endblock %}
{% block head %}
	<link rel="stylesheet" type="text/css" href="{{ STATIC_URL }}themes/green/css/user_company.css">
{% endblock %}
{% block content %}
	<div id="c-16x8-none" class="clearfix"> 
		<div id="user_profile" class="profile company_p">
			<div id="formContainer" class="clearfix" style="border:none;padding:10px; margin-top:20px;" >
				<form action="" method="post"  name="f_addfeatured" enctype="multipart/form-data" class="c-16 form_left clearfix coloumn"  style="background-color:#f9f9f9;;border:none;padding:20px 10px; width:690px;">
					<input type="hidden" name="bid" value="{{ business.id }}" />
					{% if message %}
						<div style="clear:both;"></div>
						 <div class="message">{{ message }}</div>
					{% endif %}
					{% if form.errors %}
						<div class="messageerror" >
							<span style="font-size:1.2em;font-weight:250;"><strong>There is a problem with your submission</strong></span>
		                    <ul>
		           			 {% for field in form %}
		           			 	{% if field.errors%}
		           	            	<li>
		           	            	{%for error in field.errors%}
		           	            		{{error}}
		               	            {%endfor%}
									</li>
		       	             {% endif %}
		          	 		 {% endfor %}
							</ul>
		 		 		 		 </div>
					{% endif %}
            		
					
			
					<fieldset style="margin-top:0px; padding:0;">
						<div class="title"><h2>Select Payment Option</h2></div>
						
						<dl class="horizontal">
							
                        	<dt><label for="type"><b>Payment: </b></label></dt>
                            <dd>
                            	<select  name="category" id="id_category" class="textField normal" onchange="view_price();">
                            		<option value="paypal" style="padding-left:5px;">PayPal</option>
								</select><h1 style="margin:0px;display:inline;padding-left:40px;color:#9F0F0F;">${{ price }}</h1>
								<span class="tip">Select the payment option.</span>
								
							</dd>
                  									
				    		<dt>&nbsp;</dt>
                  			<dd>
                  				{% for olp in olpayment %}
                  					<input type="hidden" name="olp_id" value="{{ olp.id }}"/>
								{% endfor %}
                                {{form.render}}
                  			</dd>
						</dl>                                                        
					</fieldset>
				</form>
            </div>
			
			
		</div>

	</div>
{% endblock %} 