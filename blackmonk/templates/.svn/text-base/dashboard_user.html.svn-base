	<script type="text/javascript">
		function close_msg(){
			//$('#module-navigation').css('padding-top','0px');
			$('#alert_bar').hide();
		}
		function show_msg(msg,mtype){
			$('#message').html(msg);
			//$('#module-navigation').css('padding-top','42px');
			$('#alert_bar').removeClass();
			$('#alert_bar').addClass('alert-bar');
			$('#alert_bar').addClass(mtype);
			$('#alert_bar').show();
			setTimeout(function(){close_msg();},3000);
			$("html, body").animate({ scrollTop: 0 }, "fast");
		}
	</script>
