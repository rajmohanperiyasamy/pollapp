{% load i18n %}
<!-- CALENDER -->
<link rel="stylesheet" type="text/css" href="{{ STATIC_URL }}themes/green/css/LE_MetaId99.css">
<!-- CALENDER -->
<div id="ajax_content_loading" style="display:none;padding-top:222px;padding-bottom:222px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Loading ...' %}</p>
</div>
<div class="main_col" id="ajax_content">
	<div id="add-new-category" class="modal-form" style="width:560px !important;">
    <form name="mform" id="mform" method="post" class="add_category">{% csrf_token %}
        <div class="field-group cr_wmr">   
            <div class="fields-head">
                <h4>Unsubscription Detail</h4>
            </div>     
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block; width: 125px;">Business</label>
                    <label style="font-weight: bold; margin-left: 10px;">: {{unsub.stripe_details.content_object}}</label>
                </div>
            </div>      
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block; width: 125px;">Requested By</label>
                    <label style="font-weight: bold; margin-left: 10px;">: <a href="{% url 'user_profile' unsub.stripe_details.content_object.created_by.profile_slug %}" target="_blank">{{unsub.stripe_details.content_object.created_by}}</a> (Email: {{unsub.email}}, Phone: {{unsub.mobile}})</label>
                </div>
            </div>      
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block; width: 125px;">Unsubscription Status</label>
                    <label style="font-weight: bold; margin-left: 10px;{% if unsub.stripe_details.subscription_status == 'onhold' %}color: red;{% endif %}">: {% if unsub.stripe_details.subscription_status == 'onhold' %}Pending{% elif unsub.stripe_details.subscription_status == 'inactive' %}Unsubscribed{% endif %}</label>
                </div>
            </div>
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block; width: 125px;">Requested On</label>
                    <label style="font-weight: bold; margin-left: 10px;">: {{unsub.unsubscribed_on}}</label>
                </div>
            </div>
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block; width: 125px;">Reason</label>
                    <label style="font-weight: bold; margin-left: 10px;">: {{unsub.reason}}</label>
                </div>
            </div>
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block; width: 125px;">Listing Type</label>
                    <label style="font-weight: bold; margin-left: 10px;">: {% if claim.payment_status == 'B' %}Free{% elif claim.payment_status == 'F' %}Professional{% else %}Basic{% endif %} Listing</label>
                </div>
            </div>      
        </div>     
        <div class="field-group cr_wmr">   
            <div class="fields-head">
                <h4>Select an Action:</h4>
            </div>
            <div class="field text-field">
                <div class="value">
                    <span class="cform-radio-container"><input type="radio" value="UP" class="checkbox mrl0"  name="claimoption"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Unsubscribe, Publish & set as Free Listing' %}</label>
                </div>
            </div>      
            <div class="field text-field">
                <div class="value">
                    <span class="cform-radio-container"><input type="radio" value="UB" class="checkbox mrl0"  name="claimoption"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Unsubscribe, Block & set as Free Listing' %}</label>
                </div>
            </div>      
            <div class="field text-field">
                <div class="value">
                    <span class="cform-radio-container"><input type="radio" value="R" class="checkbox mrl0"  name="claimoption"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Reject this Request' %}</label>
                </div>
            </div>      
			<span class="tip">Note: If you reject this claim. The claim request will be deleted and business will be marked as Unclaimed.</span>                                                           
        </div>            
        <div class="modal-base form-submit group">
		   	<button role="button" class="cform-button prime right" type="button" onclick="save_unsubscription({{business.id}})"><span class="cform-button-text">{% trans 'Update' %}</span></button>
		</div>           
    </form>
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/inline.js"></script>
</div>
