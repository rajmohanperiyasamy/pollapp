								{% endfor %}
							</tbody>
						</table>  
						<br/>
					<div style="text-align:center;">
						<input type="button" class="inputsubmit off" value="Reset" onclick="location.replace('/admin/classified_sponsored/')" name="continue" style="font-size:14px; padding:5px 10px !important; font-weight:bold;"> 
						<input type="submit" id="id_submit_btn "class="inputsubmit on" value="Update" name="continue" style="font-size:14px; padding:5px 10px !important;  font-weight:bold;">
					</div>
                </div> 
      		 </form>		      
