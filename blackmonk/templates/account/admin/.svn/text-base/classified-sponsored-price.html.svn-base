		           	            		{{error}}
		               	            {%endfor%}
									</li>
		       	             {% endif %}
		          	 		 {% endfor %}
							</ul>
		 		 		 		 </div>
					{% endif %}
 
					<div class="page_title group" style="display:block; overflow:hidden; padding-top:10px;">
                		<!--div class="all_control">
                            <select name="category" id="qna_cat" class="textField small" style="width:105px;">
                                    <option value="">More actions</option>
                                    <option value="2">&nbsp;Reset price</option>                                    
                                    <option value="5">&nbsp;Clear Price</option>
                             </select>                            
              			</div-->	
           			 </div>
				<form name="cls_sp_price_form" id="id_cls_sp_price_form" method="post" action="/admin/classified_sponsored/" onsubmit="return validate();">	 
						<table class="staff content" align="center" cellpadding="0" cellspacing="0" width="740">
							<colgroup>
								<col width="15">
								<!--col width="100"-->
								<col width="280">                                                                
							</colgroup>				
							<tbody>
								<tr class="head">
									<th class="check"><!--input name="selectall" onclick="checkall()" value="" type="checkbox"--></th>
									<th class="title"><div>Categories</div></th>
									<th class="action"><div style="padding-right:300px;">Sponsored Price</div></th>                                    
								</tr>
