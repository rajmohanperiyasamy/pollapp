{% extends "admin_base.html" %}
{% load ds_utils %}
{% load tabs %}
{% block navigation %}
	{% activetab "selmodule" "users" %}
	{{ block.super }}
{% endblock %}
{% block pagetitle %}Admin | Manage Users{% endblock %}
{% block head %}
<script type="text/javascript">
				
			function loadAjaxPaginate(baseurl,page)
			{
				window.location.href=baseurl+"?page="+page
			}
</script>

{% endblock %}
{% block content %}
        <div class="container group">
        	<div class="page_title group" style="display:block; overflow:hidden; padding:10px 0 20px 0;">
            	<div class="bread-crumb clearfix">
                    <ul>
                        <li><a href="{%url 'admin_users' %}" style="background:#666;font-size:12px; padding:2px 4px; -moz-border-radius:4px;color:#FFF">Admin Home</a></li>
                        <li style="background:#eee;font-size:12px; padding:2px 4px; -moz-border-radius:4px;color:#666">Manage Users</li>
                    </ul>
                </div> 
            </div>
			<div class="page_title group" style="display:block; overflow:hidden;">
                <h2 style="display:block; margin:0; padding-left:10px; line-height:normal">Manage Users</h2> 
            </div>            
        	<div class="main" style="margin-bottom:20px;">
            	<div class="left_col">
                	<h3>Options</h3>
                	<ul class="side_menus">
                        <li><a href="{%url 'admin_users' %}" class="side_menu on">Manage Users</a></li>  
                        <li><a href="{%url 'admin_createuser' %}" class="side_menu">Add User</a></li>  
                        <li><a href="{%url 'admin_searchuser' %}" class="side_menu">Search User</a></li>
                        <li><a href="{%url 'admin_add_seo' %}" class="side_menu">Manage SEO</a></li>                       
                    </ul>
                </div> 	
            	<div class="main_col" style="float:left; width:740px;">
            	 {% if message %}
				 <div class="message">{{message}}</div>
				 {% endif %}
					<div class="page_title group" style="display:block; overflow:hidden; padding-top:10px;">
                		<!-- <div class="all_control">
                            <select name="category" id="qna_cat" class="textField small" style="width:105px;">
                                <option value="" style="padding-left:5px;">More actions</option>
                                <optgroup style="border-top:1px dotted #7d7d7d; margin:5px; padding-top:5px;">
                                    <option value="2">&nbsp;Sort by Name</option>
                                    <option value="3">&nbsp;Sort by Date</option>
                                </optgroup>
                                <optgroup style="border-top:1px dotted #7d7d7d; margin:5px; padding-top:5px;">
                                    <option value="2">&nbsp;Filter by Active</option>
                                    <option value="3">&nbsp;Filter by Inactive</option>
                                </optgroup>
                             </select>                            
              			</div>	 -->
                        <div class="quick_nav">							
                            <a href="{% url 'admin_createuser' %}" class="thick_link_plus">Add new User</a>
                        </div>
           			 </div>                           
                                        
						
						<table class="admin content" align="center" cellspacing="0" cellpadding="0">
							<colgroup>
								<col width="30">                            
								<col width="300">
								<col width="220">                                
								<col width="100">                                
								<col width="100">
							</colgroup>				
							<tbody>
								<tr class="head">
									<th class=""><div>Pic</div></th>                                
									<th class="details"><div>Username &amp; Email</div></th>
									<th class="username"><div>Name &amp; Date</div></th>
									<th class="type"><div>Status</div></th>                                    
									<th class="action" style="text-align:left;"><div>Actions</div></th>
								</tr>	
								{%for profile in profiles%}				
								<tr class="row">
                                    <td class="">
                                        <a href="/profile/{{profile.user.username}}/">
                                            <img src="{{MEDIA_URL}}{{profile.get_profile_pic}}" alt="User Name" width="28" height="28" class="thumbnail">
                                        </a>
									</td>                                
									<td class="details">
										<ul class="user-details">
											<li><h3 style="font:bold 13px/14px arial, sans-serif; margin:0; padding:0"><a href="/profile/{{profile.user.username}}/" title="See Profile" style="text-decoration:none">{{profile.user.username}}</a></h5>
                                            <li style="font-size:12px;color:#808080;">{{profile.email}}</li>
										</ul>
									</td>
									<td class="username">
										<h4 style="font:bold 12px/12px arial,sans-serif;margin:0 0 2px 0;"><a href="/profile/{{profile.user.username}}/" style="text-decoration:none">{{profile.get_full_name}}</a></h4>
                                        <p style="color:#666; font-size:11px; margin:0; padding:0;">{% ds_time profile.user.date_joined %}</p>
									</td>  
									<td class="status">
										<h5>
										{%if profile.user.is_active%}
										<a href="/admin/setstatus/?id={{profile.user.id}}&status=0&page={{page}}" title="Click here to Deactivate" class="active">Active</a>
										{%else%}
										<a href="/admin/setstatus/?id={{profile.user.id}}&status=1&page={{page}}" title="Click here to Activate" class="inactive">In Active</a>
										{%endif%}
										</h5>
										
									</td>
									<td class="action">
										<div class="action_link">
                                        <div class="action_nav">
											<a href="/admin/updateuser/?uid={{profile.user.id}}" class="edit">Edit</a>&nbsp;|&nbsp;<a href="/admin/deleteuser/?uid={{profile.user.id}}" onclick="if(!confirm('Are you sure you want to delete this user?')){return false;}" class="delete">Delete</a>
											</div>
										</div>
									</td>
								</tr>
								{%endfor%}
							
								                                              
							</tbody>
						</table>
                        <div style="width:740px; text-align:center; margin:20px 0">
                            {% if profiles %}
								 {% ifnotequal pages 1  %}
									<div class="ar-Pages c-12 last">
										{% if is_paginated %}
											{% include "common/pagination_ajax.html" %}
										{% endif %}
									</div>
								{% endifnotequal %}
							{% endif %}  
                     	</div>   
                </div> 
                <hr />
            </div>
        </div>
      {% endblock %}