{% load thumbnail %}
{% load i18n %}
{% load template_loop %}	
	<div class="preview-items-head">
     <h4>{% trans 'Favorite Articles' %}</h4>
    </div>
	{% if articles %}		   
	<ol class="data-table table-lists-container" id="ajax_content_list">
			{% for article in articles %}	
			<li class="table-list" id="li_{{article.id}}">
			        <div class="table-list-container has-thumb110 group">
			            <div class="item-media">
                        	<a href="{{ article.get_absolute_url }}" class="inline-block">
                                <span class="item-thumb thumb-110">
                                    <span class="thumb-in">
                                        <span class="thumb">
                                        	{% if article.articlephotos.all %}
											{% for photo in article.articlephotos.all %}
												{% if photo.featured %}
						                    		<img src="{% thumbnail photo.photo 110x0 %}" class="inline-block" title="{{article.title}}" width="110">
													{{ forloop|break }}
												{% else %}
													{% if forloop.last %}
														<img src="{% thumbnail photo.photo 110x0 %}" class="inline-block" title="{{article.title}}" width="110">
													{% endif %}
												{% endif %}
											{% endfor %}
											{% else %}
												<img src="{{STATIC_URL}}ui/images/global/img-none.png" class="inline-block" title="{{article.title}}" width="110">
											{% endif %}
											<span class="inline-block h100"></span>
										</span>
                                    </span>
                                </span>
							</a>                                                            
                        </div> 
						<div class="item-info relative-block">
			                <h3 class="title"><a href="{{ article.get_absolute_url }}">{{article.title}}</a></h3>
			                <p class="ltxt80">{% trans 'On' %} {{article.created_on|date:"d M, Y"}}</p>
			                <ul class="quick-stats group">
			                    <li class="cmnt">{% autoescape off %}{{ article.summary|truncatewords:30  }}{% endautoescape %}</li>
			                </ul>
			            </div>
			        </div>
			    </li> 
			{% endfor %}
			</ol>
			<div id="pagenation">
				{% include 'account/favorite/pagenation.html' %}      
				<input type="hidden" id="url" value="{% url 'ajax_myfav_list' 'article' %}">
				<input type="hidden" id="module" value="article">       
			</div>  
			{% else %}
				<div class="no-data"> <p>{% trans 'Sorry , No favorite articles found' %}</p></div>
         	{% endif %}
