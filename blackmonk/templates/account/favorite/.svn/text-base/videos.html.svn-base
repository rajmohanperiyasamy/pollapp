{% load thumbnail %}
{% load i18n %}
{% load template_loop %}	
	<div class="preview-items-head">
     <h4>{% trans 'Favorite Videos' %}</h4>
    </div>
	{% if videos %}		   
	<ol class="data-table table-lists-container" id="ajax_content_list">
			{% for vid in videos %}	
			<li class="table-list" id="li_{{vid.id}}">
			        <div class="table-list-container has-thumb110 group">
			            <div class="item-media">
                        	<a href="{{ vid.get_absolute_url }}" class="inline-block">
                                <span class="item-thumb thumb-110">
                                    <span class="thumb-in">
                                        <span class="thumb"><img src="{{vid.get_thumb}}" alt="{{vid.title}}" class="inline-block"><span class="inline-block h100"></span></span>
                                    </span>
                                </span>
							</a>                                                            
                        </div> 
						<div class="item-info relative-block">
			                <h3 class="title"><a href="{{ vid.get_absolute_url }}">{{vid.title}}</a></h3>
			                <p class="ltxt80">{% trans 'On' %} {{vid.created_on|date:"d M, Y"}}</p>
			                <ul class="quick-stats group">
			                    <li class="cmnt">{% autoescape off %}{{ vid.description|truncatewords:30  }}{% endautoescape %}</li>
			                </ul>
			            </div>
			        </div>
			    </li> 
			{% endfor %}
			</ol>
			<div id="pagenation">
				{% include 'account/favorite/pagenation.html' %}      
				<input type="hidden" id="url" value="{% url 'ajax_myfav_list' 'videos' %}">
				<input type="hidden" id="module" value="videos">    
			</div>  
			{% else %}
				<div class="no-data"> <p>{% trans 'Sorry , No favorite videos found' %}</p></div>
         	{% endif %}
