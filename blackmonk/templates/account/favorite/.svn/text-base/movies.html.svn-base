{% load thumbnail %}
{% load i18n %}
{% load template_loop %}	
	<div class="preview-items-head">
     <h4>{% trans 'Favorite Movies' %}</h4>
    </div>
	{% if movies %}		   
	<ol class="data-table table-lists-container" id="ajax_content_list">
			{% for mov in movies %}	
			<li class="table-list" id="li_{{mov.id}}">
			        <div class="table-list-container has-thumb110 group">
			            <div class="item-media">
                        	<a href="{{ mov.get_absolute_url }}" class="inline-block">
                                <span class="item-thumb thumb-110">
                                    <span class="thumb-in">
                                        <span class="thumb"><img src="{{ mov.get_image }}" alt="{{mov.title}}" class="inline-block"><span class="inline-block h100"></span></span>
                                    </span>
                                </span>
							</a>                                                            
                        </div> 
						<div class="item-info relative-block">
			                <h3 class="title"><a href="{{ mov.get_absolute_url }}">{{mov.title}}</a></h3>
			                <p class="ltxt80">{% trans 'Release:' %} {{mov.release_date|date:"d M, Y"}}</p>
							<p class="ltxt80">{% trans 'Director:' %} {{mov.director }}</p>
			                <ul class="quick-stats group">
			                    <li class="cmnt">{% autoescape off %}{{ mov.synopsis|truncatewords:30  }}{% endautoescape %}</li>
			                </ul>
			            </div>
			        </div>
			    </li> 
			{% endfor %}
			</ol>
			<div id="pagenation">
				{% include 'account/favorite/pagenation.html' %}      
				<input type="hidden" id="url" value="{% url 'ajax_myfav_list' 'movies' %}">
				<input type="hidden" id="module" value="movies">    
			</div>  
			{% else %}
				<div class="no-data"> <p>{% trans 'Sorry , No favorite movies found' %}</p></div>
         	{% endif %}
