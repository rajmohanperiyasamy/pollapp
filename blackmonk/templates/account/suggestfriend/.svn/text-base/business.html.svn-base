{% load thumbnail %}
{% load i18n %}
{% load template_loop %}	
	<div class="preview-items-head">
     	<h4>{% trans 'Business Suggested to you' %}</h4>
    </div>
	<input type="hidden" id="current_display_module" value="business">
	<input type="hidden" id="current_display_mode" value="{{current_display_mode}}">
	<input type="hidden" id="current_sort_by_mode" value="{{current_sort_by_mode}}">      
	{% if object_list %}		   
	<ol class="data-table table-lists-container" id="ajax_content_list">
			{% for object in object_list %}	
			<li class="table-list" id="li_{{object.id}}" style="background-color:{% if object.status == 'R' %}#fff{% else %}#ffb{% endif %}">
			        <div class="table-list-container has-thumb110 group">
			            <div class="item-media">
                        	<a href="{{ object.suggestion.suggested_item.get_absolute_url }}" class="inline-block">
                                <span class="item-thumb thumb-110">
                                    <span class="thumb-in">
                                        <span class="thumb"><img src="{% if object.suggestion.suggested_item.logo.logo %}{% thumbnail object.suggestion.suggested_item.logo.logo 110x0 %}{% else %}{{ object.suggestion.suggested_item.get_default_image }}{% endif %}" alt="{{ classified.title }}" class="inline-block"><span class="inline-block h100"></span></span>
                                    </span>
                                </span>
							</a>                                                            
                        </div> 
						<div class="item-info relative-block">
			                <h3 class="title" id="hed"><a class="notify_obj_title" href="javascript:void(0)" id="{{object.id}}">{{object.suggestion.suggested_item.name}}</a></h3>

							<p class="ltxt80">{% trans 'Suggested by' %} {{object.suggestion.suggested_by.profile.display_name}} {% trans 'On' %} {{object.suggestion.suggested_on|date:"d M, Y"}}</p>
							<input type='hidden' class="ltxt80 read_status" id="read_status_{{object.id}}" value="{% if object.status == 'N' %}Unread{% else %}Read{% endif %}">
							{% with object.suggestion.suggested_item.address.all.0 as address %}
							<p class="ltxt80">{% if address.address1 %}{{ address.address1 }}{% endif %} {% if address.address2 %}{{ address.address2 }}{% endif %} 
							{% if address.zip %}&nbsp;{{ address.zip }}{% endif %}</p>
							{% if address.telephone1 %}<p class="ltxt80" style="padding-top:3px;">{% trans 'Phone' %}: {{ address.telephone1 }} {% if address.telephone2 %}<strong>/</strong> {{ address.telephone2 }}{% endif %}</p>{% endif %}
			            	{% if address.website %}<p class="ltxt80" style="padding-top:3px;"><a href="{{ address.website }}" target="_blank" class="visit_website">{% trans 'Visit Website' %}</a><br/></p>{% endif %}
							{% endwith %}
							<p class="ltxt80 message" id="msg_box_{{object.id}}" style="display:none;">
								{% trans 'Message :' %} {{object.suggestion.subject}}<br>
								click <a href="{{object.suggestion.suggested_item.get_absolute_url}}">HERE</a> to open the business
							</p>
							
						</div>
			        </div>
			    </li> 
			{% endfor %}
			</ol>
			<div id="pagenation">
				{% include 'account/suggestfriend/pagenation.html' %}      
			</div>  
			{% else %}
				<div class="no-data"> <p>{% trans 'Sorry , No Suggested business found' %}</p></div>
         	{% endif %}
<script type="text/javascript" src="{{STATIC_URL}}js/user_notification.js"></script>