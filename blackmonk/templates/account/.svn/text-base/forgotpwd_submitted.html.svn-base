<script type="text/javascript" src="{{ STATIC_URL }}js/jquery/jquery-1.4.4.min..js"></script>
<script src="{{ STATIC_URL }}js/jquery/jquery.validate.js" type="text/javascript"></script>
<script type="text/javascript">
$(document).ready(function() {
		var validator = $("#req_ref_form").bind("invalid-form.validate", function() {
		}).validate({
			debug: true,
			errorElement: "em",
			focusInvalid: false,
		//focusCleanup: true,
			onkeyup: false,
			submitHandler: function() {
				$("#finish_button").attr("disabled","disabled")
				document.req_ref_form.submit()
				
			},
				
			errorPlacement: function(error, element) {
				error.appendTo(element.next());
			},
			rules: {
				email: {
					required:true,
					email:true
				}
			},
			messages: {
			email: {
				required: " Please enter your email",
				email :"Sorry! enter a valid email address."
				
				
			}
			}
		});
		
	});
</script>
</head>
