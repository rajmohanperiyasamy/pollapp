{% load ds_utils %}
{% load i18n %}
{% load thumbnail %}
	<!-- script type="text/javascript" src="{{STATIC_URL}}ui/js/application.js"></script -->
	{% if deals %}
			{% for deal in deals %}	
			{% for ni in new_id %}
			{% ifequal ni deal.id %}		
			<li class="table-list" id="li_{{deal.id}}">
			        <div class="table-list-container check-item has-thumb110 group">
			        		<span id="id_featured_cls_{{deal.id}}" class="list-type {% if deal.featured %}featured-item{% endif %}"><a class="tttxt" title="{% if deal.featured %}{% trans 'Item listed as featured' %}{% endif %}" href="#">{% if deal.featured %}{% trans 'Featured' %}{% endif %}</a></span>
						<span class="checkbox-wrap">
							<span class="cform-checkbox-container"><input onclick="fix_action()" type="checkbox" value="{{deal.id}}" status="{{deal.status}}" id="id_checkbox_{{deal.id}}" name="artCulture" class="check-overflow cbox check_action"><span class="cform-checkbox-element"></span></span>
						</span>
			            <div class="item-media">
                        	<a href="{% url 'staff_deal_preview' deal.id %}" class="inline-block">
                                <span class="item-thumb thumb-110">
                                    <span class="thumb-in">
                                        <span class="thumb"><img src="{% if deal.get_first_deal_image %}{% thumbnail deal.get_first_deal_image 110x0 %}{% else %}{{deal.get_default_image}}{%endif%}" alt="{{event.title}}" class="inline-block"><span class="inline-block h100"></span></span>
                                    </span>
                                </span>
							</a>                                                            
                        </div> 
						<div class="item-info relative-block">
			                <h3 class="title"><a href="{% url 'staff_deal_preview' deal.id %}">{{deal.title}}</a></h3>
			                <p class="ltxt80">{{deal.category.name}} <span class="divider12">|</span> {% trans 'By' %} <a href="{% url 'user_profile' deal.created_by.profile_slug %}">{{deal.created_by.display_name}}</a> <span class="divider12">|</span>{{deal.created_on|date:"M d, Y"}}<span class="divider12">|</span><a href="{% url 'staffdeal_voucher_details' %}?did={{deal.id}}" title="{% trans 'Voucher Details' %}" class="voucher-detail light_box_voucher">{% trans 'Voucher' %} ({{ deal.get_voucher_count }})</a></p>
			                <ul class="quick-stats group">
			                    <li class="views"><a class="tttxt" href="javascript:void(0)" title="{% trans 'Viewers' %}"><span class="inline-block icon-view-stats"></span>{{deal.most_viewed}}</a></li>
			                    <!--li class="cmnt"><a class="tttxt" title="{% trans 'View comments' %}" href="#"><span class="inline-block icon-cmnt-stats"></span></a></li-->
			                </ul>
			                <div class="item-status {% if forloop.counter == 1 %}tip tip8{% endif %} {% if not perms.deal.publish_deals %}no-options{% endif %} dev_hide_list_status" onclick="display_change_status({{deal.id}},$('#id_estatus_{{deal.id}}').attr('name'));">
			                	<span class="status-inside inline-block" id="id_span_chge_sts_{{deal.id}}">
                                <span title="{% get_status_class_custom deal.status %}" id="id_estatus_{{deal.id}}" name="{{deal.status}}" class="inline-block tttxt status-idty icon-{% get_status_class_custom deal.status %}"></span>	  
			                    {% if not perms.deal.publish_deals %}</span>{% endif %}
								{% if perms.deal.publish_deals %}
									<span class="arrow"></span></span>
									<ul class="dropdown-list" id="change_status_id_{{deal.id}}">
										<li><strong>{% trans 'Update status to...' %}</strong></li>
				                       	<ul id="id_dis_status_{{deal.id}}">
				                       	</ul>
				                    </ul>
								{% endif %}
			                </div>                                                        
			            </div>
						{% if perms.deal.delete_deal or perms.deal.change_deals or perms.deal.promote_deals %}
			            <div class="action-buttons {% if forloop.counter == 1 %}tip tip9{% endif %}">
			                <div class="relative-block">
			                    <span class="item-manage inline-block dev_hide_list_settings" id="id_span_settings_{{deal.id}}" onclick="display_settings({{deal.id}});"><span class="action-icon icon-manage"></span></span>
			                    <ul class="dropdown-list dev_settingsdrpdwn" id="settings_id_{{deal.id}}" style="display:none">
			                        {% if perms.deal.promote_deals %}
										<li id="id_feature_{{deal.id}}" {% if deal.featured %}style="display:none"{%endif%}><a href="javascript:void(0)" onclick="{% if not feature_limit %}feature_deal({{deal.id}},'F');{% else %}alert('You can feature only 5 deals !');{% endif %}">{% trans 'Feature this' %}</a></li>
										<li id="id_unfeature_{{deal.id}}" {% if not deal.featured %}style="display:none"{%endif%}><a href="javascript:void(0)" onclick="feature_deal({{deal.id}},'N');">{% trans 'Non-feature this' %}</a></li>
									   	<li><a href="{% url 'staffdeal_voucher_details' %}?did={{deal.id}}" title="{% trans 'Voucher Details' %}" class="voucher-detail light_box_voucher">{% trans 'Voucher' %} ({{ deal.get_voucher_count }})</a></li>
										<li><span class="line-break"></span></li>
									{% endif %}
									{% if perms.deal.change_deal %}
										<li><a href="{% url 'staff_deals_add_deal' %}?did={{deal.id}}">{% trans 'Edit this deal' %}</a></li>
								   		<li><a href="{% url 'staff_deal_seo' deal.id %}" title="{% trans 'Title / Description (SEO)' %}" class="bm-add-gadget light_box">{% trans 'Update SEO' %}</a></li>
										<li><span class="line-break"></span></li>
								    {% endif %}
									{% if perms.deal.delete_deal %}
				                        <li><a onclick="if(confirm(gettext('Are you sure you want to delete the selected deal?'))){filter_action({{deal.id}},'DEL');return false;}" href="javascript:void(0)">{% trans 'Delete this deal' %}</a></li>
									{% endif %}
			                    </ul>
							</div>                                                              	                                                         
			            </div>
						{% endif %}
			        </div>
			    </li> 
			{% endifequal %}	
			{% endfor %}
			{% endfor %}
			{% else %}
        		 <div class="no-data"> <p>{% trans 'Sorry , No deals found !' %}</p></div>    
         	{% endif %} 