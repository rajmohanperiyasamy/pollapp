{% load i18n %}
<div class="dTs-cRd mNi">
{% if deal_payment %}
	<h5>{% trans 'Deal Details' %}</h5>
	<dl class="dl-horizontal">
	    <dt>
	        <span class="dT-iN">{% trans 'Deal Name :' %}</span>
	    </dt>
	    <dd>{{ deal_payment.deal.title }}</dd>
	    <dt>
	        <span class="dT-iN">{% trans 'Voucher Valid Date :' %}</span>
	    </dt>
	    <dd>{{ deal_payment.deal.voucher_valid }}</dd>
	    <dt>
	        <span class="dT-iN">{% trans 'Voucher Code :' %}</span>
	    </dt>
	    <dd>{{ deal_payment.dealkey }}</dd>
	    <dt>
	        <span class="dT-iN">{% trans 'Quantity :' %}</span>
	    </dt>
	    <dd>{{ deal_payment.quantity }}</dd>
		<dt>
	        <span class="dT-iN">{% trans 'Total Price :' %}</span>
	    </dt>
	    <dd>{{globalsettings.currency}}{{ deal_payment.total_price }}</dd>
		<dt>
	        <span class="dT-iN">{% trans 'Transaction Id :' %}</span>
	    </dt>
	    <dd>{{ deal_payment.transaction_no }}</dd>	
	</dl>
</div>
	{% if deal_payment.gift_addr %}
	<hr class="mRt15 mRb15">
	<div class="dTs-cRd mNi">
		<h5>Additional Features</h5>
		<dl class="dl-horizontal">
		    <dt>
		        <span class="dT-iN">{% trans 'Gifted to :' %}</span>
		    </dt>
		    <dd>{{ deal_pymnt.gift_addr.g_name }}</dd>
		    <dt>
		        <span class="dT-iN">{% trans 'Mobile :' %}</span>
		    </dt>
		    <dd>{{ deal_pymnt.gift_addr.g_mobile }}</dd>
		</dl>
	</div>
	{% endif %}
<hr class="mRt15 mRb15">
<div class="dTs-cRd mNi">
	<h5>Buyer Details</h5>
	<dl class="dl-horizontal">
	    <dt>
	        <span class="dT-iN">{% trans 'Name :' %}</span>
	    </dt>
	    <dd>{{ deal_payment.name }}</dd>
	    <dt>
	        <span class="dT-iN">{% trans 'Address :' %}</span>
	    </dt>
	    <dd>{{ deal_payment.address }}</dd>

	    <dt>
	        <span class="dT-iN">{% trans 'Email :' %}</span>
	    </dt>
	    <dd>{{deal_payment.email }}</dd>
		
	{% if deal_payment.mobile %}
	    <dt>
	        <span class="dT-iN">{% trans 'Mobile :' %}</span>
	    </dt>
	    <dd>{{ deal_payment.mobile }}</dd>
	{% endif %}
	</dl>
{% endif %}
</div>
{% if deal_payment.deal.merchant.id == user.id %}
	<button class="btn btn-light" type="button" data-dismiss="modal">Cancel</button>
	{% if deal_payment.status == 'S' %}<button class="btn btn-danger" type="button" onclick="save_voucher({{deal_payment.id}}, 'D')">Mark as Redeemed</button>{% endif %}
	{% if deal_payment.status == 'D' %}<button class="btn btn-primary" type="button" onclick="save_voucher({{deal_payment.id}}, 'S')">Mark as not Redeemed</button>{% endif %}
{% endif %}
