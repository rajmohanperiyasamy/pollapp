{% load ds_utils %}
{% load i18n %}		
{% load thumbnail %}	
<!-- script type="text/javascript" src="{{STATIC_URL}}ui/js/application.js"></script -->
{% if eventsdisplay %}
	{% for event in eventsdisplay %}	
		{% if not new_id or new_id and event.id in new_id %}
			<li class="table-list" id="li_{{event.id}}">
		        <div class="table-list-container check-item has-thumb110 group">
		        	{% ifequal event.listing_type 'F'%}
		        		<span class="list-type featured-item"><a class="tttxt" title="{% trans 'Item listed as featured' %}" href="#">{% trans 'Featured' %}</a></span>
			 		{% else %}
					{% ifequal event.listing_type 'S' %}
						<span class="list-type sponsored-item"><a class="tttxt" title="{% trans 'Item listed as sponsored' %}" href="#">{% trans 'Sponsored' %}</a></span>
			  		{% endifequal %}
			 		{% endifequal %}
					<span class="checkbox-wrap">
						<span class="cform-checkbox-container"><input type="checkbox" onclick="fix_action()" status="{{event.status}}" value="{{event.id}}" id="id_checkbox_{{event.id}}" name="artCulture" class="check-overflow cbox check_action"><span class="cform-checkbox-element"></span></span>
					</span>
		            <div class="item-media">
	                   	<a href="{% url 'staff_events_preview' event.id %}" class="inline-block">
	                           <span class="item-thumb thumb-110">
	                               <span class="thumb-in">
	                                   <span class="thumb"><img src="{% if event.get_cover_image %}{% thumbnail event.get_cover_image 110x0 %}{% else %}{{event.get_default_image}}{%endif%}" alt="{{event.title}}" class="inline-block"><span class="inline-block h100"></span></span>
	                               </span>
	                           </span>
						</a>                                                            
	                   </div> 
					{% get_payment_mode id=event.id type='event' as payments%}
					<div class="item-info relative-block">
		                <h3 class="title"><a href="{% url 'staff_events_preview' event.id %}">{{event.title}}</a></h3>
		                <p class="ltxt80">{% if event.category.all %}{% for cat in event.category.all %}{{cat.name}}{% if not forloop.last %}, {% endif %}{% endfor %}{% endif %} <span class="divider12">|</span> {% trans 'By' %} <a href="{% url 'user_profile' event.created_by.profile_slug %}">{{event.created_by.get_full_name}}</a> <span class="divider12">|</span>{{event.created_on|date:"M d, Y"}}</p>
		                <p class="ltxt80">{% trans 'Start Date:' %} {{event.start_date|date:"M d, Y"}} <span class="divider12">|</span> {% trans 'End Date:' %} {{event.end_date|date:"M d, Y"}}</p>
						{%if payments %}<p class="ltxt80">Payment Mode: {{payments.payment_mode}} & Payment Status: {% if event.is_paid%}Paid{%endif%}{% endif %} 
						<ul class="quick-stats group">
		                    <li class="views"><a class="tttxt" href="javascript:void(0)" title="{% trans 'Viewers' %}"><span class="inline-block icon-view-stats"></span>{{event.visits}}</a></li>
			                    <!--li class="cmnt"><a class="tttxt"title="{% trans 'View comments' %}" href="#"><span class="inline-block icon-cmnt-stats"></span></a></li-->
		                </ul>
		                <div class="item-status {% if forloop.counter == 1 %}tip tip8{% endif %} {% if not perms.events.publish_event %}no-options{% endif %} dev_hide_list_status" onclick="display_change_status({{event.id}},$('#id_estatus_{{event.id}}').attr('name'));">
		                	<span class="status-inside inline-block" id="id_span_chge_sts_{{event.id}}">
							<span title="{% get_status_class event.status %}" name="{{event.status}}" id="id_estatus_{{event.id}}" class="inline-block tttxt status-idty icon-{% get_status_class event.status %}"></span>	 
		                    {% if not perms.events.publish_events %}</span>{% endif %}
							{% if perms.events.publish_events %}
								<span class="arrow"></span></span>
								<ul class="dropdown-list" id="change_status_id_{{event.id}}">
									<li><strong>{% trans 'Update status to...' %}</strong></li>
									<ul id="id_dis_status_{{event.id}}">
			                       	</ul>
			                    </ul>
							{% endif %}
		                </div>                                                        
		            </div>
		            {% with event.get_offline_payment_object as offpay %}
	            	{% if offpay.status == 'N' %}<a class="bm-add-gadget light_box" href='{% url 'event_offline_payment' event.id %}' style="position: absolute; right: 15px; bottom: 15px; color: red;" title="Process Offline Payment">* process offline payment</a>{% endif %}
					{% if perms.events.promote_events or perms.events.change_event or perms.events.delete_event %}
		            <div class="action-buttons {% if forloop.counter == 1 %}tip tip9{% endif %}">
		                <div class="relative-block">
		                    <span class="item-manage inline-block dev_hide_list_settings" id="id_span_settings_{{event.id}}" onclick="display_settings({{event.id}});"><span class="action-icon icon-manage"></span></span>
		                    <ul class="dropdown-list dev_settingsdrpdwn" id="settings_id_{{event.id}}" style="display:none;{% if offpay.status == 'N' %}width: 145px;{% endif %}">
		                    	{% if offpay.status == 'N' %}
									<li><a title="{% trans 'Process Offline Payment' %}" href="{% url 'event_offline_payment' event.id %}" class="bm-add-gadget light_box">{% trans 'Procress Offline Payment' %}</a></li>
		                         	<li><span class="line-break"></span></li>
		                        {% endif %}
                            	{% if event.album.get_gallery_uploaded_images %}
                                	<li><a href="javascript: set_cover_photo_lightbox({{event.album.id}})" >{% trans 'Set Cover Image' %}</a></li>
                               	{% endif %}
		                       	{% if perms.events.promote_events %}
									<div id="id_upgrade_{{event.id}}" {% if event.status != 'P' and event.status != 'N' %} style="display:none"{% endif %}>
								   		<li><a title="{% trans 'Update Listig Type' %}" href="{% url 'staff_events_listing_type' %}?id={{event.id}}" class="bm-add-gadget light_box">{% trans 'Update Listing Type' %}</a></li>
										<li><span class="line-break"></span></li>
									</div>
								{% endif %}
								{% if perms.events.change_event %}
		                        	<li><a href="{% url 'events_staff_addevent' %}?eid={{event.id}}">{% trans 'Edit' %}</a></li>
									<li><a title="{% trans 'Title / Description (SEO)' %}" href="{% url 'staff_events_seo' event.id %}" class="bm-add-gadget light_box">{% trans 'Update SEO' %}</a></li>
								{% endif %}
									<li><a title="{% trans 'Stats' %}" href="{% url 'common_get_modules_elements_views' event.id 'events' 0%}" >{% trans 'View Stats' %}</a></li>
									<li><a title="{% trans 'Events Logs' %}" class="bm-add-gadget light_box" href="{% url 'common_log' %}?obj_id={{ event.id }}&type=events">Audit Logs</a></li>
									<li><span class="line-break"></span></li>
								{% if perms.events.delete_event %}
		                        	<li><a onclick="if(confirm(gettext('Are you sure you want to delete the selected event?'))){filter_action({{event.id}},'DEL');return false;}" href="javascript:void(0)">{% trans 'Delete' %}</a></li>
								{% endif %}
		                    </ul>
						</div>                                                              	                                                         
		            </div>
					{% endif %}
					{% endwith %}
		        </div>
		    </li> 
		{% endif %}
	 {% endfor %}
 {% else %}
 	<div class="no-data"> <p>{% trans 'Sorry , No events found !' %}</p></div>
 {% endif %}  	 
