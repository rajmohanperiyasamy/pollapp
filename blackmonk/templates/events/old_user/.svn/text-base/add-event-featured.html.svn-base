	$(document).ready(function()
	{
	{% for ev in event_price_objects %}
			{% ifequal ev.level 'level0' %}
				{% ifequal event.payment.level 'level0' %}
				 	$('#id_calc_payment'+{{ev.id}}).show();
					$('#id_start_date'+{{ev.id}}).val('{% if event.listing_start %}{{event.listing_start|date:"Y/m/d"}}{% endif %}');
					$('#id_end_date'+{{ev.id}}).val('{% if event.listing_end %}{{event.listing_end|date:"Y/m/d"}}{% endif %}');
					$('#id_total_days'+{{ev.id}}+' h5').html('{{event.listing_duration}}');
					$('#id_total_pay'+{{ev.id}}+' strong').html('{% if event.listing_price %}{{event.listing_price}}{% else %}0{% endif %}');
					$('#f_or_s'+{{ev.id}}).val('basic');
					set_date_time({{ev.id}});
				{% endifequal %}
			{% else %}
				{% ifequal ev.level 'level1' %}
					{% ifequal event.payment.level 'level1' %}
					 	$('#id_calc_payment'+{{ev.id}}).show();
						$('#id_start_date'+{{ev.id}}).val('{% if event.listing_start %}{{event.listing_start|date:"Y/m/d"}}{% endif %}');
						$('#id_end_date'+{{ev.id}}).val('{% if event.listing_end %}{{event.listing_end|date:"Y/m/d"}}{% endif %}');
						$('#id_total_days'+{{ev.id}}+' h5').html('{{event.listing_duration}}');
						$('#id_total_pay'+{{ev.id}}+' strong').html('{% if event.listing_price %}{{event.listing_price}}{% else %}0{% endif %}');
						$('#f_or_s'+{{ev.id}}).val('sponsored');
						set_date_time({{ev.id}});
					{% endifequal %}
				{% else %}
					{% ifequal ev.level 'level2' %}
						{% ifequal event.payment.level 'level2' %}
					 		$('#id_calc_payment'+{{ev.id}}).show();
							$('#id_start_date'+{{ev.id}}).val('{% if event.listing_start %}{{event.listing_start|date:"Y/m/d"}}{% endif %}');
							$('#id_end_date'+{{ev.id}}).val('{% if event.listing_end %}{{event.listing_end|date:"Y/m/d"}}{% endif %}');
							$('#id_total_days'+{{ev.id}}+' h5').html('{{event.listing_duration}}');
							$('#id_total_pay'+{{ev.id}}+' strong').html('{% if event.listing_price %}{{event.listing_price}}{% else %}0{% endif %}');
							$('#f_or_s'+{{ev.id}}).val('featured');
							set_date_time({{ev.id}});
						{% endifequal %}
					{% endifequal %}
				{% endifequal %}
			{% endifequal %}
		{% endfor %}
	
	});
	
	function show_contents(level){
		if(level=='3'){
			$('#radio_3').attr('checked', true);
			$('#level_3').show();
			$('#level_2').hide();
			$('#level_1').hide();
		}
		else if(level == '1'){
			$('#radio_1').attr('checked', true);
			$('#level_1').show();
			$('#level_2').hide();
			$('#level_3').hide();
		}
		else{
			$('#radio_2').attr('checked', true);
			$('#level_2').show();
			$('#level_1').hide();
			$('#level_3').hide();
		}
		if($("#id_start_date"+level).length){
			$("#id_start_date"+level).datepicker({ dateFormat: "yy/mm/dd" , minDate: new Date()});
		}
		if($("#id_end_date"+level).length){
			$("#id_end_date"+level).datepicker({ dateFormat: "yy/mm/dd" , minDate: new Date()});
		}
	}
	function show_payment_div(id)
		{
			if(id=='3'){
				$('#radio_3').attr('checked', true);
				$('#level_3').show();
				$('#level_2').hide();
				$('#level_1').hide();
			}
			else if(id == '1'){
				$('#radio_1').attr('checked', true);
				$('#level_1').show();
				$('#level_2').hide();
				$('#level_3').hide();
			}
			else{
				$('#radio_2').attr('checked', true);
				$('#level_2').show();
				$('#level_1').hide();
				$('#level_3').hide();
			}
			if($("#id_start_date"+id).length){
				$("#id_start_date"+id).datepicker({ dateFormat: "yy/mm/dd" , minDate: new Date()});
			}
			if($("#id_end_date"+id).length){
				$("#id_end_date"+id).datepicker({ dateFormat: "yy/mm/dd" , minDate: new Date()});
			}
			show_content('ajax_content');
		}
	
	function days_between(date1, date2)
	{
	    // The number of milliseconds in one day
	    var ONE_DAY = 1000 * 60 * 60 * 24
	    // Convert both dates to milliseconds
	    var date1_ms = date1.getTime()
	    var date2_ms = date2.getTime()
	    // Calculate the difference in milliseconds
	    var difference_ms = Math.abs(date1_ms - date2_ms)
	    // Convert back to days and return
	    return Math.round(difference_ms/ONE_DAY)
	}

	function calculate_payment(price,id,actvfee)
	{
		var date1=$("#id_start_date"+id).val();
		var date2=$("#id_end_date"+id).val();
		if (date1!='' && date2!='')
		{
			var start_date=new Date(date1);
			var end_date=new Date(date2);
			
			var nw_date=days_between(start_date,end_date);
			var nw_date=nw_date+1;
			var day_total=nw_date*price;
			var total=actvfee+day_total;
			
			$('#id_total_pay'+id).html(total);
			$('#id_day_pay'+id).html("=> {{ globalsettings.currency }} "+day_total);
			$('#id_total_days'+id).html(nw_date+" days / ");
			$('#id_fdsp_duration').val(nw_date);
			$('#id_fdsp_payment').val(total);
			$('#id_fdsp_start_dates').val(date1);
			$('#id_fdsp_end_dates').val(date2);
		}
	}
	
	function validate()
	{
		id=$('input:radio[name=payment_level]:checked').val();
		var success=true;
		if($('#id_start_date'+id).val()==''){
			$('#id_start_date'+id).addClass('error');
			success=false;
		}
		else{
			$('#id_start_date'+id).removeClass('error');
			$('#fdsp_start_dates').val($('#id_start_date'+id).val());
		}
		if($('#id_end_date'+id).val()==''){
			$('#id_end_date'+id).addClass('error');
			success=false;
		}
		else{
			$('#id_end_date'+id).removeClass('error');
			$('#fdsp_end_dates').val($('#id_end_date'+id).val());
		}
		if(success || $('#f_or_s'+id).val()=='free'){return true;}
		else{return false;}
	}
	</script>	
