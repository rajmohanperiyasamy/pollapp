{% load i18n %}		
{% load thumbnail %}
		<input type="hidden" value="{% url 'staff_movie_ajax_display_movie' %}" name="id_hidden_url" id="id_hidden_url">
		<input type="hidden" value="{% url 'staff_movie_ajax_action' %}" name="id_action_url" id="id_action_url">
		<input type="hidden" value="{% url 'staff_movie_change_status' %}" name="url_for_status_change" id="url_for_status_change">
		
	
		<input type="hidden" value="{{status}}" name="id_status" id="id_status">
		<input type="hidden" value="{{listing_type}}" name="id_listing_type" id="id_listing_type">
        <input type="hidden" value="{{created}}" name="id_created" id="id_created">
        <input type="hidden" value="{{sort}}" name="id_sort" id="id_sort">
        <input type="hidden" value="{{msg}}" name="id_action_msg" id="id_action_msg">
		<input type="hidden" value="{% if search %}{{search}}{% endif %}" name="id_search" id="id_search">
        <input type="hidden" value="" name="id_action" id="id_action">
		{% if moviedisplay %}
		<ol class="data-table table-lists-container" id="ajax_content_list">
			{% for movie in moviedisplay %}	
			<li class="table-list" id="li_{{movie.id}}">
			        <div class="table-list-container check-item has-thumb110 group">
			        	{% ifequal movie.listing_type 'F'%}
			        		<span class="list-type featured-item"><a class="tttxt" title="{% trans 'Item listed as featured' %}" href="#">{% trans 'Featured' %}</a></span>
				 		{% else %}
						{% ifequal movie.listing_type 'S' %}
							<span class="list-type sponsored-item"><a class="tttxt" title="{% trans 'Item listed as sponsored' %}" href="#">{% trans 'Sponsored' %}</a></span>
				  		{% endifequal %}
				 		{% endifequal %}
						 <span class="checkbox-wrap">
							<span class="cform-checkbox-container"><input type="checkbox" onclick="fix_action()" status="{{movie.status}}" value="{{movie.id}}" id="id_checkbox_{{movie.id}}" name="artCulture" class="check-overflow cbox check_action"><span class="cform-checkbox-element"></span></span>
						</span>
					     <div class="item-media">
                        	<a class="inline-block" href="{% url 'staff_movie_preview_url' %}?id={{movie.id}}">
                                <span class="item-thumb thumb-110">
                                    <span class="thumb-in">
                                        <span class="thumb"><img class="inline-block" alt="{{ movie.title }}" src="{% if movie.image %}{% thumbnail movie.image 164x0 %}{% endif %}"><span class="inline-block h100"></span></span>
                                    </span>
                                </span>
							</a>                                                            
                        </div> 
						<div class="item-info relative-block">
                            <h3 class="title"><a href="{% url 'staff_movie_preview_url' %}?id={{movie.id}}">{{movie.title}}</a></h3>
                            <p class="ltxt80">By <a href="{% url 'user_profile' movie.created_by.profile_slug %}">{{movie.created_by.get_full_name}}</a> <span class="divider12">|</span>{{movie.created_on|date:"M d,Y"}}</p>
							<p class="ltxt80">Release date: {{movie.release_date|default:'N/A'}}</p>
                            <!--ul class="quick-stats group">
                                <li class="views"><a title="View Stats" href="javascript:void(0)" class="tttxt"><span class="inline-block icon-view-stats"></span>0</a></li>
                            </ul-->
						   
						   <div class="item-status {% if forloop.counter == 1 %}tip tip7{% endif %} {% if not perms.movies.publish_movies %}no-options{% endif %} dev_hide_list_status"  onclick="display_change_status({{movie.id}},$('#id_icon_published{{movie.id}}').attr('name'));">
								<span class="status-inside inline-block" id="id_span_chge_sts_{{movie.id}}">
								<span class="inline-block status-idty {% if movie.status == 'P' %}icon-published{% else %}icon-blocked{% endif %}" name="{{movie.status}}" id="id_icon_published{{movie.id}}"></span>
								{% if not perms.movies.publish_movies %}</span>{% endif %}
								{% if perms.movies.publish_movies %}
									<span class="arrow" ></span></span>	 
	                                 <ul class="dropdown-list" id="change_status_id_{{movie.id}}"> 
									 	<li><strong>{% trans 'Update status to...' %}</strong></li>	
										<ul id="id_dis_status_{{movie.id}}"></ul>
									 </ul>	
								 {% endif %}
							</div> 
                        </div>
						<div class="action-buttons {% if forloop.counter == 1 %}tip tip8{% endif %}">
			                <div class="relative-block">
			                    <span class="item-manage inline-block dev_hide_list_settings" id="id_span_settings_{{movie.id}}" onclick="display_settings({{movie.id}});"><span class="action-icon icon-manage"></span></span>
			                    <ul class="dropdown-list  dev_settingsdrpdwn" id="settings_id_{{movie.id}}" style="display:none">
			                       	 {% if perms.movies.change_movies %}
									 	<li><a  href="{% url 'staff_movie_edit_movie' %}?id={{movie.id}}">{% trans 'Edit' %}</a></li>
			                         	<li><a  title="Title / Description (SEO)" class="movie-seo" href="{% url 'staff_movie_ajax_movie_seo' %}?movie_id={{movie.id}}">{% trans 'Update SEO' %}</a></li>
										<li><span class="line-break"></span></li>
									 {% endif %}
								         <li><a title="Add/Edit Critics Review" href="{% url 'staff_movie_preview_url' %}?id={{movie.id}}&view=cr">{% trans 'Critic Review' %}</a></li>
									     <li><span class="line-break"></span></li>
								         <li><a class="prom " title="Showtimes" href="{% url 'staff_movie_preview_url' %}?id={{movie.id}}&view=st">{% trans 'Showtimes' %}</a></li>
										 <li><span class="line-break"></span></li>
							             <li><a title="{% trans 'view Stats' %}" href="{% url 'common_get_modules_elements_views' movie.id 'movies' 0 %}">{% trans 'View Stats' %}</a></li>
  										 <li><a title="{% trans 'Movie Logs' %}" class="bm-add-gadget light_box" href ="{% url 'common_log' %}?obj_id={{ movie.id }}&type=movies">Audit Logs</a></li>
										 <li><span class="line-break"></span></li>
                                     {% if perms.movies.delete_movies %}
									     <li><a onclick="if(confirm(gettext('Are you sure you want to delete the selected movie?'))){filter_action({{movie.id}},'DEL');return false;}"" href="javascript:void(0);">{% trans 'Delete'%}</a></li>
									{% endif %}
			                    </ul>
							</div>                                                              	                                                         
			            </div>
			        </div>
			    </li> 
			{% endfor %}
			</ol>
         	<div id="pagenation">
				{% include 'common/pagination_ajax.html'%}
			</div>  
         	
         {% else %}
         <div class="no-data"> <p>{% trans 'Sorry , No Movie found !' %}</p></div>
         {% endif %}    
		 
		 <script>
			
		 		function status_function(id,status){
						$('#id_dis_status_'+id).html('');
						if(status=='P'){
							ahtml = '<li><a onclick="save_status('+id+',\'B\');" href="javascript:void(0);">{% trans 'Inactive' %}</a></li>'
							$('#id_dis_status_'+id).append(ahtml);
						}
						else if(status=='B'){
							ahtml = '<li><a onclick="save_status('+id+',\'P\');" href="javascript:void(0);" >{% trans 'Active' %}</a></li>'
							$('#id_dis_status_'+id).append(ahtml);
						}
						else{
							$('#change_status_id_'+id).hide();
							$('#id_span_chge_sts_'+id).removeClass('active')
							return false;
						}
					}
					
					function save_status(id,status){
						$('#id_icon_published'+id).addClass('loading');
						var DataString="id="+id+"&status="+status;
						$.ajax({
							type: "GET",
							url: "{% url 'staff_movie_change_status' %}",
							data: DataString,
							success: function(data){
								if(data!=0){
									$('#id_icon_published'+id).removeClass('loading');
									$('#id_icon_published'+id).replaceWith(data);
									$('#change_status_id_'+id).hide();
									$('#id_span_chge_sts_'+id).removeClass('active')
									$('#id_checkbox_'+id).attr('status',status);
									show_count('all');
								}else{
									show_msg(gettext('Oops!!! Not able to process your request.'),'e');
								}
							}
						});
				}
					
		 
		 </script>	

		 
		 