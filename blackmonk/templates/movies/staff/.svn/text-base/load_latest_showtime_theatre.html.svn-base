{% load ds_utils %}
{% load i18n %}
{% load upload_tags %}
                                <div class="preview-group">
                                       {% if theatre_preview.get_movies %}
                                        <div class="preview-items-head group">
                                            <div class="right-item movie-showtimes" href="{% url 'staff_theatre_ajax_add_showtime' %}?theatre_id={{theatre_preview.id}}"><div class="cform-button prime"><span>Add Showtimes</span></div></div>
                                       <!--  <h3>{% trans 'Showtimes' %}</h3>
                                      --></div> 
									 {% endif %}
										
										<!--<div class="preview-items-head">
                                            <div class="right-item theatres-showtimes" href="{% url 'staff_theatre_ajax_add_showtime' %}?theatre_id={{theatre_preview.id}}"><div class="cform-button prime"><span>Add Showtimes</span></div></div>
                                            <h3>{% trans 'Showtimes'%}</h3>
                                        </div>-->
										<ol class="data-table-inset">
                                        	<li class="table-list-row-head">
                                            	<div class="table-list-row-inner group">
                                                    <div class="table-list-coloumn w220 txt-right">{% trans 'Movie' %}</div>	
                                                    <div class="timings">{% trans 'Showtimes'%}</div>	
												</div>                                                    
                                            </li>
											{% for a in added %}
                                        	<li class="table-list-row manage-items" id="show_times_li_{{a.id}}">
											    <div class="table-list-row-inner group">
                                                	<div class="table-list-coloumn w220 txt-right">
														<h3>{{a.movie.title}}</h3>
													</div>
													<div class="timings">
														{% autoescape off %}
												        {% for show in a.get_shows %}
                                                    	<div class="rw">
                                                            <span class="date">{{show.date|date:"D, dS M"}}</span>
                                                            <p class="grid">{% split_show_times show.show_times %}</p>
                                                    	</div>
														{% endfor %}
				                                        {% endautoescape %}
                                                    </div>
													 <div class="action-buttons">
													    <a href="{% url 'staff_theatre_edit_show_details' %}?id={{a.id}}"  class="tttxt-n edit_movie_lightbox"  original-title="Edit"><span class="action-icon icon-edit"></span></a>
													    <a href="javascript:void(0)" class="tttxt-n" onclick="delete_showtime({{ a.id}});" original-title="Delete"><span class="action-icon icon-delete"></span></a>
                                                  	</div>
                                                </div>
											</li>
                                        {% endfor %} 
                                        </ol> <!-- end table -->
										 {% if not  theatre_preview.get_movies %}
										  <div class="no-data">
                                        	<p>{% trans 'No showtimes found for this theatre.'%}</p>
                                            <div class="button-insde">
                                            	<span class="btn-txt-inline-prime edit_movie_lightbox" href="{% url 'staff_theatre_ajax_add_showtime' %}?theatre_id={{theatre_preview.id}}" title="Add Showtime"><span class="btn-txt">{% trans 'Add Showtimes' %}</span></span>
                                            </div>
                                         </div>
										{% endif %}
										
										
									</div>
