{% load i18n %}
{% load comment_config %}
{% load ds_utils %}
{% load thumbnail %}
{% load mptt_comments_tags %}
{% load markup i18n mptt_tags mptt_comments_tags comparison %}
{% get_mptt_comment_list_more for object as comments page %}
{% if comments %}
{% for comment, tree in comments|tree_info %}
<ol class="pRnT" id="comment_holder_ol_{{comment.id}}">
