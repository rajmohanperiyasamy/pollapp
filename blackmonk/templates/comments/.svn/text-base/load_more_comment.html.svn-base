				{% else %}
	            	<a href="{% url 'user_profile' comment.user.username %}"><img class="aVtR" src="{{STATIC_URL}}themes/img/cmnts-default-avatar.jpg" itemprop="image"></a>
				{% endif %}
			</div>
			<div class="cMnT-bDy dev-cParent">
				<div class="cMnT-bDy-iN">
					<header class="cMnT-hD">
    					<span class="pBlSr" itemtype="http://schema.org/Person"><a href="{% url 'user_profile' comment.user.username %}" itemprop="url"><span itemprop="author">{{comment.user.get_full_name }}</span></a></span>
    					{% if cc_rating %}
						{% if object|class_name == 'Business' or object|class_name == 'Restaurants' or object|class_name == 'Movies' or object|class_name == 'Product' %}
						{% if comment.rating or comment.rating == '0.00'%}
