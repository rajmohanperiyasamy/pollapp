						<button  name="button" value="{% trans "Post" %}" class="btn disabled dev-postBtn" type="button"><span>Post</span></button>
					</span>
				{% endif %}
                <!--button type="button"  class="btn disabled dev-postBtn save_comment" disabled="disabled" id="id_post_cmnt_btn">Post</button-->    
            </div>
        </div>
    </div>
</form>

