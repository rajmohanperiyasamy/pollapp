{% load i18n %}
<div id="ajax_content_loading" style="display:none;padding-top:96px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Newsletter Settings' %}</p>
</div>
<div id="weather_api_settings_div" class="group">
    <form action="{% url 'admin_update_newsletter_api_settings' %}" name="mform" id="mform" method="post" class="add_category">{% csrf_token %}
    	<div class="fields hform">
				<section id="signin-with-facebook" class="section">
                	<div class="section-head">
                    	<label for="doubleclick" class="check-in">
                    		<span class="check-button tttxt-e" title="{% trans 'Select' %}">
                    			<span class="cform-radio-container">
                    				<input id="world_weather" name="option" type="radio" value="MC"  {% if nwsltr_obj.option == 'MC' %} checked="checked" {% endif %} {% if not nwsltr_obj.option %} checked="checked" {% endif %}>
									<span class="cform-radio-element"></span>
								</span>
							</span>
						</label>
						<h3 class="section-title tttxt-e checkbox-left" title="{% trans 'Select' %}">
							<span class="favicon"><img src="http://mailchimp.com/favicon.ico" /></span>
							{% trans 'MailChimp' %}
						</h3>
                   	</div>
                    <div class="section-content tgle" id="MC" style="{% if nwsltr_obj.option == 'CC' %}display:none;{% endif %}">
                    	<div class="section-explanation">
                	<p class="ltxt80">{% trans 'Fill the API Key, Unique ID and link URL in the below text box.' %}</p>
               	</div>  
                    	<div class="fields hform">
            				<div id="meta-tags" class="field-group">
								<div class="field text-field">	
				                	<div class="label"><label>{% trans 'API Key'%}<span class="required-field">*</span></label></div>	
				                	<div class="value"><input type="text" style="width:300px;" value="{% if nwsltr_obj.option == 'MC' %}{{ nwsltr_obj.api_key }}{% endif %}" id="id_api_key_MC" placeholder="" maxlength="400" name="api_key" onkeyup="if($(this).hasClass('error')){$(this).removeClass('error');}" autocomplete="off"></div>	
				                </div>
								<div class="field text-field">	
				                	<div class="label"><label>{% trans 'List Id'%}<span class="required-field">*</span></label></div>	
				                	<div class="value"><input type="text" style="width:300px;" value="{% if nwsltr_obj.option == 'MC' %}{{ nwsltr_obj.list_id }}{% endif %}" id="id_listid_MC" placeholder="" maxlength="400" name="list_id" onkeyup="if($(this).hasClass('error')){$(this).removeClass('error');}" autocomplete="off"></div>	
				                </div>
								<div class="field text-field">	
				                	<div class="label"><label>{% trans 'Subscibe URL'%}<span class="required-field">*</span></label></div>	
				                	<div class="value"><input type="text" style="width:300px;" value="{% if nwsltr_obj.option == 'MC' %}{{ nwsltr_obj.subscribe_url }}{% endif %}" id="id_suburl_MC" placeholder="" maxlength="400" name="sub_url" onkeyup="if($(this).hasClass('error')){$(this).removeClass('error');}" autocomplete="off"></div>	
				                </div>
								
            				</div>                 
						</div>
					</div>                                                                  
    		</section> <!-- end section --> 

