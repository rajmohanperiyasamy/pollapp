                                        	<h2>{% trans 'Home' %}</h2>
                                        </div>
                                        <div class="cat-list-column action-buttons">
                                        	<div class="group">
                                            	<a href="{% url 'admin_portal_bookmarks_seo_update' %}" title="{% trans 'Update Meta Tags' %}" class="tttxt-n bm-add-gadget"><span class="icon icon-edit"></span></a>
                                                <!--a title="{% trans 'View Stats' %}" class="tttxt-n" href="#"><span class="icon icon-stats"></span></a-->
                                            </div>                                                            
                                        </div>
									</div>
								</li>
							</ul>                                                                                                                                     
