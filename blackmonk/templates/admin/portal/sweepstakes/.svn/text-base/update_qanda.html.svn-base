{% load i18n %}
<div id="ajax_content_loading" style="display:none;padding-top:222px;padding-bottom:222px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Q&A ...' %}</p>
</div>
<div class="main_col" id="ajax_content">
	<script type="text/javascript">
	$(document).ready(function(){
		$("#mform").validate({
			highlight: function(element, errorClass){$(element).parent('div').parent('div').addClass('field-error');$(element).addClass('error');},
			unhighlight: function(element, errorClass){$(element).parent('div').parent('div').removeClass('field-error');$(element).removeClass('error');},
			errorPlacement: function(error, element){},
		   	rules:{
		    	title: "required",
				description: "required",
				postion: "required number"				
		   	}
		});
		$('.numbersOnly').live("keyup",function(){
			this.value = this.value.replace(/[^0-9]/g,'');
		});
		$('.numbersOnly').live("focusout",function(){
			if(this.value==''){this.value=0}
		});
	});
	</script>
	{% if msg %}<div class="message">{{msg}}</div>{% endif %}
	{% if form.errors %}
		<div class="messageerror" >
			<strong>{% trans 'There is a problem with your submission' %}</strong>
            <ul style="list-style:square;margin-left:20px;">
           		{% for field in form %}
           			{% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
          	 	{% endfor %}
			</ul>
	 	</div>
	{% endif %}
	<div id="add-new-category" class="modal-form" style="width:560px !important;">
    <form action="{% url 'admin_portal_sweepstakes_qanda_update' %}{% if qanda %}?id={{qanda.id}}{% endif %}" name="mform" id="mform" method="post" class="add_category">{% csrf_token %}
    	<div class="fields hform">
            <div class="field-group">              
                <div class="fields-head">
                    <p class="ltxt80">{% trans "Try to add the qandaegory that best fits in the sweepstakes module. For example: 'How do i enter ?'" %}</p>
				 	{% if qanda and not new_qanda %}<input type="hidden" value="{{qanda.id}}" id="id_id"/>{% endif %}
                </div>             
                <div class="field text-field">
                    <div class="label"><label>{% trans 'Question' %}<span class="required-field">*</span></label></div>
                    <div class="value">{{ form.title }}</div>
                </div> 
            </div>            
            <div id="meta-tags" class="field-group">
                <div class="field text-field">	
                	<div class="label"><label>{% trans 'Postion' %}</label></div>	
                	<div class="value">{{form.position}}</div>	
                </div>
			    <div class="field text-field">	
                	<div class="label"><label>{% trans 'Answer' %}</label></div>	
                	<div class="value">{{ form.description }}</div>	
                </div>
            </div>            
		</div>    
        <div class="modal-base form-submit group">
		   	<button role="button" class="cform-button {% if qanda and not new_qanda %}prime{% endif %} right" type="button" onclick="save_qanda(0)"><span class="cform-button-text">{% if qanda %}{% trans 'Update' %}{% else %}{% trans 'Done' %}{% endif %}</span></button>
			{% if not qanda or new_qanda %}<button role="button" class="cform-button prime right" type="button" style="margin-right:10px !important;" onclick="save_qanda(1)"><span class="cform-button-text">{% trans 'Save &#38; Add Another' %}</span></button>{% endif %}
		</div>           
    </form>
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/inline.js"></script>
</div>
