{% load i18n %}
<div id="ajax_content_loading" style="display:none;padding-top:222px;padding-bottom:222px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Settings' %}</p>
</div>
<div id="ajax_content" class="group">
	{% if form.errors %}
	<div class="messageerror" style="background:#FCF4F4;padding:10px;color:#FF9902; box-shadow:0 0 2px rgba(0, 0, 0, 0.1);border-bottom:1px solid #e1e1e1">
		<strong style="font-weight:bold;">{% trans 'There is a problem with your submission' %}</strong>
	    <ul style="list-style:square;margin-left:20px;">
	   		{% for field in form %}
	   			{% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
	  	 	{% endfor %}
		</ul>
	</div>
	{% endif %}
	<form action="{% url 'admin_portal_jobs_settings' %}" name="mform" id="mform" method="post">{% csrf_token %}
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Job-a-matic Api Url' %}</h3>
                    <p class="ltxt80">{% trans 'Please enter the selected part' %}<a href="javascript:void(0)">( http://api.simplyhired.com/a/jobs-api/xml-v2/ )</a> {% trans 'of your api url generated from Job a Matic' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.jurl }}
                    </div>	
                </div>
            </div>   
        </div> 
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Job-a-matic domain' %}</h3>
                    <p class="ltxt80">{% trans ' A required value, which is used to identify publishers that choose to continue accepting Job-a-matic job postings.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.jbd }}
                    </div>	
                </div>
            </div>   
        </div> 
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Publisher ID' %}</h3>
                    <p class="ltxt80">{% trans 'A required value, which identifies your publisher account.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.pshid }}
                    </div>	
                </div>
            </div>   
        </div> 
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Search Style' %}</h3>
                    <p class="ltxt80">{% trans ' A required search configuration value.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.ssty }}
                    </div>	
                </div>
            </div>   
        </div> 
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Configuration Flag' %}</h3>
                    <p class="ltxt80">{% trans ' A required search configuration value.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.cflg }}
                    </div>	
                </div>
            </div>   
        </div> 
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Location' %}</h3>
                    <p class="ltxt80">{% trans 'A URL-encoded collection of terms indicating the geographic filter for the results. Location can be a zipcode, state, or city-state combination. Currently, there is no support for multiple location search' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.location }}
                    </div>	
                </div>
            </div>   
        </div> 
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Miles' %}</h3>
                    <p class="ltxt80">{% trans 'A parameter indicating the number of miles from the location specified by the Location parameter above. Miles value should be a number from "1" to "100". Miles represents the radius from the zip code, if specified in Location, or an approximate geographical "city center" if only city and state are present. If Miles is not specified, search will default to a radius of 25 miles.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.miles }}
                    </div>
                </div>
            </div>   
        </div> 
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Post a Job Button Url' %}</h3>
                    <p class="ltxt80">{% trans 'Enter job posting button url.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.post_buttonurl }}
                    </div>	
                </div>
            </div>   
        </div> 
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Page Title (SEO)' %}</h3>
                    <p class="ltxt80">{% trans 'Write a short page title. This title is used in the search results of search engines like Google.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                        <input class="fxl" title="{% trans 'Meta Title' %}" name="meta_title" id="id_meta_title" type="text" placeholder="{% trans 'Enter a short title' %}" {% if seo_form.errors %} value="{{seo_form.meta_title.data}}" {% else %}value="{{seo.seo_title}}" {% endif %}  >
                    </div>	
                </div>
            </div>   
        </div> 
        <div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Page Description (SEO)' %}</h3>
                    <p class="ltxt80">{% trans 'In one or two short sentences to describe your page. This description is used in the search results of search engines like Google.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                        <textarea rows="8" id="id_meta_description" name="meta_description" class="fxl" placeholder="{% trans 'Enter description' %}" onkeyUp="txtarealimit(this,400);">{% if seo_form.errors %}{{seo_form.meta_description.data}}{% else %}{{seo.seo_description}} {% endif %}</textarea>
                    </div>	
                </div>
            </div>   
        </div>
        <section class="form-submit trp-bg right" style="padding-right:0;">
			<button role="button" class="cform-button" id="url_validate_button" type="button" style="margin-right:3px;"><span class="cform-button-text">{% trans 'Validate API' %}</span></button>
        	<button role="button" class="cform-button prime right" type="button" onclick="save_settings()"><span class="cform-button-text">{% trans 'Save Changes' %} </span></button>
		</section>                                             
	</form>                                       	   
</div>