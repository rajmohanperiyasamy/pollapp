{% extends "admin/admin_base.html" %}
{% load tabs %}
{% load i18n %}
{% load get_example %}
{% block navigation %}
	{% activetab 'topnav' 'site' %}
	{{ block.super }}
{% endblock %}
{% block pagetitle %}{% trans 'Job Settings' %} {% endblock %}
{% block head %}
<script type="text/javascript" src="{{STATIC_URL}}js/jquery/bm.common.js"></script>
<script type="text/javascript" src="{{ STATIC_URL }}js/jquery/jquery.validate.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	$("#mform").validate({
		highlight: function(element, errorClass){$(element).parent('div').parent('div').addClass('field-error');$(element).addClass('error');},
		unhighlight: function(element, errorClass){$(element).parent('div').parent('div').removeClass('field-error');$(element).removeClass('error');},
		errorPlacement: function(error, element){},
	   	rules:{
			meta_title:"required",
			meta_description:"required",
			jurl:"required",
			jbd:"required",
			pshid:"required",
			ssty:"required",
			cflg:"required",
			miles:"number",
			post_buttonurl:"required",
	   	}
	});
	$('#url_validate_button').live("click",function(){
		var flag=$("#mform").validate().form();
		if(flag){
		var dataString='jurl='+escape($('#id_jurl').val());
		dataString+='&jbd='+escape($('#id_jbd').val());
		dataString+='&pshid='+escape($('#id_pshid').val());
		dataString+='&ssty='+escape($('#id_ssty').val());
		dataString+='&cflg='+escape($('#id_cflg').val());
		dataString+='&post_buttonurl='+escape($('#id_post_buttonurl').val());
			$.ajax({
				type:'post',
				url:'{% url 'admin_validate_jobs_api' %}',
				data:dataString,
				success:function(data){
					if(data=='1'){show_msg('API specified is valid.','alert-success')}
					else{show_msg('Oops!!! API specified is invalid..','alert-error')}
				}
			
			})
		}
	});
	
});
function save_settings(){
	var flag = $('#mform').validate().form()
	if(flag){
		var miles=escape($('#id_miles').val());
		if(miles==''){miles='25';}
		var dataString='&meta_title='+encodeURIComponent($('#id_meta_title').val());
		dataString+='&meta_description='+encodeURIComponent($('#id_meta_description').val());
		
		dataString+='&jurl='+escape($('#id_jurl').val());
		dataString+='&jbd='+escape($('#id_jbd').val());
		dataString+='&pshid='+escape($('#id_pshid').val());
		dataString+='&ssty='+escape($('#id_ssty').val());
		dataString+='&cflg='+escape($('#id_cflg').val());
		dataString+='&location='+escape($('#id_location').val());
		dataString+='&miles='+miles;
		dataString+='&post_buttonurl='+escape($('#id_post_buttonurl').val());
		dataString+='&location='+escape($('#id_location').val());
		
		var height = $('#ajax_content').parent('.page-wrap').height();
		$('#ajax_content').parent('.page-wrap').css('height',height)
		$('#ajax_content').fadeOut('fast', function() {
			$('#ajax_content_loading').show();
			$("html, body").animate({ scrollTop: 0 }, "slow");
	    });
		$.ajax({
		type: "POST",
		url: "{% url 'admin_portal_jobs_settings' %}",
		data: dataString,
		dataType:'JSON',
		success: function(data){
				setTimeout( function() {
					show_msg(data.msg,data.mtype);
					$('#ajax_content_loading').fadeOut('fast', function() {
						$('#ajax_content').html(data.html);
						$('#ajax_content').fadeIn();
						$('#ajax_content').parent('.page-wrap').removeAttr('style');
				    });
				}, 500 );
			}
		});
	}
}
</script>
{% endblock %}
{% block content %}
<div id="admin_wrapper">
	<div id="admin-platform" class="group">
    	<div class="header-bar">
        	<div id="nav-roll">
            	<ul>
                	<li id="modules-index" class="first"><a href="{% url 'admin_portal' %}" style="z-index:9"><span class="icon"></span>{% trans 'Affiliate' %}</a></li>
					<li><a href="{% url 'admin_portal_jobs_settings' %}" style="z-index:8">{% trans 'Jobs' %}</a></li>
				</ul>
			</div>
		</div>
		<div id="core-wraper" class="group">
        	<div class="admin-main col_12">
            	{% block leftnavigation %}
					{% activetab 'topnav' 'prog' %}
					{% activetab 'leftnav' 'jobs' %}
					{% activetab 'leftnavsub' 'jobs_settings' %}
					{{ block.super }}
				{% endblock %}
                <div class="left-nav-list-bg"></div>
                <div class="col_9 mr_0">
					<div class="page-wrap">
                    	<div class="page-head br_0">
                        	<h2>{% trans 'Jobs Settings' %}</h2>
                            <p class="ltxt80">{% trans "Jobs settings page gives you a quick snapshot of what's been updated in the Jobs Staff CP. You can check this page to track if any new categories, jobs providers are been added." %}</p>
						</div>
                        {% include 'admin/portal/jobs/include_settings.html' %}
                  	</div>
              	</div>                       
      		</div>                            
            {% include 'admin/portal/jobs/faq.html' %}                        
		</div>                                                    
	</div>
</div>
{% endblock %}
				
				
				
				
				
				
				
				
				
				