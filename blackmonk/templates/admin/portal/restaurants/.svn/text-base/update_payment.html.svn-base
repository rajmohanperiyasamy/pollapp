{% load i18n %}
<div id="ajax_content_loading" style="display:none;padding:6em;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Payment Options' %}</p>
</div>
<div class="main_col" id="ajax_content">
	<script type="text/javascript">
		$(document).ready(function(){
			$("#mform").validate({
				highlight: function(element, errorClass){$(element).parent('div').parent('div').addClass('field-error');$(element).addClass('error');},
				unhighlight: function(element, errorClass){$(element).parent('div').parent('div').removeClass('field-error');$(element).removeClass('error');},
				errorPlacement: function(error, element){},
			   	rules:{
			    	name: "required"				
			   	}
			});
		});
	</script>
	
	{% if msg %}<div class="message">{{msg}}</div>{% endif %}
	{% if form.errors %}
		<div class="messageerror" >
			<strong>{% trans 'There is a problem with your submission' %}</strong>
            <ul style="list-style:square;margin-left:20px;">
           		{% for field in form %}
           			{% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
          	 	{% endfor %}
			</ul>
	 	</div>
	
	{% endif %}
	
	
	<div id="add-new-payment" class="modal-form" style="width:560px !important;">
    <form action="{% url 'admin_portal_restaurants_payment_update' %}{% if cat %}?id={{cat.id}}{% endif %}" name="mform" id="mform" method="post" class="add_category">{% csrf_token %}
    	<div class="fields hform">
            <div class="field-group">              
                <div class="fields-head">
                    <p class="ltxt80">{% trans "Add a payment mode. For Eg: Cash, Check, Credit Card, VISA, MasterCard " %}</p> 
                </div>             
                <div class="field text-field">
                    <div class="label"><label>{% trans 'Payment Option' %}<span class="required-field">*</span></label></div>
                    <div class="value">
                    	{{ form.name }}
						{% if cat %}<input type="hidden" value="{{cat.id}}" name="id" id="id_id">{% endif %}
					</div>
                </div> 
                
            </div>            

             </div>            
		</div>   
		
		 
        <div class="modal-base form-submit group">
		   	<button role="button" class="cform-button {% if cat %}prime{% endif %} right" type="button" onclick="save_payment(0)"><span class="cform-button-text">{% if cat %}{% trans 'Update' %}{% else %}{% trans 'Done' %}{% endif %}</span></button>
			{% if not cat %}<button role="button" class="cform-button prime right" type="button" style="margin-right:10px !important;" onclick="save_payment(1)"><span class="cform-button-text">{% trans 'Save &#38; Add Another' %}</span></button>{% endif %}
		</div>           
    </form>
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/inline.js"></script>
</div>
