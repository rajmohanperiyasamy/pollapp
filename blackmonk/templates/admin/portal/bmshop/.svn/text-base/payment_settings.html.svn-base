{% extends "admin/admin_base.html" %}
{% load tabs %}
{% load i18n %}
{% load get_example %}
{% block navigation %}
    {% activetab 'topnav' 'site' %}
    {{ block.super }}
{% endblock %}
{% block pagetitle %}{% trans 'Payment Gateways' %} {% endblock %}
{% block head %}
<script type="text/javascript" src="{{STATIC_URL}}js/jquery/bm.common.js"></script>
<script type="text/javascript" src="{{ STATIC_URL }}js/jquery/jquery.validate.min.js"></script>
<script type="text/javascript">
	function save_payment(){
		var cid = $('#id_currency').val();
			if($('#id_paypal').is(':checked')){
				var dataString='paypal='+$('#id_paypal').val();
			}
			if($('#id_googlecheckout').is(':checked')){
				if($('#id_paypal').is(':checked')){
					dataString+='&googlecheckout='+$('#id_googlecheckout').val();
				}else{
					var dataString='googlecheckout='+$('#id_googlecheckout').val();
				}
			}
			$('#map-options').hide();
			$('#ajax_content_loading').show();
			$.ajax({
			type: "POST",
			url: "{% url 'admin_bmshop_payment_settings' %}",
			data: dataString,
			dataType:'JSON',
			success: function(data){
					$('#ajax_content_loading').hide();
					$('#map-options').show().html(data.html);
					if(data.status){
						show_msg(data.msg,data.mtype);
					}
				}	
			});
	}

</script>
{% endblock %}
{% block content %}
<div id="admin_wrapper">
    <div id="admin-platform" class="group">
        <div class="header-bar">
            <div id="nav-roll">
                <ul>
                    <li id="modules-index" class="first"><a href="{% url 'admin_portal' %}" style="z-index:9"><span class="icon"></span>{% trans 'Modules' %}</a></li>
                    <li><a href="{% url 'admin_bmshop_main_settings' %}" style="z-index:8">{% trans 'Shop' %}</a></li>
                    <li><a href="{% url 'admin_bmshop_payment_settings' %}" style="z-index:7">{% trans 'Payment Gateways' %}</a></li>
                </ul>
            </div>
        </div>
        <div id="core-wraper" class="group">
            <div class="admin-main col_12 configuration">
                {% block leftnavigation %}
                    {% activetab 'topnav' 'site' %}
                    {% activetab 'leftnav' 'bmshop' %}
					{% activetab 'leftnavsub' 'bm_payment' %}
                    {{ block.super }}
                {% endblock %}
                <div class="left-nav-list-bg"></div>
                <div class="col_9 mr_0">
                    <div class="page-wrap">
                        <div class="page-head br_0">
                            <h2>{% trans 'Payment Gateways' %}</h2>
                            <p class="ltxt80">{% trans 'Select your payment gateways like PayPal and Google Checkout for receiving payments.' %}</p>
                        </div>
                        {% include 'admin/portal/bmshop/include_paymentsetting.html' %}
                       </div>
                 </div>
               </div>
	           <div id="aside" class="side-bar col_4">
					<div class="section">
						 <h5>{% trans 'Highlights' %}</h5>
				        <h6>{% trans 'Payment Gateways' %}</h6>
						<p>{% trans 'Set up payment gateways like PayPal & Google Checkout for receiving payments.' %}</p>
					</div>                                    
				</div> 
        </div>
    </div>
</div>
{% endblock %}