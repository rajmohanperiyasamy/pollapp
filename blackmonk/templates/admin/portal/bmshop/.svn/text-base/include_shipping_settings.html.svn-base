{% load i18n %}
<div id="ajax_content_loading" style="display:none;padding-top:222px;padding-bottom:222px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Settings' %}</p>
</div>
<script>
	
$(document).ready(function(){
	$("#mform").validate({
		highlight: function(element, errorClass){$(element).parent('div').parent('div').addClass('field-error');$(element).addClass('error');},
		unhighlight: function(element, errorClass){$(element).parent('div').parent('div').removeClass('field-error');$(element).removeClass('error');},
		errorPlacement: function(error, element){},
	   	rules:{
			name:{required:true},
			price:{required:false,number:true}
	   	}
	});
	
});
	
</script>
<div id="ajax_content" class="group">
	{% if form.errors %}
	<div class="messageerror" style="background:#FCF4F4;padding:10px;color:#FF9902; box-shadow:0 0 2px rgba(0, 0, 0, 0.1);border-bottom:1px solid #e1e1e1">
		<strong style="font-weight:bold;">{% trans 'There is a problem with your submission' %}</strong>
	    <ul style="list-style:square;margin-left:20px;">
	   		{% for field in form %}
	   			{% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
	  	 	{% endfor %}
		</ul>
	</div>
	{% endif %}
	<form action="{% url 'admin_bmshop_shipping_settings' %}" name="mform" id="mform" method="post">{% csrf_token %}
	<ul class="overview-list group">
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Logistics Partner' %}</h3>
                    <p class="ltxt80">{% trans 'Enter  your preferred logistics partner name.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.name }}
                    </div>	
                </div>
            </div>   
        </div> 
        <div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Description' %}</h3>
                    <p class="ltxt80">{% trans 'A short description about your logistics partner.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{ form.description }}
                    </div>	
                </div>
            </div>   
        </div>
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Shipping Charges' %}</h3>
                    <p class="ltxt80">{% trans 'Enter the shipping charges for the delivery of the product.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                    	{{form.price}}
                    </div>	
                </div>
            </div>   
        </div>
        <section class="form-submit trp-bg">
        	<button role="button" onclick="save_settings()" class="cform-button prime right" type="button" ><span class="cform-button-text">{% trans 'Save Changes' %} </span></button>
		</section>   
	  </ul>                                          
	</form>                                       	   
</div>
