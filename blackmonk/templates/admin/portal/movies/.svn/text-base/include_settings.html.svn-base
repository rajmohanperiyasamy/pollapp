{% load i18n %}
<div id="ajax_content_loading" style="display:none;padding-top:222px;padding-bottom:222px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Settings' %}</p>
</div>
<div id="ajax_content" class="group">
	{% if seo_form.errors %}
		<div class="messageerror" style="border: 1px solid #E1E1E1;">
			<span style="font-size:1.2em;font-weight:250;"><strong>There is a problem with your submission</strong></span>
	        <ul>
			 {% for field in seo_form %}
			 	{% if field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
	 		 {% endfor %}
			</ul>
		</div>
	{% endif %}
	<form action="{% url 'admin_portal_movies_settings' %}" name="mform" id="mform" method="post">{% csrf_token %}
	<ul class="overview-list group">
			<li class="list-item-container group">
            	<div class="col-dt">
                	<div class="col-inner">
                    	<h5>{% trans 'Movies listed' %}</h5>
                    </div>
				</div>
                <div class="col-dd">
                	<div class="col-inner">
                    	<h3>{{movies}}</h3>
                        <p><span class="ltxt80">{% trans 'Active' %}:{{active_movies}}</span><span class="divider13">|</span><span class="ltxt80">{% trans 'Inactive' %}: {{inactive_movies}}</span></p>
                        <a href="{% url 'staff_movie_listing' %}" class="action edit-icon tttxt start-modal" title="{% trans 'Manage Movies' %}">{% trans 'Manage' %}</a>
                   	</div>                                                    
              	</div>
			</li> 
			<li class="list-item-container group">
            	<div class="col-dt">
                	<div class="col-inner">
                    	<h5>{% trans 'Theatres listed' %}</h5>
                    </div>
				</div>
                <div class="col-dd">
                	<div class="col-inner">
                    	<h3>{{theatres}}</h3>
                        <a href="{% url 'staff_theatre_listing' %}" class="action edit-icon tttxt start-modal" title="{% trans 'Manage Theaters' %}">{% trans 'Manage' %}</a>
                   	</div>                                                    
              	</div>
			</li> 
			<li class="list-item-container group">
            	<div class="col-dt">
                	<div class="col-inner">
                    	<h5>{% trans 'Genre' %}</h5>
                    </div>
				</div>
                <div class="col-dd">
                	<div class="col-inner">
                    	<h3>{{genre}}</h3>
                        <a href="{% url 'admin_portal_movies_genre' %}" class="action edit-icon tttxt start-modal" title="{% trans 'Manage Genre' %}">{% trans 'Manage' %}</a>
                   	</div>                                                    
              	</div>
			</li> 
			<li class="list-item-container group">
            	<div class="col-dt">
                	<div class="col-inner">
                    	<h5>{% trans 'Critic Source' %}</h5>
                    </div>
				</div>
                <div class="col-dd">
                	<div class="col-inner">
                    	<h3>{{criticsource}}</h3>
                        <a href="{% url 'admin_portal_movies_criticsource' %}" class="action edit-icon tttxt start-modal" title="{% trans 'Manage Critic Source' %}">{% trans 'Manage' %}</a>
                   	</div>                                                    
              	</div>
			</li>
			<li class="list-item-container group">
            	<div class="col-dt">
                	<div class="col-inner">
                    	<h5>{% trans 'Language' %}</h5>
                    </div>
				</div>
                <div class="col-dd">
                	<div class="col-inner">
                    	<h3>{{langauge}}</h3>
                        <a href="{% url 'admin_portal_movies_language' %}" class="action edit-icon tttxt start-modal" title="{% trans 'Manage Langauge' %}">{% trans 'Manage' %}</a>
                   	</div>                                                    
              	</div>
			</li> 
        </ul>
		<div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Page Title (SEO)' %}</h3>
                    <p class="ltxt80">{% trans 'Write a short page title. This title is used in the search results of search engines like Google.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                        <input class="fxl" title="{% trans 'Meta Title' %}" name="meta_title" maxlength="200" id="id_meta_title" type="text" placeholder="{% trans 'Enter a short title' %}" {% if seo_form.errors %} value="{{seo_form.meta_title.data}}" {% else %}value="{{seo.seo_title}}" {% endif %}  >
                    </div>	
                </div>
            </div>   
        </div> 
        <div class="fields vform no_head"> 
            <div id="meta-tags" class="field-group">
                <div class="fields-head">
                    <h3>{% trans 'Page Description (SEO)' %}</h3>
                    <p class="ltxt80">{% trans 'In one or two short sentences to describe your page. This description is used in the search results of search engines like Google.' %}</p> 
                </div>  
                <div class="field text-field">	
                    <div class="value">
                        <textarea rows="8" id="id_meta_description" name="meta_description" maxlength="400" class="fxl" placeholder="{% trans 'Enter description' %}" onkeyUp="txtarealimit(this,400);">{% if seo_form.errors %}{{seo_form.meta_description.data}}{% else %}{{seo.seo_description}} {% endif %}</textarea>
                    </div>	
                </div>
            </div>   
        </div>
        <section class="form-submit trp-bg">
        	<button role="button" class="cform-button prime right" type="button" onclick="save_settings()"><span class="cform-button-text">{% trans 'Save Changes' %} </span></button>
		</section>                                             
	</form>                                       	   
</div>