{% extends "admin/admin_base.html" %}
{% load tabs %}
{% load i18n %}
{% load get_example %}
{% block navigation %}
	{% activetab 'topnav' 'site' %}
	{{ block.super }}
{% endblock %}
{% block pagetitle %}{% trans 'Discussion Overview' %} {% endblock %}
{% block head %}
{% endblock %}
{% block content %}
<div id="admin_wrapper">
	<div id="admin-platform" class="group">
    	<div class="header-bar">
        	<div id="nav-roll">
            	<ul>
                	<li id="modules-index" class="first"><a href="{% url 'admin_portal' %}" style="z-index:9"><span class="icon"></span>{% trans 'Modules' %}</a></li>
                    <li><a href="{% url 'admin_portal_forum' %}" style="z-index:8">{% trans 'Discussion' %}</a></li>
				</ul>
			</div>
		</div>
		<div id="core-wraper" class="group">
        	<div class="admin-main col_12">
            	{% block leftnavigation %}
					{% activetab 'leftnav' 'forum' %}
					{% activetab 'leftnavsub' 'forum_overview' %}
					{{ block.super }}
				{% endblock %}
                <div class="left-nav-list-bg"></div>
                <div class="col_9 mr_0">
					<div class="page-wrap">
                    	<div class="page-head br_0">
                        	<h2>{% trans 'Discussion' %}</h2>
                            <p class="ltxt80">{% trans "Web application that holds discussions and postings.  Unlike a blog, this is generally a community with lots of user inputs" %}.</p>
						</div>
                        <ul class="overview-list group">
							<li class="list-item-container group">
                            	<div class="col-dt">
                                	<div class="col-inner">
                                    	<h5>{% trans "Topic's listed" %}</h5>
                                    </div>
								</div>
                                <div class="col-dd">
                                	<div class="col-inner">
                                    	<h3>{{no_forum}}</h3>
                                        <p><span class="ltxt80">{% trans 'Active' %}:{{no_active_forum}}</span><span class="divider13">|</span><span class="ltxt80">{% trans 'Inactive' %}: {{no_inactive_forum}}</span></p>
                                        <a href="{% url 'admin_portal_forum_view' %}" class="action edit-icon tttxt start-modal" title="{% trans 'Manage Forum' %}">{% trans 'Manage' %}</a>
                                   	</div>                                                    
                              	</div>
							</li> 
							<li class="list-item-container group">
                            	<div class="col-dt">
                                	<div class="col-inner">
                                    	<h5>{% trans 'Categories' %}</h5>
                                   	</div>
                               	</div>
                                <div class="col-dd">
                                	<div class="col-inner">
                                    	<h3>{{no_category}}</h3>
                                        <a href="{% url 'admin_portal_forum_category' %}" class="action edit-icon tttxt start-modal" title="{% trans 'Manage Categories' %}">{% trans 'Manage' %}</a>
                                  	</div>                                                    
								</div>
							</li>
							<li class="list-item-container group">
                            	<div class="col-dt">
                                	<div class="col-inner">
                                    	<h5>{% trans "Threads listed" %}</h5>
                                   	</div>
                               	</div>
                                <div class="col-dd">
                                	<div class="col-inner">
                                    	<h3>{{no_topic}}</h3>
                                        <p><span class="ltxt80">{% trans 'Active' %}:{{no_active_topic}}</span><span class="divider13">|</span><span class="ltxt80">{% trans 'Inactive' %}: {{no_inactive_topic}}</span></p>
                                        <a href="#" class="action edit-icon tttxt start-modal" title="{% trans "Manage Topic's" %}">{% trans 'Manage' %}</a>
                                  	</div>                                                    
								</div>
							</li>
                        </ul>
                  	</div>
              	</div>                       
      		</div>                            
            <div id="aside" class="side-bar col_4">
            	<div class="section">
                            	</div>                                    
        	</div>                            
		</div>                                                    
	</div>
</div>
{% endblock %}
				
				
				
				
				
				
				
				
				
				