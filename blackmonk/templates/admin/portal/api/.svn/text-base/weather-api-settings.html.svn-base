{% load i18n %}
<div id="ajax_content_loading" style="display:none;padding-top:96px;text-align:center;">
    <img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Weather Settings' %}</p>
</div>
<div id="weather_api_settings_div" class="group">
    <form action="{% url 'admin_api_update_weather_api_settings' %}" name="mform" id="mform" method="post" class="add_category">{% csrf_token %}
        <div class="fields hform">
                <section id="signin-with-facebook" class="section">
                    <div class="section-head">
                        <label for="doubleclick" class="check-in">
                            <span class="check-button tttxt-e" title="{% trans 'Select' %}">
                                <span class="cform-radio-container">
                                    <input id="world_weather" name="option" type="radio" value="WO"  {% if wx_api_obj.option == 'WO' %} checked="checked" {% endif %} {% if not wx_api_obj.option %} checked="checked" {% endif %}>
                                    <span class="cform-radio-element"></span>
                                </span>
                            </span>
                        </label>
                        <h3 class="section-title tttxt-e checkbox-left" title="{% trans 'Select' %}">
                            <span class="favicon"><img src="http://www.worldweatheronline.com/img/favicon.ico" /></span>
                            {% trans 'World Weather Online' %}
                        </h3>
                       </div>
                    <div class="section-content tgle" id="WO" style="{% if wx_api_obj.option == 'WN' %}display:none;{% endif %}">
                        <div class="fields hform">
                            <div id="meta-tags" class="field-group">
                                <div class="field text-field">
                                    <div class="label"><label>{% trans 'Weather URL'%}<span class="required-field">*</span></label></div>
                                    <div class="value"><input type="text" style="width:300px;" value="{% if wx_api_obj.option == 'WO' %}{{wx_api_obj.weather_xml}}{% endif %}" id="id_weather_url_WO" placeholder="http://free.worldweatheronline.com/feed/weather.ashx?q=xxx&format=xml&num_of_days=5&key=xxxxxxx" maxlength="400" name="weather_url" onkeyup="if($(this).hasClass('error')){$(this).removeClass('error');}" autocomplete="off"></div>
                                </div>

                                <div class="field text-field">
                                    <div class="label"><label>{% trans 'Weather Unit'%}</label></div>
                                    <div class="value">
                                        <span class="check-button tttxt-e">
                                            <span class="cform-radio-container">
                                                <input id="id_wunitc_WO" name="WO_wunit" type="radio" value="cel"  {% if wx_api_obj.option == 'WO' %}{% if wx_api_obj.weather_unit == 'cel' %} checked="checked" {% endif %}{% else %}checked="checked"{% endif %} >
                                                <span class="cform-radio-element"></span>
                                            </span>
                                        </span>
                                        <span>{% trans 'Celsius' %}</span>

                                        <span class="check-button tttxt-e">
                                            <span class="cform-radio-container">
                                                <input id="id_wunitf_WO" name="WO_wunit" type="radio" value="fh" {% if wx_api_obj.option == 'WO' %}{% if wx_api_obj.weather_unit == 'fh' %} checked="checked" {% endif %}{% endif %}>
                                                <span class="cform-radio-element"></span>
                                            </span>
                                        </span>
                                        <span>{% trans 'Fahrenheit' %}</span>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </section> <!-- end section -->

            <section id="signin-with-twitter" class="section">
                <div class="section-head">
                    <label for="openid" class="check-in">
                        <span class="check-button tttxt-e" title="{% trans 'Select' %}">
                            <span class="cform-radio-container">
                                <input id="weather_network" name="option" type="radio" value="WN" {% if wx_api_obj.option == 'WN' %} checked="checked" {% endif %}>
                                <span class="cform-radio-element"></span>
                            </span>
                        </span>
                    </label>
                    <h3 class="section-title tttxt-e checkbox-left" title="{% trans 'Select' %}">
                        <span class="favicon"><img src="http://www.theweathernetwork.com/common/images/global/favicon.ico" /></span>
                        {% trans 'Weather Network' %}
                    </h3>
                </div>
                <div class="section-content tgle" id="WN" style="{% if wx_api_obj.option == 'WO' %}display:none;{% endif %}{% if not wx_api_obj.option %}display:none;{% endif %}">
                      <div class="fields hform">
                        <div id="meta-tags" class="field-group">
                            <div class="field text-field">
                                <div class="label"><label>{% trans 'Weather URL'%}<span class="required-field">*</span></label></div>
                                <div class="value"><input type="text" style="width:300px;" value="{% if wx_api_obj.option == 'WN' %}{{wx_api_obj.weather_xml}}{% endif %}" id="id_weather_url_WN" placeholder="http://clients.weather.ca/yourdomain.com/example.xml" maxlength="400" name="weather_url" onkeyup="if($(this).hasClass('error')){$(this).removeClass('error');}" autocomplete="off"></div>
                            </div>

                            <div class="field text-field">
                                <div class="label"><label>{% trans 'Weather Unit'%}</label></div>
                                <div class="value">
                                    <span class="check-button tttxt-e">
                                        <span class="cform-radio-container">
                                            <input id="id_wunitc_WN" name="WN_wunit" type="radio" value="cel" {% if wx_api_obj.option == 'WN' %}{% if wx_api_obj.weather_unit == 'cel' %} checked="checked" {% endif %}{% else %}checked="checked"{% endif %}>
                                            <span class="cform-radio-element"></span>
                                        </span>
                                    </span>
                                    <span>{% trans 'Celsius' %}</span>

                                    <span class="check-button tttxt-e">
                                        <span class="cform-radio-container">
                                            <input id="id_wunitf_WN" name="WN_wunit" type="radio" value="fh" {% if wx_api_obj.option == 'WN' %}{% if wx_api_obj.weather_unit == 'fh' %} checked="checked" {% endif %}{% endif %}>
                                            <span class="cform-radio-element"></span>
                                        </span>
                                    </span>
                                    <span>{% trans 'Fahrenheit' %}</span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section> <!-- end section -->

        </div>
        <div class="modal-base form-submit group trp-bg">
              <button role="button" class="cform-button prime right" type="button" onclick="save_weather_setting();"><span class="cform-button-text">{% trans 'UPDATE' %}</span></button>
        </div>
    </form>
</div>
