{% extends "admin/admin_base.html" %}
{% load tabs %}
{% load i18n %}
{% load get_example %}
{% block navigation %}
	{% activetab 'topnav' 'config' %}
	{{ block.super }}
{% endblock %}
{% block pagetitle %}{% trans 'Location/Map Venue' %} {% endblock %}
{% block head %}
<link rel="stylesheet" href="{{STATIC_URL}}ui/css/colorbox.css" type="text/css" />
<script type="text/javascript" src="{% url 'django.views.i18n.javascript_catalog' %}"></script>
<script type="text/javascript">
$(document).ready(function(){
	$('#master-check').click(function(){
		if($("#master-check").is(':checked')){$(".check-overflow").attr('checked',true);}
		else{$(".check-overflow").attr('checked',false);}
	});
});
</script>
<script type="text/javascript">
function delete_venue(ids){
	if(ids==0){
		var ids=[];
		$('.check-overflow').each(function(){
			if($(this).is(':checked')){
				ids.push($(this).val());
			}
		});
	}
	if(ids=='' || ids==null){
		alert(gettext('Please select Zipcode(s).'))
	}
	else{
		if(confirm(gettext('Are you sure want to delete seleced Venue(s) ?'))){
			$.ajax({
			type: "GET",
			url: "{% url 'admin_portal_locality_venue_delete' %}",
			data: 'id='+ids,
			dataType:'JSON',
			success: function(data){
					if(data.status==1){
						try{
							$('#div_'+ids).remove();
						}catch(ex){}
						for(i=0;i<ids.length;i++){
							$('#div_'+ids[i]).remove();
						}
					}
					show_msg(data.msg,data.mtype);
				}
			});
		}
	}
}
function goto_page(page){
	window.location.replace('{{url}}?page='+page);
}
</script>
{% endblock %}
{% block content %}
<div id="admin_wrapper">
	<div id="admin-platform" class="group">
    	<div class="header-bar">
        	<div id="nav-roll">
            	<ul>
                	<li id="config-index" class="first"><a href="{% url 'admin_configuration' %}" style="width:120px;z-index:9"><span class="icon"></span>{% trans 'Settings' %}</a></li>
                    <li><a href="{% url 'admin_portal_locality' %}" style="z-index:8">{% trans 'Location/Map' %}</a></li>
                    <li><a href="{% url 'admin_portal_locality_venue' %}" style="z-index:7">{% trans 'Venue' %}</a></li>
				</ul>
			</div>
		</div>
		<div id="core-wraper" class="group">
        	<div class="admin-main col_12">
        		{% block leftnavigation %}
					{% activetab 'topnav' 'config' %}
					{% activetab 'leftnav' 'location' %}
					{% activetab 'leftnavsub' 'loc_venue' %}
					{{ block.super }}
				{% endblock %}
                <div class="left-nav-list-bg"></div>
                <div class="col_9 mr_0">
					<div class="page-wrap">
                    	<div class="page-head br_0">
                        	<h2>{% trans 'Venue' %}</h2>
							<p class="ltxt80">{% trans "Update or add new venues/locations here. These venues/locations will be helpful in auto-suggestion while adding a listing in any module." %}</p>
						</div>
                        <div id="article-categories" class="cat-list group">
                        	<section class="toolbars">
                            	<div class="group">
                                	<ul class="toolbar left">
                                    	<li class="mas-check"><span class="checkbox-wrap tttxt-n" title="{% trans 'Select' %}">
										<span class="cform-checkbox-container"><input type="checkbox" id="master-check" name="master-check" class="master-check"><span class="cform-checkbox-element"></span></span>
										</span></li>  
                                        <li class="mas-delete"><a href="javascript:delete_venue(0)" title="{% trans 'Delete' %}" class="tttxt-n inactive"><span class="icon icon-delete"></span></a></li>
									</ul>
                                    <span style="float:right">
                                    	<a href="{% url 'admin_portal_locality_venue_add' %}" title="{% trans 'Add New Venue' %}" class="btn-txt-inline-prime"><span class="btn-txt">{% trans 'Add New Venue' %}</span></a>
									</span>
								</div>
							</section>
                            <ul class="cat-list-container" id="venue">
                            	{% for atr in venues %}
								<li class="cat-list-row" id="div_{{atr.id}}">
                                	<div class="cat-list-row-inner group">
                                    	<span class="checkbox-wrap">
										<span class="cform-checkbox-container"><input type="checkbox" id="category" value="{{atr.id}}" name="category" class="check-overflow"><span class="cform-checkbox-element"></span></span>
										</span>
                                        <div class="cat-list-column cat-name"><h3>{{atr}}</h3></div>
                                        <div class="cat-list-column action-buttons">
                                        	<div class="group">
                                            	<!--a title="{% trans 'View Stats' %}" class="tttxt-n" href="#"><span class="icon icon-stats"></span></a-->
                                                <a href="{% url 'admin_portal_locality_venue_edit' atr.id %}" title="{% trans 'Update Venue' %}" class="tttxt-n"><span class="icon icon-edit"></span></a>
                                                <a title="{% trans 'Delete' %}" class="tttxt-n" href="javascript:delete_venue({{atr.id}})"><span class="icon icon-delete"></span></a>
                                            </div>                                                            
										</div>
									</div>
								</li>  
								{% endfor %} 
								<li>
									{% include 'admin/portal/locality/pagenation.html' %}
								</li>         
							</ul>  
                    	</div>
                	</div>
            	</div>                       
            </div>
			<div id="aside" class="side-bar col_4 mr_0">
    			<div class="section">
					<h5>Venue</h5>
					<p>Update or add new venues/locations from the Venue tab. These venues/locations will be helpful in auto-suggestion while adding a venue in any module.</p>
				</div>
			</div>
			{#% include 'admin/portal/locality/faq.html' %#}                              
		</div>                                                    
	</div>
</div>
{% endblock %}
				
				
				
				
				
				
				
				
				
				