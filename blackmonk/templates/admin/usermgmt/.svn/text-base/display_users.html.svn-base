{% extends "admin/admin_base.html" %}
{% load tabs %}
{% load i18n %}
{% load get_example %}
{% block navigation %}
	{% activetab 'topnav' 'user' %}
	{{ block.super }}
{% endblock %}
{% block pagetitle %}{% trans 'Manage Users' %} {% endblock %}
{% block head %}
{% endblock %}
{% block content %}
        <input type="hidden" name="url" id="id_hidden_url" value="{% url 'admin_ajax_display_users' %}">    
        <input type="hidden" name="url" id="id_hidden_action_url" value="{% url 'admin_ajax_users_action' %}">    
        <input type="hidden" name="change_status_url" id="id_change_status_url" value="{% url 'admin_ajax_change_user_status' %}">
        <input type="hidden" name="deactivate_status_url" id="id_deactivate_status_url" value="{% url 'admin_ajax_deactivate_user_status' %}">
        <input type="hidden" name="delete_url" id="id_delete_url" value="{% url 'admin_ajax_delete_user' %}">
		<div id="admin_wrapper">
                <div id="admin-platform" class="group">
                
                    <div class="header-bar">
                    <!--h2>{% trans 'Events' %}</h2-->
                    </div>
                    
					<div id="core-wraper" class="group">
                        <div class="admin-main col_12">
							<div class="page-wrap" style="padding: 20px 40px;">
                                <div class="page-head br_0">
									<span class="pLrT"> <a href="{% url 'admin_display_staff' %}"> + Manage Staff</a></span>
                                    <h2>{% trans 'User Account' %}</h2>
                                    <p class="ltxt80">{% trans 'The accounts below represent logins to your website users.You can delete any user from the list or create a new user account.' %}</p>   
								</div>
                                <div id="member-account-list" class="cat-list group">
                                	<section class="toolbars">
                                        <div class="group">
                                        	<ul class="toolbar left">
                                            	<li class="master-check tool">
													<span class="cform-checkbox-container"><input type="checkbox" value="true"  id="master_check" name="master-check"><span class="cform-checkbox-element"></span></span>
												</li>
                                    		    <li class="tool">
                                                    <select data-placeholder={% trans 'Action' %}  id="actionSelect" class="select-menu" onchange="$('#id_action').val($(this).val()),action();" style="width:140px;">
                                                      <option value="#"></option> 
                                                          <option value="DEL">{% trans 'Delete' %}</option>
                                                      <optgroup label="Status">
                                                         	<option value="UACTS">{% trans 'Activate' %}</option>
                                                          	<option value="UDCTS">{% trans 'Deactivate' %}</option>
                                                      </optgroup>
                                                    </select>
                                                </li>
                                                <li class="tool">                                                       
                                                    <label class="inline-block">{% trans 'Sort by:' %}</label>
                                                    <select id="orderSelect" class="select-menu" onchange="$('#id_sort').val($(this).val()),$('#id_pagentn').val('1'),filter_content();">
	                                                  <option value="-date_joined">{% trans 'Registration Date' %}</option>
	                                                  <option value="display_name">{% trans 'Name' %}</option>
	                                                </select>                                                    
                                                </li>
                                            </ul>
                                        	<div class="right">
                                                <form class="search-items" id="member-search-form" action="javascript:void(0);">
                                                    <input type="text" class="search-field" name="search_keyword" placeholder="{% trans 'Search Users' %}" id="id_search_keyword">
                                                    <button type="button" class="cform-button search-button" onclick="if($('#id_search_keyword').val()!=''){$('#id_search').val('true'),$('#id_pagentn').val('1'),filter_content();}" role="button"><span class="search-icon">{% trans 'Search' %}</span></button>
                                                </form>                                                
											</div>
                                        </div>
                                    </section>
									<div id="ajax_content_loading" style="display:none;padding-top:96px;text-align:center;">
										<img src="{{STATIC_URL}}ui/images/global/loading.gif"><br><p>{% trans 'Loading...' %}</p>
									</div>
									<div id="id_users_listing">                                
                            			{% include 'admin/usermgmt/ajax-display-users.html' %} 
                               		</div>  
                            	</div>
							</div>                                                       
                        </div>
						<div id="aside" class="side-bar col_4">
							<div class="section" id="role-mngt">
								<div class="pDb15">
									<a href="{% url 'admin_ajax_create_user' %}" target="_blank" class="btn-txt-prime bm-add-gadget bTn-iLn" title="Add a new User"><span class="btn-txt" id="">Add User</span></a>
									<a href="{% url 'admin_import_users_csv' %}" class="btn-txt-prime csv tttxt-n bTn-iLn pD03" title="Add Users via CSV"><span class="icon  bTn-iLn-uPlD"></span></a>
									<a href="{% url 'admin_export_users_to_csv' %}" class="btn-txt-prime csv tttxt-n bTn-iLn pD03"  title="Export Users to CSV"><span class="icon bTn-iLn-iMpT"></span></a>
								</div>									
	                        	{% include 'admin/usermgmt/admin-users-side-nav.html' %}
	                        </div>                           
							{% include 'admin/usermgmt/admin-users-faq.html' %} 
                           
						</div>
					</div>                                                    
				</div>
			</div>
	<script type="text/javascript" src="{{ STATIC_URL }}js/jquery/jquery.validate.min.js"></script>
	<script type="text/javascript" src="{{ STATIC_URL }}js/admin/admin_users.js"></script>
	<script type="text/javascript">
	$(document).ready(function(){
	$('#master_check').live("click",function(){
		if($("#master_check").is(':checked')){$(".cbox").attr('checked',true);}
		else{$(".cbox").attr('checked',false);}
	});
	$('.cbox').live("click",function(){
		var flag=true;
		$('.cbox').each(function(){if($(this).is(':checked')==false){flag=false}})
		if(flag){$("#master_check").attr('checked',true);}
		else{$("#master_check").attr('checked',false);}
	});
	});
	</script>
{% endblock %}	