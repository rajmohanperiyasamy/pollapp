{% load i18n %}
<div id="ajax_content_loading_admin" style="display:none;padding-top:222px;padding-bottom:350px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Staff Information' %}</p>
</div>
<div class="main_col" id="ajax_content">
	<script type="text/javascript">
	$(document).ready(function(){
		$("#mform").validate({
			highlight: function(element, errorClass){$(element).parent().parent().addClass('field-error');$(element).addClass('error');},
			unhighlight: function(element, errorClass){$(element).parent().parent().removeClass('field-error');$(element).removeClass('error');},
			errorPlacement: function(error, element){},
		   	rules:{
				first_name:"required",
				email: {required:true,email:true},
				password:"required",			
		   	}
		});
	});
	</script>
	{% if msg %}<div class="message">{{msg}}</div>{% endif %}
	{% if form.errors %}
		<div class="messageerror" >
			<strong>{% trans 'There is a problem with your submission' %}</strong>
            <ul style="list-style:square;margin-left:20px;">
           		{% for field in form %}
           			{% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
          	 	{% endfor %}
			</ul>
	 	</div>
	{% endif %}
	<div id="add-new-category" class="modal-form">
    <form action="{% url 'admin_ajax_promote_user' uid %}" name="mform" id="mform" method="post" class="add_category">{% csrf_token %}
    	<div class="fields hform">
            <div class="field-group">
				<div class="fields-head">
                	<h3>You are promoting the following User to Staff:</h3>
				</div>                    
                <div class="field text-field">
                    <div class="label"><label>{% trans 'First Name' %}</label></div>
                    <div class="value">
                    	{{ form.display_name }}
					</div>
                </div> 
				<div class="field text-field">
                    <div class="label"><label>{% trans 'Email' %}</label></div>
                    <div class="value">
                    	{{ form.useremail }}
					</div>
                </div>
            </div>          
            <div id="meta-tags" class="field-group">
				<div class="fields-head">
                	<h3>Assign a Role</h3>
                    <p class="ltxt80">{% trans "Assigning a role to the user allows him/her to access the preferred modules which the role permits" %}</p> 
				</div>                    
                <div class="field text-field">	
                	<div class="label"><label>{% trans 'Select a Role' %}</label></div>	
                	<div class="value">{{form.groups}}</div>	
                </div>
            </div>            
		</div>    
        <div class="modal-base form-submit group">
		   	<button role="button" class="cform-button prime right" type="button" onclick="promote_user();"><span class="cform-button-text">{% trans 'Promote' %}</span></button>
		</div>           
    </form>
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/inline.js"></script>
</div>
