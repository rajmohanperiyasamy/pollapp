{% load ds_utils available_apps i18n tabs %}
{% load_availableapp_obj %}
{% load_availableapps_obj %}
<!DOCTYPE html>
<html>
<head>
	<title>{{ globalsettings.domain }} {% block pagetitle %}{% endblock %}</title>
	<meta charset="UTF-8" />
	<meta http-equiv="imagetoolbar" content="no" />
	<meta name="description" content="" />
	
	<link href="{% if globalsettings.fav_ico %}{{ globalsettings.fav_ico.url }}{% else %}{{STATIC_URL}}themes/green/images/ico/16X16-BM_ICON.png{% endif %}" rel="icon">

	<link rel="stylesheet" href="{{STATIC_URL}}ui/css/colorbox.css" type="text/css" />
    <link rel="stylesheet" href="{{STATIC_URL}}ui/css/base.css" type="text/css" />
    <link rel="stylesheet" href="{{STATIC_URL}}ui/css/admin.css" type="text/css" />
	<link rel="stylesheet" type="text/css" href="{{ STATIC_URL }}ui/css/chosen.css">
    <script type="text/javascript" src="{% url 'django.views.i18n.javascript_catalog' %}"></script>
    <!--[if lt IE 9]><link rel="stylesheet" type="text/css" href="{{STATIC_URL}}ui/css/admin-ielt9.css" /><![endif]-->
    <!--[if lte IE 8]> <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->  
	
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
	<script type="text/javascript">
		function close_msg(){
			$('#alert_bar').removeClass('active');
			setTimeout(function(){
				$('#alert_bar').css('display','none');
				$('#alert_bar').removeClass();
				$('#alert_bar').addClass('alert-bar');
			},200);
		}
		function show_msg(msg,mtype){
			$('#alert_bar').addClass(mtype);
			$('#message').html(msg);
			$('#alert_bar').show();
			setTimeout(function(){$('#alert_bar').addClass('active');},100);
			setTimeout(function(){close_msg();},6000);
		}
	</script>
	{% block head %}{% endblock %}
</head>
<body class="admin loggedin">
	<section class="account-bar">
    	<div id="site-name">
        	<h1 class="account-logo">
        		<a href="/admin/">
        			<span>{% if globalsettings.site_title %}{{ globalsettings.site_title }}{% else %}{{globalsettings.domain}}{% endif %}</span>
				</a>
			</h1>
		</div>
        <nav class="primary-nav">
			<ul>
	        	<li class="home"><a class="tttxt-n" href='/' title="Home">{% trans 'Home' %}</a></li>
     		  <li class="divider"><span>|</span></li>
                  <li class="modules">
                    <a href="javascript:void(0)" class="arrow-down"></a>
				<ul class="sub-menu">
                    	<li class="dropdown-arrow"></li>
                        {% for app in availableapps_objs %}
							{% if app.app %}
								<li><a href="/{{app.slug}}/">{{app.name}}</a></li>
							{% endif %}
						{% endfor %}
						<li class="divider"></li>
						{% for app in availableapps_objs %}
							{% if not app.app %}
								<li><a href="/{{app.slug}}/">{{app.name}}</a></li>
							{% endif %}
						{% endfor %}
                    </ul>
				</li>
			</ul>
		</nav>
		<nav class="account-nav">
    		<ul>
			<li class="user-icon"><a href="#"><span class="avatar"></span>{% trans 'Your account' %}</a></li>
            	<li class="divider"><span>|</span></li>
              	<li class="user-options">
					<a href="javascript:void(0)" class="arrow-down"></a>
                    <ul class="user-sub-menu">
                        <li class="dropdown-arrow"></li>
						<li><a href="{% url 'staff_view_payment_history' %}">{% trans 'Transaction History' %}</a></li>
                        <!--li><a href="#">{% trans 'Invite friends' %}</a></li-->
	                    <li class="divider"></li>
						<li><a href="{% url 'staff_home' %}">{% trans 'Switch to StaffCP' %}</a></li>
						<li><a href="{% url 'user_home' %}">{% trans 'Switch to UserCP' %}</a></li>
						<!--li><a href="{% url 'admin_configuration_emailtemplates' %}">{% trans 'E-mail settings' %}</a></li--> 
	                    <li class="divider"></li>
						<li><a href="{% url 'usermgmt_viewprofile' %}">{% trans 'Profile' %}</a></li>
	                    <!--li><a href="{% url 'user_profile' request.user.profile_slug %}">{% trans 'Your public profile' %}</a></li-->                        
	                    <li class="divider"></li>
	                    <li><a href="{% url 'signout' %}">{% trans 'Logout' %}</a></li>
					</ul>                    
				</li>                    
        	</ul>
    	</nav>
    	
    	<!--Utility Navigaition-->
	    <ul id="menu">
            <li  class="mv-menu">
                <a href="javascript:void(0);" class="icon-config"><!--img src="{{ STATIC_URL }}ui/images/icons/bm-utility.png"/--></a>
                <ul>
                    <li><a href="javascript:void(0);" onclick="clear_site_wide_cache('{% url 'admin_configuration_clear_website_cache' %}');">{% trans 'Clear Cache' %}</a></li>
					{% if aa_news.status == 'A' %}
						<li><a href="javascript:void(0);" onclick="update_news('{% url 'admin_portal_update_news' %}');">{% trans 'Fetch News' %}</a></li>
					{% endif %}
                    <li><a href="javascript:void(0);" onclick="reindex_global_search('{% url 'admin_configuration_update_global_search_index' %}');">{% trans 'Reindex Global Search' %}</a></li>
                    <!--li><a href="javascript:void(0);">{% trans 'Email Settings' %}</a></li-->
                </ul>
            </li>
	    </ul> 
    	
	</section>
	<header>
		
		{% block navigation %}
			{% include 'admin/admin_top_navi.html' %}
		{% endblock %}
		
	</header>    
	<div id="content">
    	<div id="content_inner">
			<!--div id="alert_bar" class="alert-bar {% if mtype %}{{mtype}}{% endif %}" style="{% if not msg %}display:none;{% endif %}">
				<div class="fit_width group">
	    			<span class="icon-alert"></span><h4 id="message">{% if msg %}{{msg}}{% endif %}</h4><a href="javascript:close_msg()" class="dismiss">Ã—</a>
				</div>
			</div-->
    		{% block content %}
				{% block leftnavigation %}
					{% ifactivetab "topnav" "site" %}
						{% include 'admin/portal/left_navi.html' %}
					{% else %}
						{% ifactivetab "topnav" "config" %}
							{% include 'admin/configuration/left_navi.html' %}
						{% else %}
							{% ifactivetab "topnav" "design" %}
								{% include 'admin/design/left-navigation.html' %}
							{% else %}
								{% ifactivetab "topnav" "apiconfig" %}
									{% include 'admin/api_left_navi.html' %}
								{% else %}
									{% ifactivetab "topnav" "prog" %}
										{% include 'admin/prog_left_navi.html' %}
									{% endifactivetab %}
								{% endifactivetab %}
							{% endifactivetab %}
						{% endifactivetab %}
					{% endifactivetab %}
				{% endblock %}
			{% endblock %}
			<div id="footer">
            	<p id="copyright">
                    {{ globalsettings.copyright }}
                    <a title="Privacy Policy" target="_blank" href="/privacy-policy.html">{% trans 'Privacy' %}</a>
                    <a title="Terms of Service" target="_blank" href="/terms-of-use.html">{% trans 'Terms' %}</a>
                </p>
            </div> 
			{% for message in messages %}
			<div id="alert_bar" class="alert-bar {% if message.tags %}alert-{{ message.tags }} active{% endif %}" style="{% if not message %}display:none;{% endif %}">
				<div class="fit_width group">
		        	<span class="icon-alert"></span>
					<span class="icon-close" onclick="close_msg();">&times;</span>
		            <h4 id="message">{% if message %}{{ message }}{% endif %}</h4>
		        </div>
		    </div>
			{% empty %}
			<div id="alert_bar" class="alert-bar" style="display:none;">
				<div class="fit_width group">
		        	<span class="icon-alert"></span>
					<span class="icon-close" onclick="close_msg();">&times;</span>
		            <h4 id="message"></h4>
		        </div>
		    </div>
			{% endfor %}                                               
		</div>
	</div>                                    
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/jquery.colorbox.js"></script>    
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/application.js"></script>
	<script type="text/javascript" src="{{STATIC_URL}}js/jquery/bm.common.js"></script>
	<script type="text/javascript" src="{{STATIC_URL}}js/admin/admin_utils.js"></script>
	<script type="text/javascript">
		$(document).ready(function(){
            $('body').css('pointer-events','');
            {% if messages %}
                setTimeout(function(){close_msg()},6000);
            {% endif %}
        });
	</script>
</body>
</html>
