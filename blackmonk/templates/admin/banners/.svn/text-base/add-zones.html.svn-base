{% load i18n %}
<div id="ajax_content_loading" style="display:none;padding-top:222px;padding-bottom:222px;text-align:center;">
    <img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Saving Zones' %}</p>
</div>
<div class="main_col" id="ajax_content">
    <script type="text/javascript">
    $(document).ready(function(){
        $("#mform").validate({
            ignore:'',                   
            highlight: function(element, errorClass){$(element).parent('div').parent('div').addClass('field-error');$(element).addClass('error');},
            unhighlight: function(element, errorClass){$(element).parent('div').parent('div').removeClass('field-error');$(element).removeClass('error');},
            errorPlacement: function(error, element){},
               rules:{
                name: "required",
                slot: "required",
                sections:"required",
                height:{required:true,number:true},    
                width:{required:true,number:true}            
               }
        });
		$('#id_slot').bind("change", function(){
			$("#mform").validate().element($(this));
		});
		$('#id_sections').bind("change", function(){
			$("#mform").validate().element($(this));
		});
    });
    function resize_cb(){
      $.colorbox.resize();                   
    }
    </script>
    {% if msg %}<div class="message">{{msg}}</div>{% endif %}
    {% if form.errors %}
        <div class="messageerror" >
            <strong>{% trans 'There is a problem with your submission' %}</strong>
            <ul style="list-style:square;margin-left:20px;">
                   {% for field in form %}
                       {% if  field.errors%}<li>{%for error in field.errors%}{{error}}{%endfor%}</li>{% endif %}
                   {% endfor %}
            </ul>
         </div>
    {% endif %}
    <div id="add-new-category" class="modal-form" style="width:560px !important;">
    <form action="{% url 'admin_configuration_banners_add_zone' %}{% if zone_obj %}?bzid={{zone_obj.id}}{% endif %}" name="mform" id="mform" method="post" class="add_category">{% csrf_token %}
        <div class="fields hform">
            <div class="field-group">              
                <div class="fields-head">
                    <p class="ltxt80">{% trans "Enter the banner zone details which include name,height and width " %}</p> 
                </div>             
                <div class="field text-field">
                    <div class="label"><label>{% trans 'Name' %}<span class="required-field">*</span></label></div>
                    <div class="value">
                        {{ form.name }}
                    </div>
                </div> 
                
                <div class="field text-field">
                    <div class="label"><label>{% trans 'Modules' %}<span class="required-field">*</span></label></div>
                    <div class="value">
                        {{form.sections}}
                    </div>
                </div> 
                
                <div class="field text-field">
                    <div class="label"><label>{% trans 'Slot' %}<span class="required-field">*</span></label></div>
                    <div class="value">
                        {{ form.slot }}
                    </div>
                </div> 
                <div class="field text-field">
                    <div class="label"><label>{% trans 'Width' %}<span class="required-field">*</span></label></div>
                    <div class="value">
                        {{ form.width }} <span>px</span>
                    </div>
                </div> 
                <div class="field text-field">
                    <div class="label"><label>{% trans 'Height' %}<span class="required-field">*</span></label></div>
                    <div class="value">
                        {{ form.height }} <span>px</span>
                    </div>
                </div> 
            </div>            
        </div>    
        <div class="modal-base form-submit group">
            <button role="button" class="cform-button prime right" type="button" style="margin-right:10px !important;" onclick="save_banner_zone()"><span class="cform-button-text">{% trans 'Save' %}</span></button>
        </div>           
    </form>
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/inline.js"></script>
</div>
