{% load i18n %}
{% for zone in banner_zones %}
    <li class="cat-list-row" id="div_{{zone.id}}">
        <div class="cat-list-row-inner group">
            <span class="checkbox-wrap">
                <span class="cform-checkbox-container"><input type="checkbox" id="category" value="{{zone.id}}" name="category" class="check-overflow"><span class="cform-checkbox-element"></span></span>
            </span>
            <div class="cat-list-column cat-name"><h3>{{zone}}</h3></div>
            <div class="cat-list-column action-buttons">
                <div class="group">
                    <!--a title="{% trans 'View Stats' %}" class="tttxt-n" href="#"><span class="icon icon-stats"></span></a-->
                    <a href="{% url 'admin_configuration_banners_add_zone' %}?bzid={{zone.id}}" title="{% trans 'Update Zone' %}" class="tttxt-n bm-add-gadget update_zone_link"><span class="icon icon-edit"></span></a>
                    <a title="{% trans 'Delete' %}" class="tttxt-n" href="javascript:delete_zone({{zone.id}})"><span class="icon icon-delete"></span></a>
                </div>                                                            
            </div>
        </div>
    </li>  
{% endfor %}   