{% load i18n %}
<!-- CALENDER -->
<link rel="stylesheet" type="text/css" href="{{ STATIC_URL }}themes/green/css/LE_MetaId99.css">
<!-- CALENDER -->
<div id="ajax_content_loading" style="display:none;padding-top:222px;padding-bottom:222px;text-align:center;">
	<img src="{{STATIC_URL}}ui/images/global/loading-s.gif"><br><p>{% trans 'Loading ...' %}</p>
</div>
<div class="main_col" id="ajax_content">
	<div id="add-new-category" class="modal-form" style="width:560px !important;">
    <form id="offlineform" method="post" action="{{submit_url}}" class="add_category">{% csrf_token %}
        <div class="field-group cr_wmr">   
            <div class="fields-head">
                <h4>Payment Details:</h4>
            </div>     
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block;">Item</label>
                    <label style="font-weight: bold;">: {{obj}}</label>
                </div>
            </div>      
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block;">Created By</label>
                    <label style="font-weight: bold;">: <a href="{% url 'user_profile' obj.created_by.profile_slug %}" target="_blank">{{obj.created_by}}</a></label>
                </div>
            </div>
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block;">Payment Amount</label>
                    <label style="font-weight: bold;">: {{globalsettings.currency}}{{payobj.amount|floatformat:2}}</label>
                </div>
            </div>
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block;">Last date for Payment</label>
                    <label style="font-weight: bold;">: {{payobj.expiry_date|date:'m/d/Y'}}</label>
                </div>
            </div>      
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block;">Offline Payment Status</label>
                    <label style="font-weight: bold;">: {{payobj.get_status}}</label>
                </div>
            </div>      
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block;">Request for</label>
                    <label style="font-weight: bold;">: {{request_for}}</label>
                </div>
            </div>
            {% with payobj.get_moredetails as moredetails %}{% if moredetails %} 
            <div class="field text-field">
                <div class="label">
                    <label style="display: inline-block;">Contact Info</label>
                    <label style="font-weight: bold; margin-left: 20px;display: block;">
                    <p>
                    phone: {{moredetails.phone_no}}<br>
                    address: {{moredetails.address}}<br>
                    email: {{moredetails.email}}<br>
                    </p>
                    </label>
                </div>
            </div>      
            {% endif %}{% endwith %}
        </div>     
        <div class="field-group cr_wmr">   
            <div class="fields-head">
                <h4>Payment type:</h4>
            </div>
            <div class="field text-field">
                <div class="label">
                    <span class="cform-radio-container"><input type="radio" value="cash" class="checkbox mrl0"  name="paytype"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Cash' %}</label>
                    <span class="cform-radio-container"><input type="radio" value="cheque" class="checkbox mrl0"  name="paytype"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Cheque' %}</label>
                    <span class="cform-radio-container"><input type="radio" value="dd" class="checkbox mrl0"  name="paytype"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Demand draft' %}</label>
                    <input type="text" placeholder="Check/DD No" id="cheque_no">
                </div>
            </div>
        </div>
        <div class="field-group cr_wmr">
            <div class="fields-head">
                <h4>Select an Action:</h4>
            </div>
            <div class="field text-field">
                <div class="value">
                    <span class="cform-radio-container"><input type="radio" value="AP" class="checkbox mrl0"  name="offpayaction"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Approve payment & Publish the listing' %}</label>
                </div>
            </div>
            <div class="field text-field">
                <div class="value">
                    <span class="cform-radio-container"><input type="radio" value="BP" class="checkbox mrl0"  name="offpayaction"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Cancel payment & Publish the listing' %}</label>
                </div>
            </div>      
            <div class="field text-field">
                <div class="value">
                    <span class="cform-radio-container"><input type="radio" value="BD" class="checkbox mrl0"  name="offpayaction"><span class="cform-radio-element"></span></span><label for="all-day">{% trans 'Cancel payment & set the listing Drafted' %}</label>
                </div>
            </div>
        </div>            
        <div class="modal-base form-submit group">
		   	<button role="button" class="cform-button prime right" type="button" onclick="offline_payment()"><span class="cform-button-text">{% trans 'Update' %}</span></button>
		</div>           
    </form>
    <script type="text/javascript" src="{{STATIC_URL}}ui/js/inline.js"></script>
</div>
