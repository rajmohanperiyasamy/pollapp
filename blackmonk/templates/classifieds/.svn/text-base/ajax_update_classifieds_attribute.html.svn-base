{% load i18n %}
<div class="fields-head"></div>
<div class="field text-field">	
    <div class="label"><label for="">{% trans 'Price' %} ({{globalsettings.currency}})</label></div>
    <div class="value"><input type="text" class="fl"  placeholder="Price" id="id_classified_price" value="{% if classified.classified_price %}{{classified.classified_price}}{% endif %}" name="classified_price"></div>
</div>
{% if attribute_dict %}
{% for att in attribute_dict %}	
	<div class="clear"></div><div class="field {% ifequal att.type 'S' %}select-field{% else %}text-field{% endifequal %}">	
    	<div class="label"><label for="">{{att.name}}</label></div>
		<div class="value">
		{% ifequal att.type "C" %} <input type="text" name="extra_{{att.id}}" maxlength="99" value="{% if att.ex_values %}{{ att.ex_values }}{% endif %}" class="fl" /> {% endifequal %}
		{% ifequal att.type "K" %} 
	   			{% for at in att.default_values %}
        	    	<span class="add-options">
						<span class="cform-checkbox-container">
							<input type="checkbox" name="extra_{{att.id}}" value= "{{ at }}" 
								{% if att.ex_values %}
									{% for t in  att.ex_values %}
										{% if t == at %}checked="checked"{% endif %}
									{% endfor %}
								{% endif %}
							/>
						<span class="cform-checkbox-element"></span></span>
						<label style="display:inline;font-weight:normal;"> {{ at }}</label>
					</span>
	   			{% endfor %}
		{% endifequal %}
		{% ifequal att.type "S" %}
			<select name="extra_{{att.id}}" class="select-menu append_attr fl">
				{% for at in att.default_values %}
					<option {% if att.ex_values %}{% if att.ex_values == at %}selected="selected"{% endif %}{% endif %}	> {{ at }} </option>
				{% endfor %}
			</select>
		{% endifequal %}
		{% ifequal att.type "R" %}
   			{% for at in att.default_values %}
				<span class="add-options">
					<span class="cform-radio-container"><input type="radio" name="extra_{{att.id}}" value="{{ at }}" {% if att.ex_values %}{% if att.ex_values == at %}checked="checked"{% endif %}{% endif %} /><span class="cform-radio-element"></span></span>
					<label style="display:inline;font-weight:normal;"> {{ at }}</label>
				</span>
   			{% endfor %}
		{% endifequal %}
	</div>
</div>
{% endfor %}
{% endif %}
