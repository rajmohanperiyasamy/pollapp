@charset "utf-8";
/* CSS Document */
/* Selectmenu
----------------------------------*/
.bm-selectmenu { display: block; position:relative; height:2.6em; text-decoration: none; overflow:hidden;background-image: -moz-linear-gradient(center top , #FCFCFC, #F6F6F6);
	border-radius: 2px;border: 1px solid #C8C8C8;color: #EEEEEE;font-weight: bold; outline: medium none;font-family:Arial, Helvetica, sans-serif;font-size: 1em; }
.bm-selectmenu-icon { position:absolute; right:6px; margin-top:-8px; top: 50%; background:url(../images/icons/down-arrow.png) no-repeat scroll 49% 7px transparent;
	height: 16px;width: 16px;background-repeat: no-repeat;display: block;overflow: hidden;text-indent: -99999px; }
.bm-selectmenu-menu { padding:0; margin:0; list-style:none; position:absolute; top: 0; visibility: hidden; overflow: auto; border:1px solid #bbb; }
.bm-selectmenu-open { visibility: visible; z-index:99999; }
.bm-selectmenu-menu li { padding:0; margin:0; display: block; border:none; font-weight: normal !important; }
.bm-selectmenu-menu li:hover{ border:none;background:none repeat 0 0 #F2F2F2;box-shadow:none;color: #333333;}
.bm-selectmenu-menu li a,.bm-selectmenu-status {line-height: 1.4em; display:block; padding:.3em 1em; outline:none; text-decoration:none; color:#454545}
.bm-selectmenu-status { line-height: 2em; }
.bm-selectmenu-menu-items {background: none repeat scroll 0 0 #FFF;border-bottom: 1px solid #C2C2C2;box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);font-size: 1em;}
.bm-selectmenu:hover, .bm-selectmenu:focus{ border: 1px solid #C6C6C6;background-color: #F8F8F8;background-image: -moz-linear-gradient(center top , #FCFCFC, #F1F1F1);
	color: #333333;box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
}
