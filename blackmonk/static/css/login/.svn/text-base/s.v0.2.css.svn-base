@charset "utf-8";
/* CSS Document */
body,td,div,p,a,font,span,ul {
	font: 90.85% arial,sans-serif
}
a{
	color:#5c93dc
}
body {margin-top:1em}
hr{clear:both;border:none;color:#f3f3f3;background:none;height:0; padding:0; margin:0}
h2{
	padding:0;
	margin:.3em 0;
	line-height:normal;
	color:#5c93dc
}
/* Login form */
.login-container {padding: 20px;width: auto;background-color: #FFF;margin-top: 30px;border-left: 1px solid #e5e5e5;}
.login-container h3 {margin: 0 0 1.5em 0;color: black;padding-bottom: 8px;}
.login-container span {font-weight:normal;font-size:12px;color:#7d7d7d;padding-top:3px;}
.login-container span a {text-transform:uppercase;}
input.radio {position: relative;top: 2px;margin-left: 8px;}
.checkbox {border: 0;}
dl.login-form {position: relative;width: 320px;}
dl.login-form dt {clear: both;width: 100px;padding: 2px 2px 1px 0;text-align: right;float: left;}
dl.login-form dd {float: left;display: inline;width: 210px;margin: 0 0 8px 0;}
dl.login-form dd.confirm {padding: 3px 3px 2px 3px;font-size: 0.95em;height: auto;}
dd.confirm p {line-height: 1.2em;width: 204px;margin: 0;}
div.col{width:185px; float:left; margin-right:8px;}
div.col img{border:1px solid #999}
span.hint {color:#CC3300;background:url(../../images/design/global/error_bg.gif) repeat;font-size: 11px;width: 164px;_width: 170px !important;padding:1px 3px 2px 3px;_margin-top:-1px !important;display: block;line-height: 1.2em;}
.login-field {width: 170px;	padding: 1px 0;/*	background: transparent;*/}

input.error { border: 1px solid #CC3300; }
select.error { border: 1px solid #CC3300; }

em.error {
  color:#CC3300;
	background:	url(../../images/design/global/error_bg.gif) repeat;
	font-size: 11px;width: 164px;
	font-style:normal;
	_width: 170px !important;padding:1px 3px 2px 3px;_margin-top:-1px !important;display: block;
	line-height: 1.2em;
}
